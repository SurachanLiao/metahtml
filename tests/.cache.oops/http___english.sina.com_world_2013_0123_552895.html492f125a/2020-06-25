				    function user_tile( Cmsg ) {
				      var local_datetime = new Date( Cmsg.m_datetime.replace(/-/g,"/") );
				      var serial = local_datetime.getTime() % 17 + 1;
				      return "http://comment.news.sina.com/comment/images/user_tile/tile_" + serial + ".jpg";
