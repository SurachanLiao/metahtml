<script data-cfasync="false">
    var PREBID_TIMEOUT = 1000;
    var FAILSAFE_TIMEOUT = 3000;

    var googletag = googletag || {};
    googletag.cmd = googletag.cmd || [];
    googletag.cmd.push(function() {
        googletag.pubads().disableInitialLoad();
    });

    var pbjs = pbjs || {};
    pbjs.que = pbjs.que || [];

    pbjs.que.push(function() {
        pbjs.addAdUnits(prebid_slots);
        pbjs.setConfig({
            priceGranularity: "dense",
            enableSendAllBids: true,
            sizeConfig: [{
                'mediaQuery': '(min-width: 1600px)',
                'sizesSupported': [
                    [1000, 300],
                    [970, 90],
                    [728, 90],
                    [300, 250]
                ],
                'labels': ['desktop-hd']
            }, {
                'mediaQuery': '(min-width: 1200px)',
                'sizesSupported': [
                    [970, 90],
                    [728, 90],
                    [300, 250]
                ],
                'labels': ['desktop']
            }, {
                'mediaQuery': '(min-width: 768px) and (max-width: 1199px)',
                'sizesSupported': [
                    [728, 90],
                    [300, 250]
                ],
                'labels': ['tablet']
            }, {
                'mediaQuery': '(min-width: 0px)',
                'sizesSupported': [
                    [300, 250],
                    [300, 100]
                ],
                'labels': ['phone']
            }]
        });
        pbjs.requestBids({
            bidsBackHandler: initAdserver,
            timeout: PREBID_TIMEOUT
        });
    });

    const initAdserver = async function() {
        if (pbjs.initAdserverSet) return;
        pbjs.initAdserverSet = true;
        googletag.cmd.push(function() {
            pbjs.que.push(function() {
                pbjs.setTargetingForGPTAsync();
                googletag.pubads().refresh();
            });
        });

        // Temporary disable for OneVideo testing. pbjs.renderAd() call not required when served through GAM
        /* var highestCpmBids = null;

        highestCpmBids = pbjs.getHighestCpmBids('/32246135/mm-story-mreg-1');
        if(highestCpmBids.length > 0) {
            console.log('renderingAd for mm-story-mreg-1:', highestCpmBids[0].adId);
            pbjs.renderAd(document, highestCpmBids[0].adId);
            document.getElementById('mm-story-mreg-1').style.display = 'block';
        }

        highestCpmBids = pbjs.getHighestCpmBids('/32246135/mm-story-mreg-3');
        if(highestCpmBids.length > 0) {
