  <script type="text/javascript">
    $(document).ready(function () {
      _getPeopleList();
      _getPopularList();
    });
    $(window).load(function () {
      var slider01 = new swiper($('#sliderASIDE01'), { speed: 200, basicLay: 'auto', indexView: true, loop: false });
      var slider02 = new swiper($('#sliderASIDE02'), { speed: 200, basicLay: 'auto', indexView: true, loop: false });
    });
    function _getPeopleList() {
      var path = '/svc/list_in/aside_people.html';
      $.ajax({
        url: path
        , dataType: "json"
        , success: function (data) {
          try {
            var info = data, htmlstr = '';
            for (var idx = 0; idx < info.length; idx++) {
              htmlstr += '<li>'
                + '<span class="thumb"><a href="' + info[idx]['LINK'] + '"><img src="' + info[idx]['THUMBNAIL'] + '" alt="people"></a></span>'
                + '<a href="' + info[idx]['LINK'] + '" title="' + info[idx]['TITLE'] + '">' + info[idx]['TITLE'] + '</a>'
                + '</li>';
            }
            $("#people_id ol").html(htmlstr);
          }
          catch (e) { }
        }
        , error: function (status, error) {
        }
      });
    }
    function _getPopularList() {
      var path = '/rank/english/index/index.xml';
      var tot = 10, set = 5;
      $.ajax({
        url: path
        , dataType: "xml"
        , success: function (data) {
          try {
            var info = $(data).find("item"), htmlstr = '', seq = 0;
            if (info == null || info.length == 0) return;
            for (var idx = 0; idx < info.length; idx++) {
              var title_element = $(info[idx]).children("title")
                , link_element = $(info[idx]).children("link")
                , thumb_element = $(info[idx]).children("comments");
              var title = $(title_element).text()
                , link = $(link_element).text()
                , thumb = $(thumb_element).text();

              htmlstr += '<li><em>' + (idx + 1) + '</em>'
                + '<a href="' + link + '" title="' + title + '">' + title + '</a>'
                + (thumb != '' ? '<span class="thumb"><a href="' + link + '"><img src="' + thumb + '" alt="image"></a></span>' : '')
                + '</li>';

              seq++;
              if (seq % set == 0) {
                $("#most_read_id .swiper-slide:eq(" + (seq / set - 1) + ") ol").html(htmlstr);
                htmlstr = '';
              }
              if (seq >= tot) break;
            }
          }
          catch (e) { alert(e); }
        }
        , error: function (status, error) {
        }
      });
    }


    //main photo video clip tab
    $(document).ready(function () {
      $('#top_tabs li a:not(:first)').addClass('inactive');
      $('.top_tab_box').hide();
      $('.top_tab_box:first').show();

      $('#top_tabs li a').click(function () {
        var t = $(this).attr('id');
        if ($(this).hasClass('inactive')) { //this is the start of our condition 
          $('#top_tabs li a').addClass('inactive');
          $(this).removeClass('inactive');

          $('.top_tab_box').hide();
          $('#' + t + 'C').fadeIn('slow');
        }
      });
    });
  </script>

