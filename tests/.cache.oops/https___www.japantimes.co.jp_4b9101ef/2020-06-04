			var id = 'div-gpt-ad-1362126290726-2'; // mobile, JTO_mobilebanner2(TOP)
			if ( 'tablet' === deviceType ) {
				id = 'div-gpt-ad-1362125825102-2'; // tablet, JTO_billboard_Tab(TOP)
