<script>
	// check window width and determine device type
	var deviceType = function() {
		var mobileMaxWidth = 610;
		var tabletMaxWidth = 1000;
		var w = jQuery(window).width();
		var type = 'mobile';
		if (w > mobileMaxWidth && w < tabletMaxWidth) {
			type = 'tablet';
		} else if (w > tabletMaxWidth) {
			type = 'desktop';
		}
		return type;
	}();
</script>
