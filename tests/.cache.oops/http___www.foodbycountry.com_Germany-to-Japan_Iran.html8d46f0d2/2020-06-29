  <div class='article_container'>
    <h2>
      Recipes
    </h2>
  </div>
  <div class='article_container'>
    <p>
      <div class='gale_imggroup'>
        <img alt='Iran' width='155' height='154' src='../images/jwef_02_img0141.jpg' />
      </div>
    </p>
