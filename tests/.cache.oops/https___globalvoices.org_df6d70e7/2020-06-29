<!--GV-news-theme jquery.php-->
<script type="text/javascript">
	jQuery(document).ready(function($) {
		/**
		 * Collapsible other language listing for mobile
		 */
		 // Remove the link from the button
		$('.site-translations-title a').prop('href', '#');
		// .site-translation-title is the "more" button
		$('.site-translations-title').click(function(){

			// Toggle the .expanded class on the .site-translations list which is height-constrained by default
			$('.language-dropdown-container').toggleClass('expanded');

			/**
			 * Toggle the triangle on .html-arrow span up and down
			 */
			gv_toggle_font_icon_arrow(this);
		});

		/**
		 * Clone a .toggle-menu from an existing div with a button and content inside it.
		 * 
		 * Creates a new menu for use with gv_toggle_menu_button(). Used to repurpose blocks of HTML
		 * hidden by media queries by cloning them to new locations where they can be collapsed.
		 * 
		 * Result is a div.target_css_class with a div.toggle-menu.menu-closed inside, .menu-toggle 
		 * and a .icon added to toggle_selector, and .toggle-menu-content-container added 
		 * to .menu_content_selector, with a new inner div.toggle-menu-content wrapping contents of 
		 * .menu_content_selector
		 * 
		 * @param string source_container jQuery selector for container of source content
		 * @param string target_container jQuery selector for existing container that will hold new menu
		 * @param string target_css_class CSS class (no .) to add to new menu's NEW wrapper div
		 * @param string toggle_selector jQuery selector for the toggle button already inside menu content
		 * @param string menu_container_selector jQuery selector for new menu content container (below heading)
		 * @param string menu_content_selector jQuery selector for new menu content inside it's container
		 * @returns false
		 */
		function gv_clone_menu(source_container, target_container, target_css_class, toggle_selector, menu_container_selector, menu_content_selector) {
			source_container_html = $(source_container).html();
			
			if (source_container_html) {
				// Add the content to the new container wrapped in div.target_css_class
				$(target_container).append("<div class='" + target_css_class + " toggle-menu menu-closed'>" + source_container_html + "</div>");
				// Add .menu-toggle and an html arrow to the toggle
				$(target_container).find(toggle_selector).addClass('menu-toggle');
				$(target_container).find(toggle_selector).addClass('toggle-menu-heading');
				$(target_container).find(toggle_selector).append(" <span class='icon icon-caret-down'></span>");
				
				// Add .menu-content-container to the menu_container_selector
				$(menu_container_selector).addClass('toggle-menu-content-container');
				// Wrap the entire contents of the container in div.toggle-menu-content
				$(menu_container_selector).contents().wrapAll("<div class='toggle-menu-content'></div>");
			}
			return false;
		}

		/**
		 * Toggle a menu in relation to its toggle button
		 * 
		 * Displays the contents of menu_content_selector as an absolute-positioned popup
		 * below toggle_selector and adds callback to hide it whenver anything else is clicked.
		 * 
		 * Toggles the .menu-opened/.menu-closed selectors on menu_selector and toggles up/down icon inside
		 * 
		 * If aldready_open_container is set then if it's visible the toggle will do nothing. 
		 * 
		 * @param string toggle_selector jQuery selector for the toggle button
		 * @param string menu_container_selector jQuery selector for the menu container (gets .menu-opened/.menu-closed toggled)
		 * @param string menu_content_selector jQuery selector for the content to hide/show
		 * @param string already_open_container jQuery selector to check visibility of and ignore toggle if visible
		 * @param string within_selector jQuery selector for container div within which opened menu should be positioned
		 * @returns false Always return false to avoid click recursion
		 */
		function gv_toggle_menu_button(toggle_selector, menu_container_selector, menu_content_selector, within_selector) {
		
			/**
			 * Use 'body' as default value of within_selector, should always be a containing div
			 */
		   if(typeof(within_selector)==='undefined') within_selector = 'body';

//console.log('gv_toggle_menu_button! toggle_selector: ' + toggle_selector);
//console.log('menu_container_selector: ' + menu_container_selector);
//console.log('menu_content_selector: ' + menu_content_selector);
//console.log('within_selector: ' + within_selector);

			/**
			 * Define cllback function to hide the menu when anything else is clicked
			 * Removes itself from body.click after running
			 */
			var hide_popup = function(e) {
				// Manually stop propagation
				// Fixes multiple-firing for touch events etc.
				e.stopPropagation();
				//e.preventDefault(); // Breaks links in menus! Use carefully!
	
				// PreventDefault/Return false when toggle is 'touch'ed to avoid touch+click double action
				// First make sure the toggle itself was clicked
				if ($(e.target).is(toggle_selector)) {					
					// AND this was a touch rather than click event
					if (e.type == 'touchend') {
						// PreventDefault, i.e. don't accept the click 
						e.preventDefault(); // Breaks links in menus!
						
						// PreventDefault should be enough but Android 4.x needs false or it opens+closes in a row
						return false;
					} 
				}

				// If this click/touch was not on the menu content itself
				$popup_menu = $(menu_content_selector);
				if (!$(e.target).parents().is($popup_menu)) {
					// IF the menu is opened swap it's classes to hide and toggle arrow
					if ($(menu_container_selector).hasClass('menu-opened')) {
						$(menu_container_selector).toggleClass('menu-opened');
						$(menu_container_selector).toggleClass('menu-closed');
						gv_toggle_font_icon_arrow(toggle_selector);
					}
					
					// Remove this callback no matter what
					$("body").off('click', hide_popup);
					$("body").off('touchend', hide_popup);

					return true;
				}
			};

			// Close all open menus on the page before we do anything
			$(".menu-opened").not(menu_container_selector).each(function() {
				$(this).toggleClass('menu-opened');
				$(this).toggleClass('menu-closed');
				gv_toggle_font_icon_arrow(this);
			});

			// Swap the open/closed classes
			$(menu_container_selector).toggleClass('menu-opened');
			$(menu_container_selector).toggleClass('menu-closed');
			
			gv_toggle_font_icon_arrow(toggle_selector);

			// If the menu is now open position the menu and add the body.click callback
			if ($(menu_container_selector).hasClass('menu-opened') ) {
			   				// Determine my/at parameters for .position(), flipped for toggle-menu-left
				if ($(menu_container_selector).hasClass('toggle-menu-left') ) {
					position_my = 'left top';
					position_at = 'left bottom';
				} else {
					position_my = 'right top';
					position_at = 'right bottom';
				}
				
				// Position the menu content
				$(menu_content_selector).position({					
					my: position_my
					,at: position_at
					,of: toggle_selector
					,collision: 'fit none'
					,within: within_selector
				});

				// Trigger custom toggle_open event
				$(toggle_selector).trigger('gv.toggle_menu.toggle_open');

				$("body").on('click', hide_popup);
				$("body").on('touchend', hide_popup);
			} 

			//console.log('end of gv_toggle_menu_button');

			// Return false to avoid the body click being called immediately. 
			// http://stackoverflow.com/questions/10021984/using-liveclick-inside-a-click-function-triggers-itself
			return false;			
		}

		/**
		 * Make .about-menu .menu-toggle toggle the toggle-menu-content below. Ignore when site-menu-toggle (mobile shelf) is visible because inside it the menus are already expanded.
		 */
		$('.about-menu .menu-toggle').click(function(){
			gv_toggle_menu_button('.about-menu .menu-toggle', '.about-menu', '.about-menu .toggle-menu-content-container', '.header-titlemenu');
			return false;
		});
		/**
		 * Make .site-subscribe-menu .menu-toggle toggle the .toggle-menu-content below. Ignore when site-menu-toggle (mobile shelf) is visible because inside it the menus are already expanded.
		 */
		$('.site-subscribe-menu .menu-toggle').click(function(){
			gv_toggle_menu_button('.site-subscribe-menu .menu-toggle', '.site-subscribe-menu', '.site-subscribe-menu .toggle-menu-content-container', '.header-titlemenu');
			return false;
		});

		/**
		 * Clone translations menu from .postmeta-sidebar into .post-header and make it a 
		 * toggle menu.
		 */
		// Clone the postmeta-sidebar translations into post-header
		gv_clone_menu('.post-translations-container', '.post-menu-toggles', 'post-translations-container', '.post-translations-title', '.post-header .post-translations .translation-listing-container', '.post-translations .translation-listing');
		// Make .post-header .postmeta-container headings toggle their contents. Ignore when .postmeta-sidebar (hidden at 960) is visible because inside it the menus are already expanded.
		
		$('.post-header .post-translations-title').click(function(){
			gv_toggle_menu_button('.post-header .post-translations-title', '.post-header .post-translations-container', '.post-header .translation-listing-container', '.post-header');
			return false;
		});
		
		/**
		 * Clone categories menu from .postmeta-sidebar into .post-header and make it a toggle menu.
		 */
		// Clone the postmeta-sidebar translations into post-header
		gv_clone_menu('.post-terms-container', '.post-menu-toggles', 'post-terms-container', '.post-terms-title', '.post-header .post-terms-container .post-terms-list-container', '.post-header .post-terms-container .post-terms');
		// Make .post-header .postmeta-container headings toggle their contents. Ignore when .postmeta-sidebar (hidden at 960) is visible because inside it the menus are already expanded.
		
		$('.post-header .post-terms-title').click(function(){
			gv_toggle_menu_button('.post-header .post-terms-title', '.post-header .post-terms-container', '.post-header .post-terms-list-container', '.post-header'	);
			return false;
		});	
		
		/**
		 * Clone footer menu from .footer-widgets-container into .header .site-menu, and make it a toggle menu.
		 */
		// Clone the footer widgets into the site-menu (to act as mobile menu)
		gv_clone_menu('.footer', '.header-tools .site-menu', 'site-full-menu-container', '.footer-widgets-title', '.header-tools .site-menu .footer-widgets-container', '.header-tools .site-menu .toggle-site-menu-widgets-container');
		// Register the footer menu button as menu toggle for the widgets
		$('.header-tools .footer-widgets-title').click(function(){
			gv_toggle_menu_button('.header-tools .footer-widgets-title', '.header-tools .site-full-menu-container', '.header-tools .toggle-menu-content-container', '.header-titlemenu');
			return false;
		});

		/**
		 * Generic mobile toggle button function
		 * 
		 * @param string button_selector CSS selector for the button
		 * @param string content_source_selector CSS selector for the existing location of the content we want to toggle with the button
		 * @param string content_target_selector CSS selector for the new location of the content we want the button to toggle
		 * @param string visibility_class CSS class to toggle on the target location to change its visibility
		 * @returns {undefined}
		 */
		function gv_mobile_toggle_button(button_selector, content_source_selector, content_target_selector, visibility_class){
			// If target location already has content just toggle it.
			already_cloned_content = $(content_target_selector).html();
			if (already_cloned_content) {
				$(content_target_selector).toggleClass(visibility_class);
				$(button_selector).toggleClass('button-active');
			// If there's no content copy the footer menu's content and toggle visibility_class
			} else {
				cloned_content = $(content_source_selector).html();
				$(content_target_selector).append(cloned_content);
				$(button_selector).toggleClass('button-active');
				$(content_target_selector).toggleClass(visibility_class);
			}
		};

		// Make .post-translations-button copy sidebar post-translations into the small-screen-post-translations-container at the top of the post
//		$('.post-translations-button').click(function(){
//			gv_mobile_toggle_button(".post-translations-button", ".post-translations", ".small-screen-post-translations-container", 'medium-screen-hidden');
//		});
		// Make .post-taxonomy-button copy sidebar post-taxonomy into the small-screen-post-taxonomy-container at the top of the post
//		$('.post-taxonomy-button').click(function(){			
//			gv_mobile_toggle_button(".post-taxonomy-button", ".post-taxonomy", ".small-screen-post-taxonomy-container", 'medium-screen-hidden');
//		});
		// Remove href value from postmeta buttons (which link to the sidebar ID unless activated by JS.
//		$('.small-screen-postmeta-buttons a').prop('href', '#');

		/**
		 * FLEXSLIDER PLUGIN
		 * 
		 * Animate cyclebox (ul.slides with big images) to fade between three slides
		 * use 'before' callback to add .active class to the matching headlines li
		 */
		if ($('.cyclebox').length) {
			$('.cyclebox').flexslider({
				animation: "fade",
				controlNav: false,
				pauseOnHover: true,
				prevText: '<span class="icon icon-angle-left"></span>',
				nextText: '<span class="icon icon-angle-right"></span>',
//				slideshow: false,
				before: function(slider) {
					$("li[data-slide-id='" + slider.currentSlide + "']").removeClass('active');
					$("li[data-slide-id='" + slider.animatingTo + "']").addClass('active');
				}
			});
			// When headlines are moused over switch slider to the matching slide (data-slide-id from html)
			$('.featured-headlines .headlines li').on('mouseover', function() {
				$('.cyclebox').flexslider($(this).data('slide-id'));
			});
		}
		
		
