<script src="/js/list-visit.js"></script>
<script>
    function SectionBottomNews() {
        // constructor() {
            this.selectedTab = 'recent';
            this.selectedSort = 'recent';
            this.$recentTab = $('#recent-tab');
            this.$popularTab = $('#popular-tab');
            this.$personnelTab = $('#personnel-tab');
            this.$obituaryTab = $('#obituary-tab');
            this.$moreArticleBtn = $('#more-article-btn');
            this.$bottomArticleListContainer = $('#section-bottom-article-list');
            this.$showAllSectionBtn = $('#show-all-section-btn');
            this.$searchInput = $('#search-input');
            this.$searchBtn = $('#section-bottom-article-search-btn');
            this.$searchResultContainer = $('#search-result-container');

            this.articlePageableResult = {
                total: 0,
                list: [],
                pageNum: 0,
                pageSize: 0,
                size: 0,
                startRow: 0,
                endRow: 0,
                pages: 0,
                prePage: 0,
                nextPage: 0,
                isFirstPage: false,
                isLastPage: false,
                hasPreviousPage: false,
                hasNextPage: false,
                navigatePages: 0,
                navigatepageNums: [],
                navigateFirstPage: 0,
                navigateLastPage: 0,
            };
            this.searchTxt = "";

        // }

        this.init = function(){
            this.btnEventBind();
            this.inputEventBind();
            this.getBottomArticles(this.selectedSort, 1, '');
            if ('POLITICS' === 'OPINION') {
                this.$recentTab.html('최신칼럼');
                this.$popularTab.html('인기칼럼');
            }
        }

        /**
         * 버튼 이벤트 리스너들
         */
        this.btnEventBind = function(){
            var self = this;
            /**
             * 최근기사 선택
             */
            self.$recentTab.on('click', function () {
                if (self.selectedTab === 'recent') {
                    return;
                }
                self.$searchInput.val('');
                self.searchTxt = '';
                self.selectedTab = 'recent';
                self.selectedSort = 'recent';
                self.$recentTab.addClass('on');
                self.$popularTab.removeClass('on');
                if ('POLITICS' === 'PEOPLE') {
                    self.$personnelTab.removeClass('on');
                    self.$obituaryTab.removeClass('on');
                }
                self.getBottomArticles(self.selectedSort, 1, '');
            });

            /**
             * 인기기사 선택
             */
            self.$popularTab.on('click', function () {
                if (self.selectedTab === 'popular') {
                    return;
                }
                self.$searchInput.val('');
                self.searchTxt = '';
                self.selectedTab = 'popular';
                self.selectedSort = 'popular';
                self.$recentTab.removeClass('on');
                self.$popularTab.addClass('on');
                if ('POLITICS' === 'PEOPLE') {
                    self.$personnelTab.removeClass('on');
                    self.$obituaryTab.removeClass('on');
                }
                self.getBottomArticles(self.selectedSort, 1, '');
            });

            /**
             * 인사/동정 선택
             */
            self.$personnelTab.on('click', function() {
                if (self.selectedTab === 'personnel') {
                    return;
                }
                self.$searchInput.val('');
                self.searchTxt = '';
                self.selectedTab = 'personnel';
                self.selectedSort = 'personnel';
                self.$recentTab.removeClass('on');
                self.$popularTab.removeClass('on');
                self.$personnelTab.addClass('on');
                self.$obituaryTab.removeClass('on');
                self.getBottomArticles(self.selectedSort, 1, '');
            });

            /**
             * 부고 선택
             */
            self.$obituaryTab.on('click', function() {
                if (self.selectedTab === 'obituary') {
                    return;
                }
                self.$searchInput.val('');
                self.searchTxt = '';
                self.selectedTab = 'obituary';
                self.selectedSort = 'obituary';
                self.$recentTab.removeClass('on');
                self.$popularTab.removeClass('on');
                self.$personnelTab.removeClass('on');
                self.$obituaryTab.addClass('on');
                self.getBottomArticles(self.selectedSort, 1, '');
            });

            /**
             * 더보기 클릭
             */
            self.$moreArticleBtn.on('click', function () {
                self.getBottomArticles(self.selectedSort, self.articlePageableResult.pageNum + 1, '');
            });

            /**
             * 전체섹션 결과보기
             */
            self.$showAllSectionBtn.on('click', function() {
                location.href = "/Search?searchText=" + encodeURIComponent(self.searchTxt) + "&sections=POLITICS";
            });

            /**
             * 검색버튼 클릭시
             */
            self.$searchBtn.on('click', function() {
                if (self.searchTxt !== '') {
                    self.getBottomArticles(self.selectedSort, 1, self.searchTxt);
                } else {
                    if (!self.$searchResultContainer.hasClass('blind')) {
                        self.getBottomArticles(self.selectedSort, 1, '');
                    }
                }
            });

            /**
             * 엔터 클릭시
             */
            self.$searchInput.keydown(function (key) {
                //키가 13이면 실행 (엔터는 13)
                if (key.keyCode == 13){
                    if (self.searchTxt !== '') {
                        self.getBottomArticles(self.selectedSort, 1, self.searchTxt);
                    } else {
                        if (!self.$searchResultContainer.hasClass('blind')) {
                            self.getBottomArticles(self.selectedSort, 1, '');
                        }
                    }
                }
            });
        }

        /**
         * Input event listener
         */
        this.inputEventBind = function(){
            /**
             * 검색어 입력시
             */
            var self = this;
            this.$searchInput.on('keyup', function(input) {
                self.searchTxt = input.target.value;
                // 빈 값이면 - 초기화 버튼 숨긴다
                if (self.searchTxt === '') {

                // 빈 값이 아니면 초기화 버튼 보여준다.
                } else {

                }
            })
        }

        /**
         * 하단 기사 조회
         */
        this.getBottomArticles = function(selectedSort, pageNum, searchTxt) {
            var self = this;
            var url;
            url = '/api/section/bottom-articles?sortType=' + selectedSort
            + '&sectionCd=' + 'POLITICS' + "&page=" + pageNum + "&searchTxt=" + encodeURIComponent(searchTxt);
            $.ajax({
                url: url,
                method: 'GET',
                success: function (response) {
                     self.articlePageableResult = response;
                     console.log(response);
                     if (searchTxt !== '') {
                         self.$searchResultContainer.removeClass('blind');
                         $('#search-txt-container').html('<strong>\'' + self.searchTxt + '\'</strong>검색결과 ' + self.articlePageableResult.total + '건')
                         if (self.articlePageableResult.total === 0) {
                             self.$showAllSectionBtn.addClass('blind');
                         } else {
                             self.$showAllSectionBtn.removeClass('blind');
                         }
                     } else {
                         self.$searchResultContainer.addClass('blind');
                     }
                    // 첫페이지이면 초기화
                    if (self.articlePageableResult.pageNum === 1) {
                        // // 초기화
                        self.$bottomArticleListContainer.html('');
                        // // 10개 이상일 시 더보기 버튼 보임, 미만일 시 숨김
                        // if (self.articlePageableResult.total > 10) {
                        //     self.$moreArticleBtn.html('<span>더보기</span>\n' +
                        //         '                <span class="icon-arrow"></span>');
                        //     $('.full-btn-box').removeClass('blind');
                        // } else {
                        //     $('.full-btn-box').addClass('blind');
                        // }
                    // 두번째 페이지이고 total이 20개 초과이면 전체보기 버튼
                    } else if (self.articlePageableResult.pageNum > 1) {
                        // // 20개 초과이면
                        // if (self.articlePageableResult.total > 20) {
                        //     // 버튼 이름 변경
                        //     self.$moreArticleBtn.html('<span>전체보기</span>\n' +
                        //         '                <span class="icon-arrow"></span>');
                        //     // 버튼 href 변경
                        //     self.$moreArticleBtn.attr('href', '#');
                        //     $('.full-btn-box').removeClass('blind');
                        // } else {
                            $('.full-btn-box').addClass('blind');
                        // }
                    }

                    // 리스트가 존재하면
                    if (self.articlePageableResult.list) {

                        // 리스트에 아이템 추가
                        for (var i = 0; i < self.articlePageableResult.list.length; i++) {
                            var item  = self.articlePageableResult.list[i];
                            var containerClass = '';
                            var imgClass = '';
                            var articleShoulder = item.articleShoulder !== undefined ? item.articleShoulder.shoulderContents : '';
                            var filePath = getArticleThumbnailFilePath($('#fileServer').val(), item.articleId, item.repAttach);

                            // 이미지가 있는지 없는지에 따라서 css class 처리
                            if (filePath === '/images/Default-Image.png') {
                                containerClass += ' no-img';
                                imgClass = 'blind'
                            }

                            var articleContents;

                            if (item.articleFrontPanContents !== undefined) {
                                articleContents = item.articleFrontPanContents
                            } else {
                                articleContents = ""
                            }

                            self.$bottomArticleListContainer.append('<li class="' + containerClass + '" data-id="' + item.articleId + '">\n' +
                                '                <div class="inn">\n' +
                                '                    <p class="ttl"><a href="' + getShoulderUrl(item.articleShoulder) + '">' + articleShoulder + '</a></p>\n' +
                                '                    <h4><a href="' + getArticleUrl(item) + '">' + getArticleCutName(item) + item.articleTitle  + '</a></h4>\n' +
                                '                    <div class="date"><span>' + getFormattedDate(item.articleDeployDt, 'yyyy.mm.dd hh:mm') + '</div>\n' +
                                '                    <div class="text">\n' +
                                '                        <a href="' + getArticleUrl(item) + '">' + articleContents + '</a>\n' +
                                '                    </div>\n' +
                                '                </div>\n' +
                                '                <div class="img-box ' + (item.articleContentsType == 'Movie' ? ' video' : '') + '">\n' +
                                '                    <a href="' + getArticleUrl(item) + '"><img src="' + filePath + '" alt=""></a>\n' +
                                '                </div>\n' +
                                '            </li>');
                        }

                        // visited 표시
                        var listVisit = new ListVisit();
                        listVisit.create('ul.board-list li');
                    }
                },
                fail: function () {

                }
            })
        }
    }

    function onClickBottomArticle(url, id) {
        var visitedArticle = Cookies.get('section_visited_article');
        console.log(visitedArticle);
        if (visitedArticle === undefined) {
            visitedArticle = id;
        } else {
            visitedArticle += ',' + id
        }

        Cookies.set('section_visited_article', visitedArticle, { path: '/' });
        location.href = url;
    }


    $(document).ready(function () {
        var sectionBottomNews = new SectionBottomNews();
        sectionBottomNews.init();
    });
</script>
