	googletag.cmd.push( function() {
		if ( 'mobile' === deviceType ) {
			slot1 = googletag.defineSlot('/4973089/JTO_mobilebanner1(TOP)', ['fluid', [1,1],[320, 50],[320,100]], 'div-gpt-ad-1362126290726-1').addService(googletag.pubads());
			slot3 = googletag.defineSlot('/4973089/JTO_storyfooter_Mobile', ['fluid', [300,250],[336,280]], 'div-gpt-ad-1358334307833-7').addService(googletag.pubads());
			slot4 = googletag.defineSlot('/4973089/article_1', [300, 250], 'div-gpt-ad-1499653692894-0').addService(googletag.pubads());
			headerBiddingSlots.push(slot1);
			headerBiddingSlots.push(slot3);
			headerBiddingSlots.push(slot4);
		} else if ( 'tablet' === deviceType ) {
			slot1 = googletag.defineSlot('/4973089/JTO_leaderboad_Tab(TOP)', ['fluid', [728, 90]], 'div-gpt-ad-1362125825102-1').addService(googletag.pubads());
			slot2 = googletag.defineSlot('/4973089/JTO_billboard_Tab(TOP)', ['fluid', [728, 90]], 'div-gpt-ad-1362125825102-2').addService(googletag.pubads());
			slot3 = googletag.defineSlot('/4973089/JTO_storyfooter_Tab', ['fluid', [300,250],[336,280]], 'div-gpt-ad-1366542287014-0').addService(googletag.pubads());
			headerBiddingSlots.push(slot1);
			headerBiddingSlots.push(slot2);
			headerBiddingSlots.push(slot3);
		} else if ( 'desktop' === deviceType ) {
			slot1 = googletag.defineSlot('/4973089/JTO_leaderboad(TOP)', ['fluid', [970, 250],[970, 90],[728,90]], 'div-gpt-ad-1362125114269-1').addService(googletag.pubads());
			slot2 = googletag.defineSlot('/4973089/JTO_billboard(TOP)', ['fluid', [970, 250],[970,90],[728,90]], 'div-gpt-ad-1362125114269-2').addService(googletag.pubads());
			slot3 = googletag.defineSlot('/4973089/JTO_storyfooter', ['fluid', [300,250],[336,280]], 'div-gpt-ad-1366542226049-0').addService(googletag.pubads());
			headerBiddingSlots.push(slot1);
			headerBiddingSlots.push(slot2);
			headerBiddingSlots.push(slot3);
		}
		gptAdSlots[0] = googletag.defineSlot('/4973089/Rectangle3(TOP)', ['fluid', [336, 280], [300, 250], [300, 600]], 'div-gpt-ad-1545100828948-0').addService(googletag.pubads());
		gptAdSlots[1] = googletag.defineSlot('/4973089/main_module_top', ['fluid', [1, 1]], 'div-gpt-ad-1467614168741-0').addService(googletag.pubads());
		gptAdSlots[2] = googletag.defineSlot('/4973089/JTO_Rectangle1(TOP)', ['fluid', [336, 280], [300, 250]], 'div-gpt-ad-1545099231048-0').addService(googletag.pubads());
		gptAdSlots[3] = googletag.defineSlot('/4973089/JT-Editorial-banner', [[300, 10], [320, 50], [1, 1]], 'div-gpt-ad-1545377436271-0').addService(googletag.pubads());
		gptAdSlots[4] = googletag.defineSlot('/4973089/JTO_Rectangle2(TOP)', ['fluid', [336, 280], [300, 250], [300, 600]], 'div-gpt-ad-1545099535665-0').addService(googletag.pubads());
		gptAdSlots[5] = googletag.defineSlot('/4973089/JT-Supplements-slider1', [300, 250], 'div-gpt-ad-1545378846364-0').addService(googletag.pubads());
		gptAdSlots[6] = googletag.defineSlot('/4973089/JT-Supplements-block1', ['fluid'], 'div-gpt-ad-1545377720996-0').addService(googletag.pubads());
		gptAdSlots[7] = googletag.defineSlot('/4973089/JT-Supplements-block2', ['fluid'], 'div-gpt-ad-1545377819100-0').addService(googletag.pubads());
		gptAdSlots[8] = googletag.defineSlot('/4973089/JT-Supplements-block3', ['fluid'], 'div-gpt-ad-1545377905854-0').addService(googletag.pubads());
		gptAdSlots[9] = googletag.defineSlot('/4973089/JT-Supplements-block4', ['fluid'], 'div-gpt-ad-1545378016685-0').addService(googletag.pubads());
		gptAdSlots[10] = googletag.defineSlot('/4973089/JT-Supplements-block5', ['fluid'], 'div-gpt-ad-1545378526968-0').addService(googletag.pubads());
		gptAdSlots[11] = googletag.defineSlot('/4973089/JT-Supplements-block6', ['fluid'], 'div-gpt-ad-1545378615238-0').addService(googletag.pubads());
