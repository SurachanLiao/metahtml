                $(document).ready(function(){
                    $(".dongaArticle a").click(function(){
                        $(this).toggleClass("on");
                        if ( $(".dongaArticle a").attr('class') == "on") $(location).attr('href', '?ymd=&m=NP');
                        else  $(location).attr('href', '?ymd=');
                    });
                });
            </script>
