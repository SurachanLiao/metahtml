4"}],"collection":[{"href":"https:\/\/techcrunch.com\/wp-json\/wp\/v2\/tags"}],"about":[{"href":"https:\/\/techcrunch.com\/wp-json\/wp\/v2\/taxonomies\/post_tag"}],"wp:post_type":[{"href":"https:\/\/techcrunch.com\/wp-json\/wp\/v2\/posts?tags=66684"},{"href":"https:\/\/techcrunch.com\/wp-json\/wp\/v2\/battlefield-companies?tags=66684"},{"href":"https:\/\/techcrunch.com\/wp-json\/wp\/v2\/tc-media-gallery?tags=66684"},{"href":"https:\/\/techcrunch.com\/wp-json\/wp\/v2\/tc_video?tags=66684"}],"curies":[{"name":"wp","href":"https:\/\/api.w.org\/{rel}","templated":true}]}},{"id":84074029,"link":"https:\/\/techcrunch.com\/tag\/hearst-ventures\/","name":"hearst ventures","slug":"hearst-ventures","taxonomy":"post_tag","_links":{"self":[{"href":"https:\/\/techcrunch.com\/wp-json\/wp\/v2\/tags\/84074029"}],"collection":[{"href":"https:\/\/techcrunch.com\/wp-json\/wp\/v2\/tags"}],"about":[{"href":"https:\/\/techcrunch.com\/wp-json\/wp\/v2\/taxonomies\/post_tag"}],"wp:post_type":[{"href":"https:\/\/techcrunch.com\/wp-json\/wp\/v2\/posts?tags=84074029"},{"href":"https:\/\/techcrunch.com\/wp-json\/wp\/v2\/battlefield-companies?tags=84074029"},{"href":"https:\/\/techcrunch.com\/wp-json\/wp\/v2\/tc-media-gallery?tags=84074029"},{"href":"https:\/\/techcrunch.com\/wp-json\/wp\/v2\/tc_video?tags=84074029"}],"curies":[{"name":"wp","href":"https:\/\/api.w.org\/{rel}","templated":true}]}},{"id":576692671,"link":"https:\/\/techcrunch.com\/tag\/macquarie-capital\/","name":"Macquarie Capital","slug":"macquarie-capital","taxonomy":"post_tag","_links":{"self":[{"href":"https:\/\/techcrunch.com\/wp-json\/wp\/v2\/tags\/576692671"}],"collection":[{"href":"https:\/\/techcrunch.com\/wp-json\/wp\/v2\/tags"}],"about":[{"href":"https:\/\/techcrunch.com\/wp-json\/wp\/v2\/taxonomies\/post_tag"}],"wp:post_type":[{"href":"https:\/\/techcrunch.com\/wp-json\/wp\/v2\/posts?tags=576692671"},{"href":"https:\/\/techcrunch.com\/wp-json\/wp\/v2\/battlefield-companies?tags=576692671"},{"href":"https:\/\/techcrunc