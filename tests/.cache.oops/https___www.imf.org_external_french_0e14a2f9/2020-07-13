    <script type="text/javascript">
        var app = angular.module('IMFHome', []);

        app.filter("sanitize", ['$sce', function ($sce) {
            return function (htmlCode) {
                return $sce.trustAsHtml(htmlCode);
            }
        } ]);

        app.controller('whatsNewCtrl', function ($scope, $http, $sce) {

            var today = new Date();
            var dd = today.getDate();
            var mm = today.getMonth() + 1; //January is 0!

            var yyyy = today.getFullYear();
            if (dd < 10) {
                dd = '0' + dd
            }
            if (mm < 10) {
                mm = '0' + mm
            }
            var today = mm + '/' + dd + '/' + yyyy;
            var url = "/external/ws/IMFORGReadAPILegacy/api/whatsnew?count=8&isoCode=fra&date=" + today.toString();

            $http.get(url)
            .success(function (response) {

                $scope.whatsNewItems = response;
            });
        });
        app.controller('centerPieceCtrl', function ($scope, $http, $sce) {


            var url = "/external/ws/IMFORGReadAPILegacy/api/multicenterpiece?count=5&isocode=fra&status=L";

            $http.get(url)
            .success(function (response) {
                $scope.centerPieceItems = response;
            });
        });


        app.filter('spaceless', function () {
            return function (input) {
                if (input) {
                    return input.replace(/\s/g, '-');
                }
            }
        });

        function resizeCP(cpimg) {


            // Get on screen image
            var screenImage = cpimg;


            // Create new offscreen image to test
            var theImage = new Image();
            theImage.src = screenImage.attributes["src"].value;

            // Get accurate measurements from that.
            var imageWidth = theImage.width;
            var imageHeight = theImage.height;



            if (imageWidth > 1720) {

                $('#' + screenImage.attributes["id"].value).closest('div').removeClass("half1")

            }

            $("#dvCPParent").addClass("royalSlider");
            $("#dvCPParent").addClass("rsDefault");

            $(".royalSlider").royalSlider({
                // options go here
                // as an example, enable keyboard arrows nav
                keyboardNavEnabled: true,
                autoScaleSliderWidth: 1099,
                arrowsNav: true,
                usePreloader: true,
                numImagesToPreload: 4,
                delay: 8000,
                pauseOnHover: true,
                transitionSpeed: 600,
                controlsInside: true,
                sliderTouch: true,
                loopRewind: true,
