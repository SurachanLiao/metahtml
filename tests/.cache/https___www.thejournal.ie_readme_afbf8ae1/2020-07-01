            {
                var _ga_login_status = sessionStorage.getItem("_ga_login_status");

                if(_ga_login_status == null)
                {
                    _ga_login_status = {"facebook":null, "google":null, "googlePlus":null, "twitter":null};
                    var _ga_login_support = [];
                    var _ga_login_called = [];

                    function ga__log_login_status(n, b)
                    {
                        _ga_login_status[n] = b;
                        if(b === true) {
                            _ga_login_support.push(n);
                        }
                        _ga_login_called.push(n);
                        if(_ga_login_called.length == 4)
                        {
                            _ga_login_support.sort();
                            _gaq.push(['_setCustomVar',
                                       3,
                                       'Social Session Support:',
                                       _ga_login_support.join('; '),
                                       2
                                   ]);
                            _gaq.push(['_trackEvent', 'socialSession', 'Detection Complete']); // this is needed to push the custom var to GA
                            sessionStorage.setItem("_ga_login_status", _ga_login_status);
                        }
                    }

                    var _ga_fb_login_status = null;
                    function ga__check_fb()
                    {
                        // this response will be cached if already called
                        if(typeof FB != 'undefined'
                            && _ga_fb_login_status == null)
                        {
                            FB.getLoginStatus(function(response) {
                                _ga_fb_login_status = response.status;
                                if(response.status == 'unknown') {
                                    ga__log_login_status("facebook", false);
                                }
                                else {
                                    ga__log_login_status("facebook", true);
                                }
                            });
                        }
                        else
                        {
                            setTimeout(ga__check_fb, 250);
                        }
                    }

                    ga__check_fb();

                                    }
            }
