		nonHeaderBiddingSlots.push(gptAdSlots[10]);
		nonHeaderBiddingSlots.push(gptAdSlots[11]);
		nonHeaderBiddingSlots.push(gptAdSlots[12]);
		nonHeaderBiddingSlots.push(gptAdSlots[13]);
		nonHeaderBiddingSlots.push(gptAdSlots[14]);
		nonHeaderBiddingSlots.push(gptAdSlots[15]);
		nonHeaderBiddingSlots.push(gptAdSlots[16]);
		nonHeaderBiddingSlots.push(gptAdSlots[17]);
		headerBiddingSlots.push(gptAdSlots[18]);
		headerBiddingSlots.push(gptAdSlots[19]);

		$.getScript( 'https://www.japantimes.co.jp/googletag_pushads.php?dfp_post_type=news&term_items=%22Asia%20Pacific%22%2C%22woodwing%22&tag_items=%22U.S.%22%2C%22North%20Korea%22%2C%22Kim%20Jong%20Un%22%2C%22South%20Korea%22&page_id=2586812&subscriber_status' )
		googletag.pubads().disableInitialLoad();
		googletag.pubads().enableSingleRequest();
		googletag.pubads().collapseEmptyDivs();
		googletag.enableServices();

		if (nonHeaderBiddingSlots.length > 0) {
			googletag.pubads().refresh(nonHeaderBiddingSlots);
		}

		pbjs.rp.requestBids({
			callback: sendAdServerRequest,
			gptSlotObjects: headerBiddingSlots
		});
	});
</script>
<script>
	pbjs.adserverRequestSent = false;
	var sendAdServerRequest = function(headerBiddingSlots) {
		googletag.cmd.push(function() {
			if (pbjs.adserverRequestSent) {
				return;
			}
			pbjs.adserverRequestSent = true;
			googletag.pubads().refresh(headerBiddingSlots);
		});
	};
	setTimeout(function() {
		sendAdServerRequest(headerBiddingSlots);
	}, failSafeTimeout);
</script>
<script>
	pbjs.adserverRequestSent = false;
