	<div id="screen_type"></div>
	<div id="ad_id">
		<script type='text/javascript'>
			var id = 'div-gpt-ad-1362126290726-2'; // mobile, JTO_mobilebanner2(TOP)
			if ( 'tablet' === deviceType ) {
				id = 'div-gpt-ad-1362125825102-2'; // tablet, JTO_billboard_Tab(TOP)
			} else if ( 'desktop' === deviceType ) {
				id = 'div-gpt-ad-1362125114269-2'; // desktop, JTO_billboard(TOP)
			}
			jQuery( '#ad_id' ).attr( 'id', id ); 	// set id to ad id
			googletag.cmd.push( function() { googletag.display(id); } );
		</script>
	</div>
</div>
			</div>

