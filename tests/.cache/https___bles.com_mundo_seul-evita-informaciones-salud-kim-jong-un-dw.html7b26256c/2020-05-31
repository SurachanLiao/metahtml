<script>
    VideoJs.addEventListener('load', function () {
        const nodelist = document.querySelectorAll(".single-post-video");
        const arr = Array.from(nodelist);
        for (let i = 0; i < arr.length; i++) {
            var spvId = arr[i].id;
            if(spvId) {
                var that = document.querySelector('#'+spvId+' .player-wrap video');
                if(that.id) {
                    var player = setupVjs(spvId, that.id);
                    document.querySelector('#'+spvId+' .player-wrap .video-js.vjs-default-skin').style.visibility = 'visible';
                }
            }
        }
    });
</script>
