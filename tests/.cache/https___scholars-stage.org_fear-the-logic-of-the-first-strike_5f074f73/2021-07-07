					<!-- START - We recommend to place the below code in footer or bottom of your website html  -->
					<script>
						window.REQUIRED_CODE_ERROR_MESSAGE = "Please choose a country code";
						window.LOCALE = 'en';
						window.EMAIL_INVALID_MESSAGE = window.SMS_INVALID_MESSAGE = "The information provided is invalid. Please review the field format and try again.";

						window.REQUIRED_ERROR_MESSAGE = "This field cannot be left blank.";

						window.GENERIC_INVALID_MESSAGE = "The information provided is invalid. Please review the field format and try again.";


						window.translation = {
							common: {
								selectedList : '{quantity} list selected',
								selectedLists: '{quantity} lists selected'
							}
						};

							// Get the modal
						var modal = document.getElementById( "subscriber-modal" );

						// Get the <span> element that closes the modal
						var span = document.getElementById( "close-modal" );

						// Store popup opening state for current page load.
						var modalAlreadyOpened = false;

						function closePopup() {
							modal.style.display = "none";
						}
						// debounce function
						function scholar_debounce( fn, delay = 100 ) {
							var timer = null;
							return function () {
								var context = this, args = arguments;
								clearTimeout( timer );
								timer = setTimeout( function () {
									fn.apply( context, args );
								}, delay );
							};
						}

						// When the user clicks on <span> (x), close the modal
						span.onclick = function () {
							closePopup();
							document.cookie = 'subscriberModal=closed;max-age=' + 60 * 60 * 24 * 7;
						}

						// When the user clicks anywhere outside of the modal, close it
						window.onclick = function ( event ) {
							if ( event.target == modal ) {
								closePopup();
							}
						}

						window.onkeydown = function( event ) {
							if ( event.key === "Esc" || event.key === "Escape" ) {
								closePopup();
							}
						}

						// Show popup on half way scroll to the page.
						document.addEventListener( 'scroll', scholar_debounce( function() {

							// Check cookie for user closed modal.
							let modalClosed = document.cookie.split(';').some(function(item) {
								return item.indexOf('subscriberModal=closed') >= 0;
							});
							// Show modal if not closed by user and user is halfway through the page.
							if( ! modalAlreadyOpened && ! modalClosed && window.scrollY > document.body.offsetHeight/2) {
								modal.style.display = "block";
								modalAlreadyOpened = true;
							}
						}, 100 ) )
					</script>

