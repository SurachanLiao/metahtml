        <script>
            var size = 'size=970x250',
                sizes = [
                    [300, 250],
                    [768, 90],
                    [970, 250]
                ],
                url = 'https://tom.itv.com/itv/jserver/random=70551/site=itv/area=news.national.regionhome/position=1/adtype=any/size=970x250/viewid=1591464361',
                width = document.body.offsetWidth,
                isLoadedResponsive = false;

            if (size.slice(5) !== 'mobilebanner') {

              var adSize = width >= sizes[2][0] ? [sizes[2]] :
                      width >= sizes[1][0] ? [sizes[1]] : [sizes[0]];

              var sizeSet = /Tablet|iPad/i.test(navigator.userAgent) ? sizes : adSize;

              document.write('<div class="rbof-' + sizeSet.length + '">');

              sizeSet.forEach(function(set) {
                document.write('<script src="' + url.replace(size, 'size=' + set[0] + 'x' + set[1]) + '"></scr' + 'ipt>');
              });

              document.write('</div>');

            } else {
              document.write('<script src="' + url + '"></scr' + 'ipt>');
            }
        </script>
