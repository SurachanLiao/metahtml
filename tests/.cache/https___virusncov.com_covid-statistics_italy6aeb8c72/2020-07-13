                exporting: {
                    enabled: false
                },
                title: { text: 'Daily Deaths' },
                subtitle: { text: 'Deaths per Day' },
                credits: { enabled: false },
                yAxis: { title: { text: country_name+ ' Coronavirus Deaths' } },
                responsive: { rules: [{ condition: { maxWidth: 800 }, chartOptions: { legend: { layout: 'horizontal', align: 'center', verticalAlign: 'bottom' } } }] },
                legend: { layout: 'vertical', align: 'right', verticalAlign: 'middle' },
                xAxis: {},
                series: [{}]
            };
            var options_total_deaths = {
                chart: {
                    renderTo: 'total_deaths',
                    type: 'spline'
                },
                exporting: {
                    enabled: false
                },
                title: { text: 'Total Deaths' },
                subtitle: { text: '(Linear Scale)' },
                credits: { enabled: false },
                yAxis: { title: { text: country_name+ ' Total Coronavirus Deaths' } },
                responsive: { rules: [{ condition: { maxWidth: 800 }, chartOptions: { legend: { layout: 'horizontal', align: 'center', verticalAlign: 'bottom' } } }] },
                legend: { layout: 'vertical', align: 'right', verticalAlign: 'middle' },
                xAxis: {},
                series: [{}]
            };

            var option_cases_active_recovered_deaths = {
                chart: {
                    renderTo: 'cases_active_recovered_deaths',
                    type: 'spline'
                },
                exporting: {
                    enabled: false
                },
                title: { text: 'Active Cases, Recovered and Daily Deaths' },
                subtitle: { text: '(Linear Scale)' },
                credits: { enabled: false },
                yAxis: { title: { text: 'Active Cases, Recovered and Daily Deaths' } },
                responsive: { rules: [{ condition: { maxWidth: 800 }, chartOptions: { legend: { layout: 'horizontal', align: 'center', verticalAlign: 'bottom' } } }] },
                legend: { layout: 'vertical', align: 'right', verticalAlign: 'middle' },
                xAxis: {},
                series: []
            };

            $.getJSON(base_url+'/api/country/'+country_url, function (data) {
                var date_time = [],
                    cases = [],
                    deaths = [],
                    recovered = [],
                    active = [],
                    total_cases = [],
                    total_deaths = [];
                var data_new = data.slice(0, -1);

                var now = new Date(),
                    day = now.getDay(),
                    hours = now.getHours();
                if(0 <= hours && hours <= 8) {
                    if(country_id == 14){
                        data_new = data.slice(0, -2);
                    }
                    if(country_id == 19){
                        data_new = data.slice(0, -2);
                    }
                }

                $.each(data_new, function(i, el) {
                    date_time.push(el.time_day);
                    cases.push(parseFloat(el.ex_cases));
                    deaths.push(parseFloat(el.ex_deaths));
                    active.push(parseFloat(el.active_case));
                    recovered.push(parseFloat(el.total_recovered));
                    total_cases.push(parseFloat(el.total_cases));
                    total_deaths.push(parseFloat(el.total_deaths));
                });
                options_cases.xAxis.categories = date_time;
                options_cases.series[0].data = cases;
                options_cases.series[0].color = '#33CCFF';
                options_cases.series[0].name = 'Cases';
                options_cases.series[0].lineWidth = 5;

                options_total_cases.xAxis.categories = date_time;
                options_total_cases.series[0].data = total_cases;
                options_total_cases.series[0].color = '#33CCFF';
                options_total_cases.series[0].name = 'Cases';
                options_total_cases.series[0].lineWidth = 5;

                options_deaths.xAxis.categories = date_time;
                options_deaths.series[0].data = deaths;
                options_deaths.series[0].color = '#FF9900';
                options_deaths.series[0].name = 'Deaths';
                options_deaths.series[0].lineWidth = 5;

                options_total_deaths.xAxis.categories = date_time;
                options_total_deaths.series[0].data = total_deaths;
                options_total_deaths.series[0].color = '#FF9900';
                options_total_deaths.series[0].name = 'Deaths';
                options_total_deaths.series[0].lineWidth = 5;

                var active_recovered_deaths = [
                    {
                        "name":"Active",
                        "color": "#33CCFF",
                        "data": active
                    },
                    {
                        "name":"Recovered",
                        "color": "#07be4a",
                        "data": recovered
                    },
                    {
                        "name":"Daily Deaths",
                        "color": "#FF9900",
                        "data": deaths
                    }
                ];

                option_cases_active_recovered_deaths.xAxis.categories = date_time;
                option_cases_active_recovered_deaths.series = active_recovered_deaths;

                var chart_cases = new Highcharts.Chart(options_cases);
                var chart_total_cases = new Highcharts.Chart(options_total_cases);
                var chart_deaths = new Highcharts.Chart(options_deaths);
                var chart_total_deaths = new Highcharts.Chart(options_total_deaths);
                var cases_active_recovered_deaths = new Highcharts.Chart(option_cases_active_recovered_deaths);

            });
            $.getJSON(base_url+'/api/country_region/'+country_url, function (data) {
                var country_cases_total = [],
                    country_deaths_total = [],
                    country_cases_all = [],
                    country_deaths_all = [];

                var country_cases = 0;
                var total_cases = 0;

                var country_deaths = 0;
                var total_deaths = 0;
                $.each(data, function(i, el) {
                    total_cases = total_cases + parseFloat(el.total_cases);
                    total_deaths = total_deaths + parseFloat(el.total_deaths);
                    if(el.id == country_id){
                        country_cases = parseFloat(el.total_cases);
                        country_deaths = parseFloat(el.total_deaths);
                    }
                });

                var per_country_cases = (country_cases*100)/total_cases;
                var per_country_region = 100 - per_country_cases;

                if(total_deaths !== 0){
                    var per_country_deaths = (country_deaths*100)/total_deaths;
                    var per_country_region_deaths = 100 - per_country_deaths;
                }else{
                    var per_country_deaths = 0;
                    var per_country_region_deaths = 100 - per_country_deaths;
                }


                Highcharts.chart('country_total', {
                    chart: {
                        plotBackgroundColor: null,
                        plotBorderWidth: null,
                        plotShadow: false,
                        type: 'pie'
                    },
                    title: {
                        text: country_name + 'COVID19 Cases Compare ' + ' v/s ' + country_region
                    },
                    tooltip: {
                        pointFormat: '{series.name}: <b>{point.percentage:.1f}% <br>({point.value:,.0f} cases)</b>'
                    },
                    credits: { enabled: false },
                    accessibility: {
                        point: {
                            valueSuffix: '%'
                        }
                    },
                    plotOptions: {
                        pie: {
                            allowPointSelect: true,
                            cursor: 'pointer',
                            dataLabels: {
                                enabled: true,
                                format: '<b>{point.name}</b>: {point.percentage:.1f} % <br> ({point.value:,.0f} cases)'
                            }
                        }
                    },
                    series: [{
                        name: 'Cases',
                        colorByPoint: true,
                        data: [{
                            name: country_name,
                            color: '#ff8e75',
                            value: country_cases,
                            y: per_country_cases,
                            sliced: true,
                            selected: true
                        }, {
                            name: 'All Country on ' + country_region,
                            color: '#66CCFF',
                            value: total_cases,
                            y: per_country_region,

                        }]
                    }]
                });

                Highcharts.chart('country_all', {
                    chart: {
                        plotBackgroundColor: null,
                        plotBorderWidth: null,
                        plotShadow: false,
                        type: 'pie'
                    },
                    title: {
                        text: country_name + 'COVID19 Deaths Compare ' + ' v/s ' + country_region
                    },
                    tooltip: {
                        pointFormat: '{series.name}: <b>{point.percentage:.1f}% <br> ({point.value:,.0f} deaths)</b>'
                    },
                    credits: { enabled: false },
                    accessibility: {
                        point: {
                            valueSuffix: '%'
                        }
                    },
                    plotOptions: {
                        pie: {
                            allowPointSelect: true,
                            cursor: 'pointer',
                            dataLabels: {
                                enabled: true,
                                format: '<b>{point.name}</b>: {point.percentage:.1f} % <br>({point.value:,.0f} deaths)'
                            }
                        }
                    },
                    series: [{
                        name: 'Deaths',
                        colorByPoint: true,
                        data: [{
                            name: country_name,
                            color: '#ff8e75',
                            value: country_deaths,
                            y: per_country_deaths
                        }, {
                            name: 'All Country on ' + country_region,
                            color: '#66CCFF',
                            value: total_deaths,
                            y: per_country_region_deaths
                        }]
                    }]
                });
            });

            if(country_id == 10){
                $.getJSON(base_url+'/api/country_us', function (data) {

                    // Instantiate the map
                    Highcharts.mapChart('map_us', {

                        chart: {
                            map: 'countries/us/us-all',
                            borderWidth: 0
                        },

                        title: {
                            text: 'US COVID19 Cases'
                        },

                        exporting: {
                            sourceWidth: 600,
                            sourceHeight: 500
                        },
                        credits: { enabled: false },
                        legend: {
                            layout: 'horizontal',
                            borderWidth: 0,
                            backgroundColor: 'rgba(255,255,255,0.85)',
                            floating: true,
                            verticalAlign: 'top',
                            y: 25
                        },

                        mapNavigation: {
                            enabled: false
                        },

                        colorAxis: {
                            min: 1,
                            type: 'logarithmic',
                            minColor: '#ffe9e2',
                            maxColor: '#220003',
                            stops: [
                                [0, '#ffe9f0'],
                                [0.67, '#ff5a4b'],
                                [1, '#220004']
                            ]
                        },

                        series: [{
                            animation: {
                                duration: 1000
                            },
                            data: data,
                            joinBy: ['postal-code', 'code'],
                            dataLabels: {
                                enabled: true,
                                color: '#FFFFFF',
                                format: '{point.code}'
                            },
                            name: 'Total cases',
                            tooltip: {
                                pointFormat: '{point.code}: {point.value} Cases'
                            }
                        }]
                    });
                });
            }

        })(jQuery);

    </script>
