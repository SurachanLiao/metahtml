	$('.mobileNoLink').each(function() { // Notice the .each() loop, discussed below
		console.log($(this).attr("id"));
		$(this).qtip({
			show: 'click',
			hide: 'unfocus',
			position: {
				my: 'top center',
				at: 'bottom center'
			},
			style: {
				classes: 'qtip-blue qtip-shadow qtip-bootstrap'
			},
			content: {
				// text: $(this).next('div') // Use the "div" element next to this for the content
				text: $('.qm-'+$(this).attr("id")).html()
			}
		}).bind('click', function(event){ console.log('here'); event.preventDefault(); return false; });
	});
}
