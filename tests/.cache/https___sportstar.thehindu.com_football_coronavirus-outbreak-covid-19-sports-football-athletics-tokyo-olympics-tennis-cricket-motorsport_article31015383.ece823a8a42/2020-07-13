var isNonSubcribed = true;
var UserStatus = "anonymous";
var migratedUser = false;
function isNonSubcribedUser(){
return isNonSubcribed;
}
var isthirdpartyallowed=true;
function isTrackingAllowed(){
return isthirdpartyallowed;
