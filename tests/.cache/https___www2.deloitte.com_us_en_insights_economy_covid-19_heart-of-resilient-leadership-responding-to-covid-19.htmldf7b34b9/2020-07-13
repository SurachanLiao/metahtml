	        if(bookmarkJSONStr != null && bookmarkJSONStr != "" && typeof(bookmarkJSONStr) != "undefined"){
	        	var bookmarks = JSON.parse(bookmarkJSONStr);
	        	bookmarks.date = new Date();
	        	bookmarkJSONStr = JSON.stringify(bookmarks);
        	}
