            branches: {
              default: {},
              enter: {
                tasks: [
                  {
                    name: "selector",
                    type: "basic",
                    config: { __template: "a:not([disabled]):visible, button:not([disabled]):visible, input:not([disabled]):visible, select:not([disabled]):visible, textarea:not([disabled]):visible, [tabindex]:visible:not([disabled]):not([tabindex='-1'])" }
                  },
