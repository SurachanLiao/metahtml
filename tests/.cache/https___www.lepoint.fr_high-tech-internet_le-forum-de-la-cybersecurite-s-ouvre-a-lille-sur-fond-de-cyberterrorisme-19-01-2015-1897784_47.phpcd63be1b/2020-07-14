}
if(document.ueia != 1){
document.write('<li class="pre-header-li last bg-yellow"><a href="https://abo.lepoint.fr/offre_decouverte#xtatc=INT-1904">Abonnez-vous</a></li>');
}
</script>
</ul>
</nav>
</div>
