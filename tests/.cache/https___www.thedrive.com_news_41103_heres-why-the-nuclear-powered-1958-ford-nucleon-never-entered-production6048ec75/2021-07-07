  var googletag = googletag || {};
  googletag.cmd = googletag.cmd || [];

  googletag.cmd.push(function () {
      googletag.pubads().disableInitialLoad();
      googletag.pubads().collapseEmptyDivs(true);
      googletag.pubads().setTargeting('site', 'thedrive.com');
      googletag.pubads().setTargeting('tests', [window.AD_EXPERIENCE_GO]);

      if ( window.location.href.match(/motorcycle/) ) {
        googletag.pubads().setTargeting('targeting_keyword', 'motorcycle');
      }
  });

  if (adParams.ptype === "main" && adParams.zone !== "homepage") {
    adParams.zone += "/main";
  }

  adSlotTargets.ptype = adParams.ptype;
  adSlotTargets.ch = adParams.ch;

  if (adParams.ptype === "content") {
    adSlotTargets.aid = "41103";
    adSlotTargets.ctype = "article";
    adSlotTargets.etype = "video";

    if (adParams.sch.length > 0) {
      adSlotTargets.sch = adParams.sch;
    }

    if ("".length > 0) {
      adSlotTargets.tags = "";
    }

    if ("".length > 0) {
      adSlotTargets.sponsor = "";
    }
  } else {
    if ("news" === "homepage") {
      adSlotTargets.ptype = "homepage";
      adSlotTargets.ctype = "homepage";
    } else if ("news" === "author") {
      adSlotTargets.ptype = "main";
      adSlotTargets.ctype = "main";
    } else if ("news" === "shop") {
      adSlotTargets.ptype = "main";
      adSlotTargets.sch = "";
      adSlotTargets.make = "";
      adSlotTargets.model = "";
      adSlotTargets.year = "";
    } else {
      adSlotTargets.ptype = "channel";
      adSlotTargets.ctype = "main";
    }
  }

  
