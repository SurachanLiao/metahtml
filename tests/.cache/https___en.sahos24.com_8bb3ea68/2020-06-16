<script type="text/javascript">

	$("div#menu_category ul li#allCatBtnFooter span").on('click',function(){
		var val = $(this).attr('data-val');
		//alert(val);
		if(val==1){
			$("#allCatBlockFooter").show();
			$(this).hide();
			$('span.all-section-close-btn-footer').show();
			$("div#menu_category ul li#allCatBtnFooter").css("float","none");
			$("div#menu_category ul.menu").css("text-align","right");
			$('li.mn_toggle').css('display','none');
		}else{
			$("#allCatBlockFooter").hide();
			$(this).hide();
			$('span.all-section-btn-footer').show();
			$("div#menu_category ul li#allCatBtnFooter").css("float","right");
			$("div#menu_category ul.menu").css("text-align","left");
			$('li.mn_toggle').show();
		}
	});
</script>
