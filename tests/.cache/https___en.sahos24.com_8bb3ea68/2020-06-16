	var cur_slider_index = 0, total_slider_photos = '1';
	$('.photo_gal_block .photo_slider').hover(function(){
		$('.photo_gal_block .photo_slider li.nxt-btn,.photo_gal_block .photo_slider li.pre-btn').show()
		$('.photo_title',this).show();
	},function(){
		$('.photo_gal_block .photo_slider li.nxt-btn,.photo_gal_block .photo_slider li.pre-btn').hide()
		$('.photo_title',this).hide();
	});
	$('.photo_gal_block .photo_slider li.pre-btn').on('click', function(){		
		if(cur_slider_index<=0 && total_slider_photos>3) cur_slider_index = 3;
		else if(cur_slider_index<=0) cur_slider_index = total_slider_photos - 1;
		cur_slider_index =  cur_slider_index - 1;
		//alert(cur_slider_index);
		$('.photo_gal_block .photo_slider li.photo_list').fadeOut();		
		$('.photo_gal_block .photo_slider li:nth-child('+(cur_slider_index+1)+')').fadeIn();		
	});
	$('.photo_gal_block .photo_slider li.nxt-btn').on('click', function(){
		cur_slider_index =  cur_slider_index + 1;
		if((total_slider_photos>3 && cur_slider_index>=3) || cur_slider_index==total_slider_photos) window.location.href = 'https://en.sahos24.com/photo-gallery/street-photography/8/On-the-streets-of-Dhaka';
		else{
			$('.photo_gal_block .photo_slider li.photo_list').fadeOut();		
			$('.photo_gal_block .photo_slider li:nth-child('+(cur_slider_index+1)+')').fadeIn();
		}
	});
</script>


