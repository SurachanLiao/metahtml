  <script type="text/javascript">   
	requiresDependency('https://static.ctvnews.ca/bellmedia/common/js/videoUtil.js', function() {
	      /* -- Setup: Load playlist navigation ---------------- */
		  CTVNews.getPaginatedClips('2.625/1.4854651', '1', 3, "genericPlayerNav", "false");	
	      
	      /* -- Event binding: Playlist logic -------------------------- */
	      // This event is triggered when a user selects a clip or it moved on to the next page of clips.                                            
	      jQuery(document).bind('isDone.onPlaylistUpdate', function() {
	          CTVNews.setCurrPlayingClipPageNum( CTVNews.getPlaylistPageNum() );

	      });
      });
      jQuery(document).off('isDone.onGenericPagePlayerSetup').on('isDone.onGenericPagePlayerSetup', function(e, genericPlayer_genericVideoContainer){
            genericPlayer_genericVideoContainer.on('PLAYER_READY', function(){

                if ((readCookie("autoPlayWithSound") === 'true' || readCookie("autoPlayWithSoundNextVideo") === 'true')) {
                    jwplayer().setMute(false);

                    createCookie("autoPlayWithSoundNextVideo", true); // Create a new cookie for next video (do not set date)
                    $(window).unload(function() {
                        eraseCookie("autoPlayWithSoundNextVideo", true); // when you change page we remove the cookie
                    });

                    eraseCookie('autoPlayWithSound');  // remove cookie so if user press back button the video will load without sound.
                }

                // Whenever a video starts, highlight it in the thumbnail area.
                genericPlayer_genericVideoContainer.on('PLAYBACK_STARTED', function(obj){
                    $('.playa24-clipTitle').hide();
                    CTVNewsGenericPlayer.highlightClip(obj.contentId);
                    //CTVNews.writeToChartBeat(obj.contentId);
                });
                
                
            });
        });
  </script>

  
  
  
    



