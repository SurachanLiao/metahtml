<div class="covid-timeLine">
<h3 class="happeningNow">LIVE COVID-19 UPDATES</h3>
    <script type="text/javascript">
      function loadcovidPQ(){
        $.ajax({
        type: "GET",
        url: "https://www.ctvnews.ca/rss/ctvnews-ca-covid-all-news-tag-driven-1.4866013",
        cache: true,
        dataType: "xml",
        success: function parseXml(xml){
            $("#covidDiv").html("<ul id='contentCovid' data-role='listview' data-inset='true'></ul>");
            $(xml).find("item").each(function(){
              function changeTimezone(date, tmZne) {
                var oldTmZne = new Date(date.toLocaleString('en-US', {
                timeZone: tmZne
                }));
                var df = date.getTime() - oldTmZne.getTime();
                return new Date(date.getTime() + df);
              }
              var there = new Date();
              var here = changeTimezone(there, "America/Toronto");
              
              var dat4 = $(this).find("ctv\\:lastModifiedDate").text();
              var dat6 = Date.parse(dat4);
              var dat5 = new Date(dat6);
              var diff = here.getTime() - dat5.getTime();
              var upDateTime = diff;
              var hh = Math.floor(upDateTime / 1000 / 60 / 60);
              upDateTime -= hh * 1000 * 60 *60;
              var mm = Math.floor(upDateTime / 1000 / 60);
              upDateTime -= mm * 1000 * 60;
              if(hh===0 && mm === 0) {
                var timeFrame = "now";
              }else if (hh===0){
                var timeFrame = mm + " min ago";
              }else if (hh>=6){
                var timeFrame = "";
              } else {
                var timeFrame = hh + "h:" + mm + " min ago";
                }

              $("#contentCovid").append("<li><p><svg height='12' width='12'><circle cx='8' cy='6' r='5' stroke='white' stroke-width='4' fill='#005FFF'></circle></svg><a href='"+$(this).find("link").text()+"'>"+$(this).find("title").text()+"</a><span>"+ timeFrame+" </span></p></li>");
            });  
          }
        });
      }
      $(document).ready(function(){
        loadcovidPQ();
        setInterval(function(){ loadcovidPQ() }, 60000);
      });

    </script>
    <div id="covidDiv" class="covid-list"></div>
</div>

  

