           //plain javaScript is used to reduce depenecies on Jquery
           var plenigoPaywall ={
               hideProductInfo: function(){
                   elems = document.getElementsByClassName('paywall-infobox');
                   var i = elems.length;
                   while (i--) {
                       elems[i].style.display = "none"
                   }
               },
               showProductInfo: function(id){
                   this.hideProductInfo();
                   document.getElementById(id).style.display="block";
               },
               toggleProductInfo: function(id){
                   if(document.getElementById(id).style.display == "block"){
                       this.hideProductInfo(id);
                   } else {
                       this.showProductInfo(id);
                   }
               },
               unsetSelects: function(){
                   document.getElementById("paywall-selection").value = "";
               },
               setSelect: function(id) {
                   this.unsetSelects();
                   document.getElementById("paywall-selection").value = id;
               },
               toggleElement: function(id) {
                   document.getElementById(id).classList.toggle("toggle-active");
               },
               submitCheckout: function(id) {
                   this.unsetSelects();
                   document.getElementById("select_"+id).className = "paywall-checkbox checked";
                   document.getElementById("paywall-selection").value = id;
               }
               
           };
