	function appendInlineHeritageAd() {
		var htmlArray = [
			'<div class="imageRight" style="width:200px; oveflow:hidden;">',
				'<a href="https://mehring.com/the-heritage-we-defend-a-contribution-to-the-history-of-the-fourth-international.html" target="_blank">',
					'<img src="https://mehring.com/media/catalog/product/cache/1/image/9df78eab33525d08d6e5fb8d27136e95/h/e/heritage_300_3.jpg" style="width:200px;">',
					'<span>Click here to order the English edition of <em>The Heritage We Defend</em></span>',
				'</a>',
			'</div>'
		];
		var html = htmlArray.join('');
		$('#content > p').slice(-25,-24).before(html);
	}
	
	function appendInlineNewsletterAd() {
		var htmlArray = [
			'<div class="imageLeft" style="width:198px; margin-right:20px; oveflow:hidden;">',
				'<a href="/en/special/newsletter.html#pk_campaign=inline&pk_kwd=imagelink-newsletter" target="_blank">',
					'<img src="/en/media/photos/legacy/sidebar/newsletter198.png" style="width:198px;">',
				'</a>',
			'</div>'
		];
		var html = htmlArray.join('');
        var pos = $('#content > p').length / 2;
		$('#content > p').slice(-(pos+1),-(pos)).before(html);
	}

	function appendInlineSepjoinAd() {
		var htmlArray = [
