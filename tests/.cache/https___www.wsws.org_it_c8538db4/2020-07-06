  	function appendFundAppeal2015() {
  		if ($.cookie('fundAppeal2015') != 'seen') {
  			if ($('#page').length > 0) {
	  			var htmlArray = [
  					'<div id="fundAppeal2015" class="active">',
						'<div class="wrapper">',
							'<div class="left" style="padding-top:32px;">',
