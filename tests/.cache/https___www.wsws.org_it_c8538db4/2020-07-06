							'</a>',
							'<button style="background:#fff; border:none;">x</button>',
						'</div>',
					'</div>'
	  			];
	  			var html = htmlArray.join('');
  				$('body').prepend(html);
  				$('#popupfundappeal').click(function() {
		  			$('#popupfundappeal').remove();
			  		var expireDate = new Date();
		  			var minutes = 180;
		  			expireDate.setTime(expireDate.getTime() + (minutes * 60 * 1000));
		  			$.cookie('popupeventadd', 'seen', {
			  			expires: expireDate,
			  			path: '/',
			  			domain: 'wsws.org',
			  			secure: false
			  		});
		  		});
  				setTimeout(function() {
	  				$('#popupfundappeal').addClass('active');
	  			}, 2000);
  			}
  		}
  	}
  	  	
