  				        '<li><input id="RadioGroup1_6" type="radio" name="amount" value="250"> $250</li>',
  				        '<li><input id="RadioGroup1_7" type="radio" name="amount" value=""> Other</li>',
  				      '</ul>',
  				      '<input class="button" type="submit" name="submit2" value="Donate with PayPal or Credit Card">',
  				    '</form>',
  				  '</div>',
  		  		'</div>'
  		  	];
  		  	var html = htmlArray.join('');
  		  	if ($('#article-tools').length > 0) {
  		  		$('#article-tools').before(html);
  		  	} else {
	  		  	$('#content').append(html);
  		  	}
        	$('#inline-appeal').children('form').children('.more-options').children('a').click(function() {
  				$('#inline-appeal').children('.initially-hidden').show();
  				$(this).parent().hide();
  				return false;
  			});
  		}
  	}
  	
