<script type="text/javascript">
	
function openPopUp(url, width, height) {
    var left = (screen.width) ? (screen.width - width) / 2 : 100;
    var top = (screen.height) ? (screen.height - height) / 2 : 100;
    var name = "";
    var properties = "menubar=no,toolbar=no,resizable=yes,scrollbars=yes";
    properties = properties + ",width=" + width + ",height=" + height + ",top=" + top + ",left=" + left + ";";
    window.open(url, name, properties);
}
</script>
