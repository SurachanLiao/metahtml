dfp_ad_slots['Instory3'] = googletag.defineSlot('/52224093/Instory-3',[300,250],'div-gpt-ad-Instory-3').defineSizeMapping(mapping['Instory3']).addService(googletag.pubads());
dfp_ad_slots['Native1'] = googletag.defineSlot('/52224093/Native-1',"fluid",'div-gpt-ad-Native-1').defineSizeMapping(mapping['Native1']).addService(googletag.pubads());
dfp_ad_slots['Native2'] = googletag.defineSlot('/52224093/Native-2',"fluid",'div-gpt-ad-Native-2').defineSizeMapping(mapping['Native2']).addService(googletag.pubads());

			// Disable initial load of ad.
			googletag.pubads().enableSingleRequest();
			googletag.pubads().enableVideoAds();
			googletag.pubads().enableAsyncRendering();
			googletag.pubads().collapseEmptyDivs();
			googletag.enableServices();

			window.politicoInStoryAdSlotLoops = [];
			window.politicoInStoryAdSlotCheckIntervals = [];
			window.politicoInstoryAdSlotCheck = function( slotId ) {
				if (jQuery('#' + slotId).height() <= 50) {
					jQuery('#' + slotId).hide();
				} else {
					jQuery('#' + slotId).show();
				}
				window.politicoInStoryAdSlotLoops[slotId] = window.politicoInStoryAdSlotLoops[slotId] || 0;
				window.politicoInStoryAdSlotLoops[slotId]++;
				if (window.politicoInStoryAdSlotLoops[slotId] > 10) {
					var intervalId = window.politicoInStoryAdSlotCheckIntervals[slotId] || 0;
					if (intervalId > 0) {
						clearInterval(intervalId);
					}
				}
			}

			window.politicoVideoAdObserver = new MutationObserver(function (mutations) {
				mutations.forEach(function (mutation) {
					if(mutation.target.offsetHeight > 50 && mutation.target.offsetWidth > 50) {
						// we have a loaded ad!!
						jQuery(mutation.target).closest('.story-interrupt.format-s.pos-alpha.predetermined')
							.removeAttr('style');
						window.politicoVideoAdObserver.disconnect();
					}
				});
			});

			googletag.pubads().addEventListener('slotRenderEnded', function (event) {
				var match = null;
				var slotName = event.slot.getAdUnitPath();
				var observedAds = [ 'div-gpt-ad-Leaderboard', 'div-gpt-ad-Skin' ];
				if ( '' !== slotName ) {
					match = /\/\d+\/Instory\-(\d{1})/g.exec(slotName);
				}

				if ( -1 !== observedAds.indexOf( event.slot.getSlotElementId() ) ) {
					var adLoaded = new CustomEvent( 'PoliticoAdLoaded', {
						detail : {
							ad: event.slot.getSlotElementId()
						}
					});

					document.dispatchEvent( adLoaded );
				}

				if ( ! Array.isArray( match ) ) {
					return;
				}

				var adSlot = jQuery('#div-gpt-ad-Instory-' + match[1]);

				if (null != match && event.size[0] <= 1 && event.size[1] <= 1) {
					// this is a video/media ad with custom JS in iframe, this hack is to ensure
					// we hide the ad slot if the ad is not loaded
					// the slot CSS display should be 'block', else the JS will not trigger the ad load
					adSlot.closest('.story-interrupt.format-s.pos-alpha.predetermined')
							.css({display: 'block', height: '1px', overflow: 'hidden', margin: 0});

					var observerConfig = {
						childList: true,
						attributes: true,
						subtree: true
					};
					// observe for mutation changes on the ad slot
					window.politicoVideoAdObserver.observe(adSlot.get(0), observerConfig);
					// give the ad 30 seconds to load before disconnecting mutation observer
					setTimeout(function(){
						window.politicoVideoAdObserver.disconnect();
					}, 30000);
					return;
				}

								if (event.isEmpty) {
					if (null != match) {
												adSlot.closest('.story-interrupt.format-s.pos-alpha.predetermined').hide();
					}
				} else {
					if (null != match) {
												adSlot.closest('.story-interrupt.format-s.pos-alpha.predetermined').show();
						window.politicoInStoryAdSlotCheckIntervals['div-gpt-ad-Instory-' + match[1]] = setInterval(politicoInstoryAdSlotCheck, 500, 'div-gpt-ad-Instory-' + match[1]);
					}
				}
			});
		});

		var resizeTimer;
		var currentWidth = jQuery( window ).width();

		function resizer() {
			newWidth = jQuery( window ).width();

			jQuery.each([ 728, 970 ], function( index, value ) {
				if ( ( currentWidth >= value && newWidth < value )
					|| ( newWidth >= value && currentWidth < value ) ) {
							jQuery( '.global-newsletter-insider' ).hide();
							googletag.pubads().refresh();
				}
			});

			currentWidth = newWidth;
		}
		window.addEventListener( 'resize', function() {
			clearTimeout( resizeTimer );
			resizeTimer = setTimeout( resizer, 250 );
		});

		jQuery(document).ready( function() {
			// Value of scrollY at which the ad is about to come into view.
			var refreshAdOnScroll = function() {
				var rect3ScrollIndex = jQuery('#div-gpt-ad-Rectangle-3').offset();
				if (typeof rect3ScrollIndex != 'undefined' && window.scrollY >= rect3ScrollIndex.top - window.innerHeight) {
				  jQuery(document).trigger('refresh-div-gpt-Rectangle-3');

				  // Remove the listener now.
				  window.removeEventListener('scroll', refreshAdOnScroll);
				}
			}
			window.addEventListener('scroll', refreshAdOnScroll) ;
		});
		</script>
