		<!-- Initialize EV.EM.init // Evolok Metering -->
	<script type="text/javascript">
		EV.Em.init({
			url: "https://ev.spectator.org/acd/api/3.0",
			sidCookieDomain: "spectator.org"
		});
		
		var params = JSON.stringify({
			site: "spectator.org",
			articleId: "371490",
			title: "The False Alert of Global Warming",
			authors: "Kevin Portteus",
			category: document.querySelector('#ev_category_list').innerText,
			section: "News",
			tags: document.querySelector('#ev_tags_list').innerText
		});

		function handleMeteringSuccess(response) {
			console.log(response);

			/* if((response.segments[1] == 'FounderCircle/FriendOfSpectator' || response.segments[1] == 'DigitalPlus' || response.segments[1] == 'FriendOfSpectator' || response.segments[1] == 'FounderCircle') && response.loggedOut == false) {
				$('.spectator-ads').remove();
				$('body').addClass('premium-account');
				$('body').addClass('user-subscribed');
				$('#sticky-footer').remove();
				$('.udm-ad').remove();
			}
			
			if(response.segments[1] == 'Digital' && response.loggedOut == false) {
				$('body').addClass('user-subscribed');
			} */
			 
			let isGold 	 = false;
			let isSilver = false;
			
			response.segments.forEach(function(segment){
				switch (segment) {
					case 'FounderCircle/FriendOfSpectator':
						isGold = true;
						break;
					case 'DigitalPlus':
						isGold = true;
						break;
					case 'FriendOfSpectator':
						isGold = true;
						break;
					case 'FounderCircle':
						isGold = true;
						break;
					case 'Digital':
						isSilver = true;
						break;
					default:
						break;
				}
			});
	
			jQuery(document).ready(function($){
				if (isSilver && response.loggedOut == false) {
					$('body').addClass('user-subscribed');
					$('body').addClass('isSilverSubscription');
					$('.rev-content').remove();
				}

				if (isGold && response.loggedOut == false) {
					$('body').addClass('isGoldSubscription');
					$('.spectator-ads').remove();
					$('body').addClass('premium-account');
					$('body').addClass('user-subscribed');
					$('#sticky-footer').remove();
					$('.udm-ad').remove();
					$('.rev-content').remove();
					
				}
				
				$('.user-subscribed #whizzco_script').remove();
				$('.user-subscribed .whizzco_widget').remove();
				$('.sticky-footer-standard').remove();
			});
			
			if ( typeof response.exceededMeter !== 'undefined' ) {
				count = response.exceededMeter.count;
				if ( response.exceededMeter.count >= 8 ) {
					$('body').addClass('registered-user-last-notifier');
				}
			} else if ( typeof response.activeMeter !== 'undefined' ) {
				count = response.activeMeter.count;
				if ( response.activeMeter.count >= 8 ) {
					$('body').addClass('registered-user-last-notifier');
				}
			}

			if (response.result == "ALLOW_ACCESS") {
				console.log("ALLOW_ACCESS");	
			} else if (response.requireEntitlement) {
				//displayRequireLoginWithEntitlementPaywall();
				console.log("REQUIRE_LOGIN_WITH_ENTITLEMENT");
			} else {
				if (response.result == "REQUIRE_LOGIN") {
					displayRequireLoginPaywall();
					console.log("REQUIRE_LOGIN");
				} else {
					displayRequireEntitlementPaywall();
					console.log("REQUIRE_ENTITLEMENT");
				}
			}
		}
		
		function handleMeteringError(error) {
			console.log("You have reached an error, please login");
		}
		
		EV.Em.authorize(params, handleMeteringSuccess, handleMeteringError);

		jQuery(document).ready(function($){
			EV.Event.on("ev.paywall.render.ready", function() {
				EV.Event.publish("ev.paywall.paywallentitlement");
			});
			EV.Event.on('ev.notifier.opened', function(){
				$('body').addClass('active-paywall');
			});
			
			EV.Event.on('ev.paywall.opened', function(){
				$('body').addClass('active-paywall');
			});
		});
		
		/*EV.handleNewSession(function(result) {
			if ( !result.allowAccess ) {
				window.location.reload();
			}
		});*/
	</script>

	<script>
	function goBack(event) {
		if ('referrer' in document) {
			window.location = document.referrer;
		} else {
			window.history.back();
		}
	}
	EV.Event.on("login.success", function (res) {
		console.log("Login Success = ", res);
		EV.Event.publish("ev.paywall.close");
		EV.Event.publish("ev.notifier.close");
	});
	EV.Event.on('login.failed', function (res) {
		console.log("Login Failed = ", res);
	});
	EV.Event.on('registration.failed', function (res) {
		console.log("Registration Failed = ", res);
	});

	</script>

