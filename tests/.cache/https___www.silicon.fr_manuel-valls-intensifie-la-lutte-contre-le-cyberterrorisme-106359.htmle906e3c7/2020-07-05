                            $( ".abl-overlay-message-newsletter-failure" ).remove();
                            $( ".abl-overlay-message-newsletter-result" ).append( '<div class="abl-overlay-message-newsletter-failure">' + failure_field + '</div>' );
                        }else if(!reg_email.test(input_email)){
                            $( ".abl-overlay-message-newsletter-success" ).remove();
                            $( ".abl-overlay-message-newsletter-failure" ).remove();
                            $( ".abl-overlay-message-newsletter-result" ).append( '<div class="abl-overlay-message-newsletter-failure">' + failure_form + '</div>' );
                            $(".abl-overlay-message-newsletter-email").value = input_email;
                        }
                        else{

                            var request = jQuery.ajax({
                                url: url_post,
                                method: "POST",
                                data: { nid:"NULL", site: site_name, email: input_email, track: 'via-adblock-popup/'+site_name, subscription_url: 'https://inscription.silicon.fr' },
                                dataType: "json"
                            });

                            request.done(function( response ) {
                                if( response ) {
                                    if (response.status == true) {
                                        var success_message = response.data;
                                        $(".abl-overlay-message-newsletter-success").remove();
                                        $(".abl-overlay-message-newsletter-failure").remove();
                                        $(".abl-overlay-message-newsletter-result").append('<div class="abl-overlay-message-newsletter-success">' + success_message + '</div>');

                                        $(".abl-overlay-message-content-message").css("display", "none");
                                        $(".abl-overlay-message-newsletter-login").css("display", "none");
                                        $(".abl-overlay-message-newsletter-email").css("display", "none");
                                        $(".abl-overlay-message-newsletter-button").css("display", "none");

                                        if (typeof _sdt == 'function') {

                                            var push_data = {"site":{"name":"silicon.fr","domain":"www.silicon.fr","country":"france"},"page":"single","type":"post","id":106359,"slug":"manuel-valls-intensifie-la-lutte-contre-le-cyberterrorisme","url":"https:\/\/www.silicon.fr\/manuel-valls-intensifie-la-lutte-contre-le-cyberterrorisme-106359.html","title":"Manuel Valls intensifie la lutte contre le cyberterrorisme","author":"Ariane Beky","taxonomy":[{"name":"category","slug":"actualites","data":[{"name":"S\u00e9curit\u00e9","slug":"security","sub":[{"name":"Cyberguerre","slug":"cyberwar"}]},{"name":"R\u00e9gulations","slug":"e-regulation","sub":[{"name":"Legislation","slug":"legal"}]}]},{"name":"post_tag","slug":"tag","data":[{"name":"Charlie Hebdo","slug":"charlie-hebdo"},{"name":"cybercrime","slug":"cybercrime"},{"name":"cybers\u00e9curit\u00e9","slug":"cybersecurite"},{"name":"DGSI","slug":"dgsi"},{"name":"Manuel Valls","slug":"manuel-valls"},{"name":"Pharos","slug":"pharos"}]},{"name":"displayed_experts","slug":"experts"}]};
