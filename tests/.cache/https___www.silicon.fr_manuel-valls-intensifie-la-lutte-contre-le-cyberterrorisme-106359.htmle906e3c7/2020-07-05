                    var nextStoryNUM = 1;
                    var waypoint = waypoint = new Waypoint({
                        element: jQuery('.infinite-container'),
                        handler: function(direction) {
                                if ((direction === 'down') && (nextStoryNUM < nextScrollStories.length)) {
                                getNextPage(nextStoryNUM);
                                nextStoryNUM++;
                            }
                        },
                        offset: 'bottom-in-view'
                    });
                    // ----------------------------------------
                    // get next page and inject it into the infinite-container
                    // ----------------------------------------

                    function getNextPage(myPageNum) {
                        
                        // Return if the page is already Injected ( technically the end of related stories)
                        if (nextScrollStories[myPageNum].injected) {
                            return;
                        }

                        waypoint.disable();
                                                /* <--- debug */

                        jQuery.fn.getElementHeight = function () {
                            return jQuery( this ).outerHeight( true );
                        }
                        
                        jQuery.fn.placeRadial = function () {
                            this.css( "position", "absolute" );
                            var last_article = jQuery( '#main .infinite-container .site-content' ).last();
                            this.css( 'top', (last_article.offset().top + last_article.getElementHeight() - (2 * jQuery( '#radProg' ).getElementHeight())) + 'px' );
                            this.css( "left", Math.max( 0, ((jQuery( window ).width() - jQuery( this ).outerWidth()) / 2) ) + "px" );
                            return this;
                        }

                        var infinite_scroll_anim            = jQuery('#artInfScroll');
                        var infinite_scroll_anim_rad_border = jQuery('#radBorder');
                        var infinite_scroll_lock            = false;

                        infinite_scroll_anim.hide();
                        jQuery.ajax({
                            xhr    : function () {
                                //console.log( 'infinite_scroll_anim start' );
                                infinite_scroll_anim_rad_border.attr( 'style', 'stroke-dashoffset: 471px;' );

                                // place the loading animation to the end of the last article
                                infinite_scroll_anim.placeRadial();
                                infinite_scroll_anim.fadeIn("fast", function () {
                                });

                                //infinite_scroll_anim.show();
                                var xhr = new XMLHttpRequest();

                                // progress
                                xhr.addEventListener( "progress", function ( evt ) {
                                    if ( evt.lengthComputable ) {
                                        var percentComplete = evt.loaded / evt.total;
                                        //console.log( 'Download progress: ' + percentComplete );
                                        infinite_scroll_anim_rad_border.attr( 'style', 'stroke-dashoffset: ' + (471 - (458 * percentComplete)) + 'px;' );
                                    } else {
                                        infinite_scroll_anim_rad_border.attr( 'style', 'stroke-dashoffset: 13px;' );
                                    }
                                }, false);

                                return xhr;
                            },

                            isLocal: true,
                            cache  : false,
                            type   : 'GET',
                            //url    : nextScrollStories[myPageNum].url + '?infinite=1&current_id=' + (myPageNum + 1),
                            url    : nextScrollStories[myPageNum].url,
                            data   : {
                                infinite: 1,
                                current_id: (myPageNum + 1),
                            },

                            success: function (html) {

                                infinite_scroll_anim.css( 'opacity', '1' );

                                var cpt = 50;
                                var si  = setInterval( function () {
                                    infinite_scroll_anim.css( 'opacity', Math.max( infinite_scroll_anim.css( 'opacity' ) - 0.02, 0 ) );
                                    cpt--;

                                    if ( cpt == 0 ) {
                                        clearInterval( si );
                                        infinite_scroll_anim_rad_border.attr( 'style', 'stroke-dashoffset: 13px;' );
                                        infinite_scroll_anim.hide();
                                        infinite_scroll_anim.css( 'opacity', '1' );
                                        infinite_scroll_lock = false;
                                        /*
                                        * add DIV and waypoints associated ot this DIV
                                        * to update url and title and to fire G'lytics
                                        */
                                        var divID = "infinite-" + (myPageNum - 1) + "-" + (myPageNum);
                                        jQuery(".infinite-container").append('<div id="' + divID + '" data-prev="' + (myPageNum - 1) + '" data-next="' + (myPageNum) + '"></div>');
                                        // Change Navigator behavior according to articles occured during the scroll up
                                        var waypointUp = new Waypoint({
                                            element: jQuery("#" + divID),

                                            handler: function (direction) {
                                                if (direction === 'up') {
                                                    //var prev = jQuery("#" + divID).data("prev");
                                                    var prev = this.element.data("prev");
                                                    //console.log('passed waypoint "' + divID + '" up to previous page: ' + prev);
                                                    window.history.pushState("page-" + prev, "Title: " + prev, nextScrollStories[prev].url);
                                                    //refresh hutt
                                                                                                        jQuery("head title").text(nextScrollStories[prev].title)
                                                }
                                            },

                                            offset: "50%"
                                        });
                                        // Change Navigator behavior according to articles occured during the scroll down
                                        var waypointDown = new Waypoint({
                                            element: jQuery("#" + divID),
                                            handler: function (direction) {
                                                if (direction === 'down') {
                                                    //var next = jQuery("#" + divID).data("next");
                                                    var next = this.element.data("next");
                                                    //console.log('passed waypoint "' + divID + '" down to next page: ' + next);

                                                    // update URL of browser's address line
                                                    window.history.pushState("page-" + next, "Title: " + nextScrollStories[next].title, nextScrollStories[next].url);

                                                    // update head-title
                                                    jQuery("head title").text(nextScrollStories[next].title);

                                                    //refresh hutt
                                                    
                                                    if (!nextScrollStories[next].counted) {
                                                        // trigger spacedust page view
                                                                                                                //     _sdt("scrolled_pageview", nextScrollStories[next].sdt);
                                                        //                                                             // trigger Google Analytics page view
                                                        ga('send', 'pageview', nextScrollStories[next].url);
                                                        //secondary Google Analytics property
                                                                                                                // todo: more events for analytics ...
                                                        // - ga('send', 'event', 'page', 'single');
                                                        // - ga('send', 'event', 'type', 'post');
                                                        // - ga('send', 'event', 'category', '...');
                                                        // - ga('send', 'event', 'post_tag', '...');
                                                        ga('send', 'event', 'infinite-scroll', 'scroll-lvl-' + myPageNum, 'on:https://www.silicon.fr/manuel-valls-intensifie-la-lutte-contre-le-cyberterrorisme-106359.html');
                                                        // don't trigger again ...
                                                        nextScrollStories[next].counted = true;
                                                    }
                                                }
                                            },

                                            offset: "50%"
                                        });
                                        // Add next Page to the Dom and set Injected property to true
                                        var htmlStart = html.indexOf('<div id="infinite-scroll-' + 'marker-start" style="display: none;"></div>');
                                        var htmlEnd = html.indexOf('<div id="infinite-scroll-' + 'marker-end" style="display: none;"></div>');
                                        jQuery(".infinite-container").append(html.substring(htmlStart, htmlEnd + 66));
                                        nextScrollStories[myPageNum].injected = true;

                                        // Display all ads loaded by the infinite scroll if we are not using the smart loading option
                                        
                                        // Collaps comments
                                        jQuery("#comments-" + nextScrollStories[myPageNum].post_id).hide();
                                        // Refresh/Enable Waypoint Context because the infinite container is becoming longer
                                        waypoint.context.refresh();
                                        waypoint.enable();

                                        // Smooth Scrolling to the top of the next story
                                        jQuery('html, body').animate({
                                            scrollTop: jQuery("#page .infiniteTopBanner").last().offset().top - 60
                                        }, 800);
                                        return;
                                    }
                                }, 20 );

                            
                            },

                            error  : function (xhr, ajaxOptions, thrownError) {
                                console.log("error on loading " + nextScrollStories[myPageNum].url);

                                console.log(xhr.status);
                                console.log(thrownError);

                                infinite_scroll_anim.hide();
                                infinite_scroll_lock = false;
                            }
                        });
                    }
                });
            </script>
            <script type="text/javascript" >
                document.addEventListener("DOMContentLoaded", function(event) {
                    var ads = document.querySelectorAll(".dfp_ad");
                    var ids = [];
                    ads.forEach( function(element) {
                        var id = element.getAttribute('id');
                        if(ids.indexOf(id) !== -1){
                            var duplicatedAds = document.querySelectorAll("#"+ id);
                            duplicatedAds[duplicatedAds.length - 1].style.display = "none";
                        }
                        else
                            ids.push(id);
                    });
                });
            </script>
                        <script type="text/javascript" >
            jQuery(document).ready(function () {
                // ANW-3 : limiting characters title post editorial popin
                jQuery("#editorial-popin .text-editorial").text(function(i, titel) {
                        return (titel.length > 68) ? titel.substring(0, 68) + '..' : titel;
                });

                // scroll body to 0px on click
                jQuery("#back-top").click(function () {
                    jQuery('body,html').animate({
                            scrollTop: 0
                        }, 800);
                        return false;
                    });
            });
            </script>
        </body>
</html>

