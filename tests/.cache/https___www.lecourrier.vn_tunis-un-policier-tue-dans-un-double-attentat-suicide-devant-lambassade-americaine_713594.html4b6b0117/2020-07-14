<script language="javascript" type="text/javascript">
    function CheckValidate() {
        var txtContent = $("#txtContent").val();
        var txtEmail = $("#txtEmail").val();
        var txtName = $("#txtName").val();
        var reg1 = /^(([^<>()[\]\\.,;:\s@\"]+(\.[^<>()[\]\\.,;:\s@\"]+)*)|(\".+\"))@((\[[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\])|(([a-zA-Z\-0-9]+\.)+[a-zA-Z]{2,}))$/;
        testmail = reg1.test(txtEmail);
        var _check = true;
        if (txtContent.length < 2) {
            alert("Insérez votre commentaire");
            txtContent.focus();
            _check = false; return;
        }
        if (txtEmail.length < 2) {
            alert("Insérez votre email");
            txtEmail.focus();
            _check = false; return;
        }
        if (!testmail) {
            alert("L’email n’est pas correct");
            txtEmail.focus();
            _check = false; return;
        }
        if (txtName.length < 2) {
            alert("Insérez votre nom");
            txtName.focus();
            _check = false; return;
        }
        if (_check) {
            Send();
        }
    }
    function removeEntities(str) {
        return ('' + str).replace(/[`~!@#$%^&*()_|+\-=?;:'",.<>\{\}\[\]\\\/]/gi, '');
    }
    function Send() {
        var _ID = '713594';
        var _Email = $("#txtEmail").val();
        var _Name = $("#txtName").val();
        var _catID = '';
        var _lang = '';
        var sourceString = $("#txtContent").val();
        var _url = '//www.lecourrier.vn/ajax/SendCM.ashx?content=' + removeEntities(sourceString) + '&id=' + _ID + '&email=' + _Email + '&categoryid=' + _catID + '&name=' + removeEntities(_Name) + '&lang=' + _lang + '';
        $.ajax({
            type: "POST",
            url: _url,
            contentType: "application/json; charset=utf-8",
            dataType: "json",
            success: function (msg) {
                
		var data = msg;
                if (data == '1') {
                    $("#txtContent").val("");
                    $("#txtEmail").val("");
                    $("#txtName").val("");
                    alert('Merci de votre commentaire');
                }
                else {
                    alert('Commentaire false!');
                }
            }, error: function (msg) {
                alert('Commentaire false!');
            }
        });
    }
</script>


