$(document).ready(function() {
	$('a.togglecitationon').click(function(){
		$('div.citation-showhide').show('slow');
		$('a.togglecitationon').hide();
		$('a.togglecitationoff').show();
	});
	$('a.togglecitationoff').click(function(){
		$('div.citation-showhide').hide('slow');
		$('a.togglecitationon').show();
		$('a.togglecitationoff').hide();
	});
	$('a.closecitation').click(function(){
		$('div.citation-showhide').hide('slow');
		$('a.togglecitationon').show();
		$('a.togglecitationoff').hide();
	});
});
</script>


