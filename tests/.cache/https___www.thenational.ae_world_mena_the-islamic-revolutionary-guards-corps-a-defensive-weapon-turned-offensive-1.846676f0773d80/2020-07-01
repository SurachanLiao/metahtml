                            <script>
  $(document).ready(function() {
    $(".share-align").css("float", "right");
    if ($(window).width() < 768) {
      $('.share-align').hide();
    }
    $( window ).resize(function() {
      if ($(window).width() < 768) {
      	$('.share-align').hide();
      }else{
        $('.share-align').show();
      }
    });
  
  });
</script>

