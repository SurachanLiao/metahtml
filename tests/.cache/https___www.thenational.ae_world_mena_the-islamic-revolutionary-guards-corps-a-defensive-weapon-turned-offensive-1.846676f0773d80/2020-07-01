  $(function() {
    if ($('.header-sticky').length > 1){
      $('.header.hidden-xs.hidden-sm > .header-content > .container-fluid > .header-sticky').first().removeClass('header-sticky');
      $('.mobile-header > .mobile-header-sticky').first().removeClass('mobile-header-sticky');
      $('.special-banner .header-sticky').first().addClass('mobile-header-sticky');
    	console.log("Swapped banner sticky");
    }
 });
    
</script>

