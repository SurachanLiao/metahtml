	<script>
		var savestate;
		$(document).ready(function(){
			var originalClose = $.colorbox.close;
			$.colorbox.close = function(){
				var langsel = "exit";
				$("#inline_content").effect("transfer", { to: $("#sidebarlanguage") }, 600);
				if (window.savestate == undefined){
					$.get("https://www.islamreligion.com/ajlib/save_selected_language.php", { random: "9443acc3d223c5b7309987d51c141c63", ignore: "2d5877bbe435c96b634798eccf983ec2", skey: "c27ef585a7d4da8e7ee2a4fdf6c0e6ee", lang: langsel } );
				}
				originalClose();
			};
			
			function cbox(){
				$.colorbox({open:true, overlayClose:true, top:"25%", left: "35%", reposition: false, inline:true, width:"400px", href:"#inline_content"});
			}
			setTimeout(cbox,2000); // 2 seconds 
		});
		
		function closeMe() {
			$.fn.colorbox.close(); 
		}
		
		function saveChoice(langsel) {
			// alert(langsel);
			window.savestate = langsel;
			$.fn.colorbox.close();
			document.cookie = "cookie_lang="+langsel+"; expires=Thu, 15 OCt 2020 20:47:11 UTC; path=/"
			$.get("https://www.islamreligion.com/ajlib/save_selected_language.php", { random: "9443acc3d223c5b7309987d51c141c63", ignore: "2d5877bbe435c96b634798eccf983ec2", skey: "c27ef585a7d4da8e7ee2a4fdf6c0e6ee", lang: langsel }, 
				function(response){
					if (response.reply == "success"){
						// alert(response.reply+" here");
						return true;
					} else {
						// alert(response.reply);
						return false;
					}
				}, "json");
			// alert(rep);
			// return false;
		}
		
	</script>
