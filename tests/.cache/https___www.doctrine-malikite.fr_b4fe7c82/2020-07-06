function ChangeUrl(formulaire)
	{
	if (formulaire.ListeUrl.selectedIndex != 0)
		{
		window.open(formulaire.ListeUrl.options[formulaire.ListeUrl.selectedIndex].value);
	 	}
	else 
		{
		alert('Veuillez choisir une destination.');
		}
	}
