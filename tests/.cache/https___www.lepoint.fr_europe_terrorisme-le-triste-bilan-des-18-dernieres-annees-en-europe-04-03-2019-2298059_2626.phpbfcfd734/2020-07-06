var nom_prenom=document.ueip+' '+document.uein;
String.prototype.capitalize = function() {
return this.charAt(0).toUpperCase() + this.slice(1);
}
if(nom_prenom.length > 18) nom_prenom = document.ueic.capitalize()+' '+document.uein;
