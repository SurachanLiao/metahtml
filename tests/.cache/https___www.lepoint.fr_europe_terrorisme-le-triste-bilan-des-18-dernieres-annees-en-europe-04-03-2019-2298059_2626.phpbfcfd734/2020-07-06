if(nom_prenom.length <= 3) nom_prenom = "Mon compte";
document.write('<li class="pre-header-li">');
document.write('<a data-logout href="https://moncompte.lepoint.fr/Connexion/Ferme"><i class="ion-power inbl vm"></i>Me déconnecter</a>');
document.write('</li>');
document.write('<li class="pre-header-li"><a href="https://moncompte.lepoint.fr/"><i class="ion-person"></i> '+nom_prenom+'</a></li>');
} else{
document.write('<li class="pre-header-li"><a id="connect" data-shadowbox="#authform" href="https://moncompte.lepoint.fr/" onclick="return xt_med(\'F\',\'112\',\'Popin_identification::identifiez-vous_header\',\'\')"><i class="ion-person"></i> Identifiez-vous</a></li>');
}
if(document.ueia != 1){
document.write('<li class="pre-header-li last bg-yellow"><a href="https://abo.lepoint.fr/offre_decouverte#xtatc=INT-1904">Abonnez-vous</a></li>');
}
</script>
</ul>
</nav>
</div>
