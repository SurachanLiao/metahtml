                    //$("#error").html(msg + xhr.status + " " + xhr.statusText);
                    $("#ppblog-container").html(msg);
                }
            });
        }
        if (window.location.pathname.indexOf("peace-and-prosperity") > -1) {
            $("#ppblog-container-latest").load("/p-and-p-latest-posts/", function (response, status, xhr) {
                if (status == "error") {
                    var msg = "Latests Posts in Peace and Prosperity Coming Soon!";
                    //$("#error").html(msg + xhr.status + " " + xhr.statusText);
                    $("#ppblog-container-latest").html(msg);
                }
            });
            $("#ppblog-container").load("/peace-and-prosperity-archives-navigation/", function (response, status, xhr) {
                if (status == "error") {
                    var msg = "Latests Posts in Peace and Prosperity Coming Soon!";
                    //$("#error").html(msg + xhr.status + " " + xhr.statusText);
                    $("#ppblog-container").html(msg);
                }
            });
        }
        if (window.location.pathname.indexOf("neocon-watch") > -1) {
            $("#ppblog-container-latest").load("/neocon-watch-latest-posts/", function (response, status, xhr) {
                if (status == "error") {
                    var msg = "Latests Posts in NeoCon Watch Coming Soon!";
