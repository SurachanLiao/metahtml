            $("#ppblog-container").load("/congress-watch-archives-navigation/", function (response, status, xhr) {
                if (status == "error") {
                    var msg = "Latests Posts in Congress Alert Coming Soon!";
                    //$("#error").html(msg + xhr.status + " " + xhr.statusText);
                    $("#ppblog-container").html(msg);
                }
            });
        }
        if (window.location.pathname.indexOf("featured-articles") > -1) {
            $("#ppblog-container-latest").load("/featured-articles-latest-posts/", function (response, status, xhr) {
                if (status == "error") {
                    var msg = "Latests Posts in Featured Articles Coming Soon!";
                    //$("#error").html(msg + xhr.status + " " + xhr.statusText);
                    $("#ppblog-container-latest").html(msg);
                }
            });
            $("#ppblog-container").load("/featured-archives-navigation/", function (response, status, xhr) {
                if (status == "error") {
