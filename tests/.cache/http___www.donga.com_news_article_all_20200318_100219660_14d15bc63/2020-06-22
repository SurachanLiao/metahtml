<script>
$(document).ready(function() {
    var right_ad_top = parseInt($("#right_wingad").css("top")) ;
    $(window).scroll(function() {
        if ( $(window).scrollTop() > right_ad_top )
        {
            var ad_top = $(document).scrollTop() - right_ad_top + ( right_ad_top + 40 ) ;
            if ( ad_top > right_ad_top )
            {
                $("#right_wingad").stop().animate({"top": ad_top + "px"}, 700) ;
            }
        }
        else
        {
            $("#right_wingad").stop().animate({"top": right_ad_top + "px"}, 700) ;
        }
    }) ;
});
</script>
