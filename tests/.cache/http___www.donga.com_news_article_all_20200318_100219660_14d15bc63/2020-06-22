$(document).ready(function(){

    var right_ad_top = parseInt($("#right_ad").css("top")) ;
    $(window).scroll(function() {
        if ( $(window).scrollTop() > right_ad_top )
        {
            var ad_top = $(document).scrollTop() - right_ad_top + ( right_ad_top - 228 ) ;
            if ( ad_top > right_ad_top )
            {
                $("#right_ad").stop().animate({"top": ad_top + "px"}, 700) ;
            }
        }
        else
        {
            $("#right_ad").stop().animate({"top": right_ad_top + "px"}, 700) ;
        }
    }) ;

    changeFontSize() ;
}) ;
document.charset="utf-8" ;
</script>
