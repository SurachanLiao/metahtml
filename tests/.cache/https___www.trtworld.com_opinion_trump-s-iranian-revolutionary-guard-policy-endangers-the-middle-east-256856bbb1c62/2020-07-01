    <!-- small fix in figcaption's space between brackets-->
    <script>
      $('body').find('figcaption').each(function () {
        var caption = $(this);
        caption.text(caption.text().replace(/\s+(?=[^(\)]*\))/g, function (match, index) {
          if (caption.text()[index] != " ") {
            return "";
          }
          else {
            return " ";
          }
        }));
      });
    </script>

