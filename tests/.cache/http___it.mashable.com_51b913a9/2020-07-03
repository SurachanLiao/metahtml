  <script type="text/javascript">window.ICMS.cmd.push(function() { 
  var loadInfiniteScrollPage = function() {
   var next = document.getElementById('infinitenext');
   var nextUrl = (next) ? next.href : '';
   if (!nextUrl) { return false; }
   var defaultNextPage = parseInt(ICMS.getURLParam('page', nextUrl));
   var pps = document.querySelectorAll("[data-pagenum]");
   var currentPage = parseInt(pps[pps.length-1].dataset.pagenum);
   var nextPageNum = (currentPage) ? currentPage+1 : defaultNextPage;
   nextUrl = ICMS.setURLParam('page', nextUrl, nextPageNum);

   if (ICMS._infiniteScrollRequest && ICMS._infiniteScrollRequest == nextUrl) { return; }
   ICMS._infiniteScrollRequest = nextUrl;

   ICMS.ajax(nextUrl+"&ist=broll", function(data, textStatus, jqXHR) {
     if (!data || data.length < 800) { ICMS._infiniteScrollStatus = 'stop'; return false; }
     var shadow = document.createElement('div'); shadow.innerHTML = data;
     var attemptPage = parseInt(shadow.getAttribute("data-pagenum") || shadow.querySelector("[data-pagenum]").getAttribute("data-pagenum"));
     if (!attemptPage || document.querySelector("[data-pagenum='"+attemptPage+"']")) { return; } // don't load the same page twice
     var news = shadow.querySelector("#wn");
     if (news.querySelectorAll("li").length < 2) { ICMS._infiniteScrollStatus = 'stop'; return false; }
     document.querySelector("#new #wn").dataset.pagenum = nextPageNum;
     document.querySelector("#new").insertAdjacentHTML('beforeend', news.outerHTML);
     if (ICMS.isVisible("#rising")) { document.querySelector("#rising").insertAdjacentHTML('beforeend', shadow.querySelector("#rising #wr").outerHTML); }
     if (ICMS.isVisible("#hot")) { document.querySelector("#hot").insertAdjacentHTML('beforeend', shadow.querySelector("#hot #wh").outerHTML); }
     ICMS.initMediaLazyLoading();
     if (window.ga) { ga('send', 'pageview'); }
     if (typeof window._comscore !== 'undefined') {
       var im = new Image('https://sb.scorecardresearch.com/p?c1=2&amp;c2=3000068&amp;c4='+encodeURIComponent(nextUrl));
     }
     if (window.zad && window.zad.renderNewAds) { window.zad.renderNewAds(); }
    }, 'html');
  }

  var triggerPageLoad = function() {
    if (ICMS._infiniteScrollStatus == 'stop') { return false; };
    var pageHeight = document.documentElement.scrollHeight;
    var y = window.pageYOffset;
    if ((y+(screen.height*2)) > pageHeight) { return true; }
    return false;
  }

  window.addEventListener('scroll', function() {
    if (triggerPageLoad()) { loadInfiniteScrollPage(); }
  });

 });</script>
