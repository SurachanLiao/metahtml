<section id="block-views-ar-home-page-view-block-2" class="block block-views clearfix">

        <h2 class="block-title">Nouvelles</h2>
    
  <div class="view view-ar-home-page-view view-id-ar_home_page_view view-display-id-block_2 main-stories-sub view-dom-id-963b8156c6217de895f10734a0539206">
        
  
  
      <div class="view-content">
      

<div id="views-bootstrap-thumbnail-2" class="views-bootstrap-thumbnail-plugin-style">
  
          <div class="row">
                  <div class=" col-xs-12 col-sm-6 col-md-4 col-lg-4">
            <div class="thumbnail">
                
