<script type="text/javascript">
var defaultPlatforms = ',Share,Email';
platforme = 'false'+defaultPlatforms;
var platforms = platforme.split(',');

for (var i=0, j=platforms.length; i<j; i++) {
	if ('Email' == platforms[i]) {
		$('div.GigyaBg').append('<img src="/template/ver1-0/i/share-email.svg" class="EmBG" />');
	}
	else if ('Share' == platforms[i]) {
		$('div.GigyaBg').append('<img src="/template/ver1-0/i/share-share.svg" class="ShBG" />');
	}
	else if ('LinkedIn' == platforms[i]) {
		$('div.GigyaBg').append('<img src="/template/ver1-0/i/share-in.svg" class="InBG" />');
	}
	else if ('Pinterest' == platforms[i]){
		$('div.GigyaBg').append('<img src="/template/ver1-0/i/share-p.svg" class="PinBG" />');
	}
	else if ('Twitter' == platforms[i]) {
		$('div.GigyaBg').append('<img src="/template/ver1-0/i/share-tw.svg" class="TwBG" />');
	}
	else if ('Facebook' == platforms[i]) {
		$('div.GigyaBg').append('<img src="/template/ver1-0/i/share-fb.svg" class="FbBG" />');
	}
}
</script>

