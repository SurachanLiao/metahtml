<script>
window.vfQ = window.vfQ || [];
window.vfQ.push(function() {
    //console.log('window.vf.* is now ready');
    //console.log('window.vf: ', window.vf);
    window.vf.$subscribe('authentication', 'required', function () {
        //console.log('authentication required event');
        jQuery('div.alert-message').hide();
        reModal('signin', true);
    });
    window.vf.$subscribe('login', 'success', function (message) {
        //console.log('login success event: ', message);
        jQuery('div.alert-message').hide();
    });
    window.vf.$subscribe('login', 'failure', function (message) {
        console.log('login success failure: ', message);
        if (jQuery('.vf-commenting div.alert-message').length == 0) {
            jQuery('.vf-comment-box').append(
                jQuery('<div class="alert-message" style="display: none;">' + message.api_code_data.status_message + "</div>")
            );
        }
        jQuery('div.alert-message').show();
    });
    //console.log('window.viafoura: ', window.viafoura);

    window.vf.context.get('page').then(
        (page) => {
            //console.log('num_replies: ', page.num_replies);
            //console.log('status: ', page.status);
            if (0 == page.num_replies && "closed" == page.status) {
                if (!jQuery('#comments').hasClass('it-comments--app')) {
                    jQuery('#comments').hide();
                }
                jQuery(".gallery__comments").remove();
                jQuery('.c-count').parent().remove();
                jQuery('.article-metadata .comments').remove();
                if(jQuery('div.article_holder:not(.genre-editorial)').length > 1){
                    if(jQuery('div.article-metadata .byline').length < 1){
                        jQuery('div.article-metadata').remove();
                    }
                }
            }
        }
    );
    // force logout of social logins
    var vfLogin = window.viafoura.users.current();
    if (vfLogin && vfLogin.social_login_provider != 'Viafoura Defined Cookie') {
        //console.log('session logout');
        window.vf.session.logout();
    }
});
</script>                                                                                                                                    </div>
