	    <script>
	    	jq(document).ready(function()
			{
			    jq.ajax({
				  url: '/news/world/column-splitter-span-12-7.2411576/latest-world-7.2411579?ot=example.AjaxPageLayout.ot',
				  timeout: 10000,
				  success: function(data) {
					  jq('#ajax-placeholder-274961194').html(data);
					  jq("abbr.timeago").timeago();
					/*Analytics*/
					jq('.latestin .story a').click(function(e) {		
                        dataLayer.push({
                            'event': 'data-layer-event',
                            'category': 'Latest',
                            'action': 'Latest in News',
                            'label': ' Clicked: '+(jq(this).attr('href'))+' from ' + window.location.pathname + ' From: '+whichPosition( jq(this) )
                        });
					});		
				  }
				});
				
				var refreshId = setInterval( function() 
			    {
			    	
					var timestamp = new Date().getTime();
					jq.ajax({
						  url: '/news/world/column-splitter-span-12-7.2411576/latest-world-7.2411579?ot=example.AjaxPageLayout.ot&ts='+timestamp,
						  timeout: 10000,
						  
						  complete: function(data, statusMsg){
							if(statusMsg == 'success'){
								var responseText = jq.trim( data.responseText );
								var inpageText = jq.trim( jq('#ajax-placeholder-274961194').text() );
								
								if(responseText != inpageText){
									jq('.spinner').show();
									jq('#ajax-placeholder-274961194' ).animate({
										opacity: 0
										}, 400, 'linear', function() {
											jq('#ajax-placeholder-274961194').html(responseText);
											jq('#ajax-placeholder-274961194' ).animate({
											opacity: 1
											}, 400, 'linear', function() {
												jq('.spinner').hide();
												removeSplitterGaps();
												jq("abbr.timeago").timeago();
												/*Analytics*/
												jq('.latestin .story a').click(function(e) {		
                                                    dataLayer.push({
                                                        'event': 'data-layer-event',
                                                        'category': 'Latest',
                                                        'action': 'Latest in News',
                                                        'label': ' Clicked: '+(jq(this).attr('href'))+' from ' + window.location.pathname + ' From: '+whichPosition( jq(this) )
                                                    });
												});	
										});						
									});
								}
							}else{
								return;
							}
						  }						  
						});	
	
			    }, 120000);
			});
	    </script>
	    						
						
