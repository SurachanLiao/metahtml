   scrollDistance = jq(window).scrollTop() + jq(window).height();
   footerDistance = jq('#site-footer').offset().top;
   heroDistance = jq('section').offset().top;
   heroDistance = (heroDistance + 1000);
   
   if (scrollDistance > heroDistance && scrollDistance < footerDistance )
    {
    jq("#showcase-cta").addClass("slided");
    }
    else
   {
    jq("#showcase-cta").removeClass("slided");
   }

})


    
