	<script type="text/javascript">

// xtcustom = {"device":"desktop"} pour les formats web
// xtcustom = {"device":"smartphone"} pour les formats smartphone
// xtcustom = {"device":"tablet"} pour les formats tablette

var w = window,
    d = document,
    e = d.documentElement,
    g = d.getElementsByTagName('body')[0],
    x = w.innerWidth || e.clientWidth || g.clientWidth,
    y = w.innerHeight|| e.clientHeight|| g.clientHeight;

if(x >= 959)
	xtcustom = {"device":"desktop"} ;
if(x < 959)
	xtcustom = {"device":"tablet"} ;
if(x < 480)
	xtcustom = {"device":"smartphone"} ;
// console.log(xtcustom);

// arborescence specifique definie au niveau de l'article ou ici.
xt_pagetype = "6-10-1";

window.ATInternet = {
	onTrackerLoad:function(){
		window.tag = new window.ATInternet.Tracker.Tag();
		// tag
		window.tag.page.set({
			name:'/2019/03/',
			chapter1:'archives',
			level2:'1', // diplo
			customObject: xtcustom,
		});
		window.tag.customTreeStructure.set({
			category1:xt_pagetype
		});
		window.tag.dispatch();
	}
};
(function(){
var at=document.createElement('script');
at.type='text/javascript';
at.async=true;
at.src='https://www.monde-diplomatique.fr/smarttag.js';
(document.getElementsByTagName('head')[0]||document.getElementsByTagName('body')[0]||document.getElementsByTagName('script')[0].parentNode).insertBefore(at,null);

$("a.suivi").on('click', function(e){
	// la page d'origine :
	var page = window.location.href;
	
	//trouver la composition
	var typePage = $("body").attr("class").split(" ");
	var composition = '' ;
	if($(typePage).length > 1) {
		//console.log(typePage[0]);
		composition = typePage[0].split("-") ;
		composition = composition[1];
	}else{
		composition = typePage.join("--");
	}
	//console.log(composition);
	
	// est-on dans le menu ?
	var m = $(this).parents()
	.map(function () { 
		if(this.getAttribute('id') == 'menu')
		  return this.getAttribute('id'); 
		}).size();
	
	var nom = '' ;
	
	if(m>0){
		nom = "menu-" + $(this).attr("id");
	}
	else{
		if($(this).attr("id"))
			nom = composition + "_" + $(this).attr("id") + "";
		else
			nom = composition + "_" + $(this).attr("href");
	}
	// nettoyage des entites html
	nom = nom.replace(/&nbsp;/g,' ');
	
	// debug
	//console.log(nom);
	//return false ;
	
	window.tag.click.send({
		elem: this,
		name: nom,
		level2: 1, // diplo
		type: 'navigation'
	});
});

})();
</script>

