        // Custom dimensions by GV Analytics Plugin -- GV_Analytics_Manager::output_external_and_download_tracking()
		jQuery(document).ready(function() {
			jQuery('a').each(function() {
				var a = jQuery(this);
				var href = a.attr('href');

				// Check if the a tag has a href, if not, stop for the current link
				if ( href == undefined || href =="")
					return;

				var hrefArray = href.split('.').reverse();
				var extension = hrefArray[0].toLowerCase();
				var downloadTracked = false;

									// If the link is a download
					if (jQuery.inArray(extension,['pdf',' mobi',' epub',' mp3',' avi',' doc',' aac',' mp4']) != -1) {
						// Mark the link as already tracked
						downloadTracked = true;

						// Add the tracking code
						a.click(function() {
							ga('send', 'event', 'Downloads', extension.toUpperCase(), href);
ga('gv_meta.send', 'event', 'Downloads', extension.toUpperCase(), href);
						});
					}
				
									// If the link is external
					if ( ( href.match(/^http/) ) && ( !href.match(document.domain) ) && ( downloadTracked == false ) ) {
						// Add the tracking code
						a.click(function() {
															ga('send', 'event', 'Outbound Traffic', href.match(/:\/\/(.[^/]+)/)[1], href);
															ga('gv_meta.send', 'event', 'Outbound Traffic', href.match(/:\/\/(.[^/]+)/)[1], href);
													});
					}
							});
		});
		
	// Initialize Google Analytics plugins -- GV_Analytics_Manager::output_riveted_analytics_plugin_js()
	jQuery(document).ready(function() {
		if (typeof riveted == 'object') {
			riveted.init({
				gaTracker: ['default','gv_meta'],
				reportInterval: 30,
				idleTimeout: 29,
				nonInteraction: false
			});
		}
 	});
</script>
