<!-- js -->
<script>
	//2017年版ヘッダーの挙動
	if (window.matchMedia('screen and (min-width:768px)').matches) {//PCでの動き
		jQuery(function(jQuery) {
			var nav = jQuery('.header_nav_bg'),
			offset = nav.offset();
			jQuery(window).scroll(function () {
			  if(jQuery(window).scrollTop() > offset.top) {
				nav.addClass('fixed');
			  } else {
				nav.removeClass('fixed');
			  }
			});
		});

    var wait;
    var target;
		jQuery('#header_navi .main_nav').hover(function(){
		  clearTimeout(wait);
      jQuery("div.sub_nav_bg").css("display","none");
      jQuery(target).removeClass("hov");
			jQuery("div.sub_nav_bg:not(:animated)", this).css("display","block");
			jQuery(this).addClass("hov");
		}, function(){
		  target = this;
      wait = setTimeout(function(){
        jQuery("div.sub_nav_bg",target).fadeOut(300);
        jQuery(target).removeClass("hov");
      }, 500);
		});


	}else{//スマホでの動き
		jQuery(".main_nav a.have_sub").removeAttr('href');
		jQuery("a.have_sub").replaceWith(function() {
		  jQuery(this).replaceWith('<span class="have_sub">'+jQuery(this).text()+'</span>');
		});

		jQuery(".sp_nav_btn").click(function(){
			jQuery(".header_nav_bg").toggleClass("open",500,"swing",function() {
                jQuery(".sub_nav_bg").removeClass("open");
            });

		});

		jQuery("#header_navi .have_sub").click(function(){
			jQuery(this).next(".sub_nav_bg:not(:animated)").toggleClass("open",500,"swing");
			jQuery(this).toggleClass("open");

		});

		jQuery(".main_nav .close_btn").click(function(){
			jQuery(".header_nav_bg,.sub_nav_bg").removeClass("open",500,"swing");
		});

		//スマホの検索窓モーダルウィンドウ
		//select all the a tag with name equal to modal
		$('span[name=modal]').click(function(e) {
			//Cancel the link behavior
			e.preventDefault();

			//Get the A tag
			var btnname = $(this).attr('class');
			var id = "#" + btnname ;

			//Get the screen height and width
			var maskHeight = $(document).height();
			var maskWidth = $(window).width();

			//Set heigth and width to mask to fill up the whole screen
			$('#mask').css({'width':maskWidth,'height':maskHeight});

			//transition effect
			$('#mask').fadeIn("show");
			$('#mask').fadeTo("slow",0.8);

			//Get the window height and width
			var winH = $(window).height();
			var winW = $(window).width();

			//Set the popup window to center
			$(id).css('top',  winH/2-$(id).height()/2);
			$(id).css('left', winW/2-$(id).width()/2);

			//transition effect
			$(id).fadeIn("show");

		});

		//if close button is clicked
		$('.window .close').click(function (e) {
			//Cancel the link behavior
			e.preventDefault();

			$('#mask').hide();
			$('.window').hide();
		});

		//if mask is clicked
		$('#mask').click(function () {
			$(this).hide();
			$('.window').hide();
		});

		$(window).resize(function () {

			var box = $('#boxes .window');

			//Get the screen height and width
			var maskHeight = $(document).height();
			var maskWidth = $(window).width();

			//Set height and width to mask to fill up the whole screen
			$('#mask').css({'width':maskWidth,'height':maskHeight});

			//Get the window height and width
			var winH = $(window).height();
			var winW = $(window).width();

			//Set the popup window to center
			box.css('top',  winH/2 - box.height()/2);
			box.css('left', winW/2 - box.width()/2);

		});

	}

	// ドメインおよびパスにてヘッダーメニューの現在コンテンツ選択
	var menu_css;
	var path = location.pathname;
	var domain = location.hostname;
	if(domain.match(/^www(-.+)?\.arukikata\.co\.jp/) && path.match(/^\/$/))
		menu_css = 'home_nav';
	else if(domain.match(/^www(-.+)?\.arukikata\.co\.jp/) && path.match(/^\/search\//))
		menu_css = '';
	else if(domain.match(/^www(-.+)?\.arukikata\.co\.jp/) && path.match(/^\/(area|country|city)\//))
		menu_css = 'area_nav';
	else if(domain.match(/^www(-.+)?\.arukikata\.co\.jp/) && path.match(/^\/guidebook\//))
		menu_css = 'guidebook_nav';
	else if(domain.match(/^(parts|car|rail)(-.+)?\.arukikata\.com/) || domain.match(/^www(-.+)?\.arukikata\.co\.jp/) && path.match(/^\/(hoken|card|visa|isic|loan|wifi)\//))
		menu_css = 'parts_nav';
	else if(domain.match(/^(www|airline|prepare)(-.+)?\.arukikata\.co\.jp/))
		menu_css = 'cojp_nav';
	else if(domain.match(/^tokuhain(-.+)?\.arukikata\.co\.jp/))
		menu_css = 'tokuhain_nav';
	else if(domain.match(/^tabisuke(-.+)?\.arukikata\.co\.jp/))
		menu_css = 'tabisuke_nav';
	else if(domain.match(/^(bbs|member|prf)(-.+)?\.arukikata\.co\.jp/))
		menu_css = 'bbs_nav';
	else if(domain.match(/^www(-.+)?\.arukikata\.com/))
		menu_css = 'com_nav';
	else if(domain.match(/^(tour|op|volunteer)(-.+)?\.arukikata\.com/))
		menu_css = 'tour_nav';
	else if(domain.match(/^hotels?(-.+)?\.arukikata\.com/))
		menu_css = 'hotel_nav';
	else if(domain.match(/^store(-.+)?\.arukikata\.co\.jp/))
		menu_css = 'store_nav';
	else if(domain.match(/^news(-.+)?\.arukikata\.co\.jp/))
		menu_css = 'news_nav';
	jQuery("#header_navi > ." + menu_css).addClass("up");
</script>

