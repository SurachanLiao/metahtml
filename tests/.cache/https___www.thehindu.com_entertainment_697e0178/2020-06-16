var $cs6status = $('.pagingInfo-cs6');
$('.cs6-slider').on('init reInit afterChange', function(event, slick, currentSlide, nextSlide) {
//currentSlide is undefined on init -- set it to 0 in this case (currentSlide is 0 based)
var i = (currentSlide ? currentSlide : 0) + 1;
$cs6status.text(i + '/' + slick.slideCount);
});
$('.cs6-slider').slick({
infinite: true,
centerMode: true,
centerPadding: '50px',
slidesToShow: 1,
slidesToScroll: 1,
