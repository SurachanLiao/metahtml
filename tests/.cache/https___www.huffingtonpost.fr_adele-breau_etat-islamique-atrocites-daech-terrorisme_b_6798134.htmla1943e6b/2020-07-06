/* Source: hpCmp.js */
var HPCmp = {
    loadScript: function(url,callback){
        var w = document.createElement('script');
        w.type = 'text/javascript';
        w.src = url;
        w.onreadystatechange = callback;
        w.onload = callback;
        var elementDefault = document.getElementsByTagName('script')[0];
        elementDefault.parentNode.insertBefore(w,elementDefault);
    },

    saveAdsConsent: function(ads) {
		if (typeof window.__cmp === 'function') {
            if (ads) {
                window.__cmp('acceptAll');
            } else {
                window.__cmp('revokeAll');
            }
		}
    },

    checkCmpScript: function(callback,choice){
        function call() {
            if (typeof choice !== 'undefined' && choice) {
                if (HPCmp.getConsent()[choice]) {
                    callback();
                }
            } else {
                callback();
            }
        }
        if (HPCmp.hasConsent()) {
            call();
        } else {
            window.onload = (function($) {
                $(window).on("cmp_init", function() {
                    call();
                })
            })(jQuery);
        }
    },

    hpConsentCookieName: 'sitehpcmpchoice',

    euConsentCookieName: 'EuConsent',

    consentCookiesExpiresMonths: 13,

    defaultCategoriesConsentChoice: {
        analytics: true,
        ads: true,
        socials: true
    },

    validhpConsent: function() {
        existConsent = false;
        if (document.cookie.indexOf(HPCmp.hpConsentCookieName) >= 0) {
            var v = document.cookie.match(new RegExp(HPCmp.hpConsentCookieName + '=([^;]+)'));
            try {
                var choice = JSON.parse(decodeURIComponent(v[1]));
                if (typeof choice['analytics'] === "boolean" && typeof choice['ads'] === "boolean" && typeof choice['socials'] === "boolean") {
                    existConsent = choice;
                }
            } catch(e) {}
        }
        return existConsent;
    },

    hasConsent: function() {
        var choice = HPCmp.validhpConsent();
        if (choice && typeof window.__cmp === 'function') {
            // Fired when cmp is ready and no consent data stored by faktor.
            window.__cmp('addEventListener', 'commandQueued', function() {
                HPCmp.saveAdsConsent(choice.ads);
            });
        }
        return choice;
    },

    getConsent: function() {
        var choice = HPCmp.validhpConsent();
        if (choice) {
            return choice;
        }
        var checkExist = arguments.length > 0 && arguments[0] !== undefined ? arguments[0] : false;
        if (!checkExist) {
            return HPCmp.defaultCategoriesConsentChoice;
        } else {
            return false;
        }
    },
};

(function($) {
    $("document").ready(function() {
      const cmpPolicy = (window.location.href.indexOf("/p/charte-de-confidentialite") > 0);
      const cmpForm = $('#cmp-form').length;

      if (!cmpPolicy && (!HPCmp.validhpConsent() || cmpForm > 0)) {
        const cmpScript = function() {
          const expires = new Date();
          expires.setMonth(expires.getMonth() + HPCmp.consentCookiesExpiresMonths);
          const saveConsent = function(hpConsentString, layer) {
            HPCmp.saveAdsConsent(hpConsentString.ads);
            var cookiesHpConsent = $.cookie(HPCmp.hpConsentCookieName, JSON.stringify(hpConsentString), {
              path: '/',
              domain: 'huffingtonpost.fr',
              expires: expires
            })
            $.when(cookiesHpConsent).done(function () {
              $.cookie(HPCmp.euConsentCookieName, 0, {
                  path: '/',
                  domain: 'huffingtonpost.fr',
                  expires: -1
              })
              if (cmpForm > 0) {
                window.location.href = '/';
              } else {
                $.cookie('hpCmp', 0, {
                  path: '/',
                  domain: 'huffingtonpost.fr',
                  expires: -1
                })
                if (typeof layer === 'undefined') {
                  $("body").trigger('cmp_init');
                } else {
                  layer.slideDown(500, function() {
                    $("body").removeClass('cmp-socials');
                    $(this).remove();
                    $("body").trigger('cmp_init');
                  })
                }
              }
            })
          }
          if (cmpForm > 0) {
            $.cookie('hpCmp', 0, {
              path: '/',
              domain: 'huffingtonpost.fr',
              expires: -1
            })
            var choice = HPCmp.getConsent();
            if (!choice['analytics']){
              $('#cmp-analytics').prop("checked",false);
            }
            if (!choice['socials']){
              $('#cmp-socials').prop("checked",false);
            }
            if (!choice['ads']){
              $('#cmp-ads').prop("checked",false);
            }
            $('#cmp-validate').on('click', function() {
              var choice = HPCmp.defaultCategoriesConsentChoice;
              if (!$('#cmp-analytics').is(':checked')){
                choice['analytics'] = false;
              }
              if (!$('#cmp-socials').is(':checked')){
                choice['socials'] = false;
              }
              if (!$('#cmp-ads').is(':checked')){
                choice['ads'] = false;
              }
              saveConsent(choice);
            });

            $('#cmp-form').on('click', '.cmp-more', function () {
                $(this).closest('.cmp-type').find('.cmp-viewmore').toggle();
            });
          } else {
            var cmpFirst = true;
            $.cookie('hpCmp', 1, {
                path: '/',
                domain: 'huffingtonpost.fr'
            })
            const layer = $(document.createElement('div')).addClass('cookie-warning');
            const html = '<button id="cookie-warning-cross">Fermer</button><p class="cookie-warning-message"><i>Le Huffpost</i> utilise des cookies pour vous offrir une expérience utilisateur de&nbsp;qualité, mesurer l’audience et&nbsp;vous proposer des publicités personnalisées. En&nbsp;poursuivant votre navigation sur ce&nbsp;site, vous acceptez l’utilisation de&nbsp;cookies dans les conditions prévues par notre <a href="/p/charte-de-confidentialite" id="cookie-info-dp" aria-label="Politique de confidentialité – nouvelle fenêtre">politique de&nbsp;confidentialité</a>. <a href="/p/charte-de-confidentialite" id="cookie-info-gc" aria-label="Gérer les cookies">En&nbsp;savoir plus et&nbsp;gérer les cookies</a>.</p> <div class="cookie-warning-buttons"><a class="cookie-warning-manager" id="cookie-info-wm" href="/p/gdpr/gestion-des-cookies" role="button">Paramétrer les cookies</a><button id="cookie-warning-accept">Accepter</button></div>';
            layer.html(html);
            $("body").addClass('cmp-socials').append(layer);
            $('#cookie-warning-accept, #cookie-warning-cross').on('click', function(event) {
            if (cmpFirst) {
                cmpFirst = false;
                saveConsent(HPCmp.defaultCategoriesConsentChoice, layer);
            }
            });
            $(window).on("scroll", $.throttle(1000, function(){
                if (cmpFirst && $(document).scrollTop() > 250) {
                    cmpFirst = false;
                    saveConsent(HPCmp.defaultCategoriesConsentChoice, layer);
                }
            }))
          }
        };
        cmpScript();
      } else if (cmpPolicy) {
          $.cookie('hpCmp', 0, {
            path: '/',
            domain: 'huffingtonpost.fr',
            expires: -1
          })
      }
    })
})(jQuery);

</script>
