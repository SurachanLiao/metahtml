        function playAudio(file,title,date,e){
            $('#podcastTitle').text(title);
            $('#podcastDate').text(date);
            var current = $('#currentlyPlaying').val();

            autostart = false;
            $('#currentlyPlaying').val(title);
            $('#paused').val('false');
            $('#podcastPlayer').show();
            var playerExists = document.getElementById("player");
            if(playerExists) {
                var player = jwplayer("player");
                
                player.setup({
                    'sources' : [
                        {'file': file},
                    ],
                    'height': '40',
                    'width' : '100%',
                    'hlshtml' : 'true',
                    'primary': "html5",
                    'fallback' : 'false',
