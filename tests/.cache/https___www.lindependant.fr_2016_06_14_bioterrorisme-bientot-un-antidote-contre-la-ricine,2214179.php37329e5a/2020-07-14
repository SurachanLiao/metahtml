    <script type="application/ld+json">{"@context":"http:\/\/schema.org","@type":"BreadcrumbList","itemListElement":[{"@type":"ListItem","position":1,"item":{"@id":"https:\/\/www.lindependant.fr\/sante\/","name":"Sant\u00e9"}},{"@type":"ListItem","position":2,"item":{"@id":"https:\/\/www.lindependant.fr\/2016\/06\/14\/bioterrorisme-bientot-un-antidote-contre-la-ricine,2214179.php","name":"Bioterrorisme : bient\u00f4t un antidote contre la ricine ?"}}]}</script>
