    <script>
var dataLayer = [{"env":"prod","siteCode":"lind","siteFamily":"jdm","tags":["lind-3775985","sante","thema"],"tagsSuffix":["sante-famille","thema-topic"],"insee":[],"ville":[],"dept":[],"deptLabel":[],"bassin":[],"pagetype":"article","platform":"web","restriction":1,"thema":"sante","topic":"sante","topicN2":"","topics":["sante"],"article":{"id":"lind-3775985","date":"20160614","author":"destinationsante.com","correspondant":0,"pepite":0,"source":"flux externes","originalId":""},"search":{"query":"","page":""},"xiti":{"site":"78692","n2":"2","chapter1":"contenu","chapter2":"lind","page":"bioterrorisme-bientot-un-antidote-contre-la-ricine::3775985"},"dfp":{"publisherid":"31755961","bloc1":"mm_independant","bloc2":"desktop","bloc3":"article","bloc4":"","pagetype":"article"}}];

var tagManager = {
    cookieName: 'userdl',

    init: function () {
        var user = this.getUserData();
        dataLayer[0].user = user;

        if (dataLayer[0]['restriction'] === 3 && user.type !== 'guest' && user.type !== 'free' && user.type !== 'oldabo') {
            dataLayer[0]['restriction'] = 2;
        }
    },

    getUserData: function() {
        var data = {
            id: null,
            md5: null,
            subscriberId: '',
            status: 1,
            newsletter: 0,
            type: 'guest'
        };

        var jsonData = this.getCookie(this.cookieName);
        if (typeof(jsonData) !== 'undefined' && jsonData) {
            var userData = JSON.parse(jsonData);
            if (userData) {
                data.id = userData.id;
                data.md5 = userData.md5;
                data.status = userData.status;
                data.type = (userData.isSubscriber) ? 'subscriber' : 'free'; // 'subscriber' : ancien abonné pôle Est
                if (userData.category !== '') { // Toujours fourni pôle Ouest
                    data.type = userData.category;
                }
                else if (userData.contratTitre !== '') { // Abonné actif
                    data.type = (userData.contratTitre === '10') ? 'premium' : 'integral';
                }
                if (userData.isSubscriber && !userData.abonnementsActifs) {
                    data.type = 'oldabo';
                }
                if (userData.subscriberId) {
                    data.subscriberId = userData.subscriberId;
                }
                if (userData.newsletter) {
                    data.newsletter = userData.newsletter;
                }
            }
        }

        return data;
    },

    getCookie: function (cname) {
        var name = cname + "=";
        var ca = document.cookie.split(';');
        for (var i = 0; i < ca.length; i++) {
            var c = ca[i];
            while (c.charAt(0) === ' ') {
                c = c.substring(1);
            }
            if (c.indexOf(name) === 0) {
                return decodeURIComponent(c.substring(name.length, c.length));
            }
        }
        return '';
    }
};
tagManager.init();
</script>

