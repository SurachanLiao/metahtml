<script type="text/javascript">
var payWallCheckInterval;
var payWallCheckCount = 0;
console.log('v6');

function checkForPayWall() { 
  if (($(".ev-engagement")[0]) || ($(".post-body.print-only").height() < 2000)) {
    jQuery('.sidebar .widget_hot_widget').remove();
    jQuery('.sidebar .widget_text').remove();
    clearInterval(payWallCheckInterval);
  }
  else if ($(".post-body.print-only").height() < 3000) {
    jQuery('.sidebar .widget_hot_widget').remove();
    clearInterval(payWallCheckInterval);
  }
  
  if (payWallCheckCount > 10) clearInterval(payWallCheckInterval);
  else payWallCheckCount++
}

jQuery(document).ready(function($) {
  	 if (jQuery(window).width() > 1150) {
        content_height = jQuery('.single .page-content').height();
        sidebar_height = jQuery('.single .sidebar').height();
    
        height_diff =  sidebar_height - content_height;
    	console.log(height_diff);
       
        if (height_diff > 800) {
            jQuery('.sidebar .widget_hot_widget').addClass('hidden');
            jQuery('.sidebar .widget_text').addClass('hidden');
        } else if (height_diff > 400){
            jQuery('.sidebar .widget_hot_widget').addClass('hidden');
       	} 
    }
  	
  	if (jQuery('body').hasClass('active-paywall')) {
       jQuery('.sidebar .widget_hot_widget').addClass('hidden');
       jQuery('.sidebar .widget_text').addClass('hidden');
    }
  
    //if ($(".single-post")[0]) payWallCheckInterval = setInterval(checkForPayWall, 1000);
});

jQuery(window).resize(function($){
    if (jQuery(window).width() > 1150) {
        content_height = jQuery('.single .page-content').height();
        sidebar_height = jQuery('.single .sidebar').height();
    
        height_diff =  sidebar_height - content_height;
    
        if (height_diff > 800) {
            jQuery('.sidebar .widget_hot_widget').addClass('hidden');
            jQuery('.sidebar .widget_text').addClass('hidden');
        } else if (height_diff > 400){
            jQuery('.sidebar .widget_hot_widget').addClass('hidden');       
       	}
      
      	if (jQuery('body').hasClass('active-paywall')) {
       		jQuery('.sidebar .widget_hot_widget').addClass('hidden');
       		jQuery('.sidebar .widget_text').addClass('hidden');
    	}
    }
});</script>
