                (function ($, window, document, undefined) {
                    var $adUnit = $('#collapse-wrap-1502198501').find('div[id^="div-gpt-ad-"]');

                    function setIntervalWithTimeout (interval, timeout, callback) {
                        var intervalObj = setInterval(function () {
                            callback(intervalObj);
                        }, interval);
                        setTimeout(function () {
                            clearInterval(intervalObj);
                        }, timeout);
                    }

                    setIntervalWithTimeout(500, 15000, function (intervalObj) {
                        if ($adUnit.css('display') === 'none') {
                            $adUnit.closest('.collapse-wrap').css('display', 'none');
                            clearInterval(intervalObj);
                        }
                    });

                })(jQuery, window, document);
