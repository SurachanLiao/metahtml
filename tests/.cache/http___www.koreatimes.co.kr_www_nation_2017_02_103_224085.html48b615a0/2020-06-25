<!-- facebook meta tag 값 세팅::2019-06-17 -->
<script type="text/javascript">
	var img = new Image();
	img.onload = function() {
		var w = this.width;
		var h = this.height;
		//console.log("width : " + w + ", height : " + h);
		
		$("meta[property='og\\:image:width']").attr("content", w );
	    $("meta[property='og\\:image:height']").attr("content", h );    
		
		//var w2 = $( 'meta[property="og:image:width"]' ).attr( 'content' );
		//var h2 = $( 'meta[property="og:image:height"]' ).attr( 'content' );
		
		//console.log("width2 : " + w2 + ", height2 : " + h2);
	}
	img.src = "https://ston.koreatimes.co.kr/web/IMAGE/upload/thumbnailV2/170216_p02_NK_th590.jpg";
</script>
                    

                    

                    
