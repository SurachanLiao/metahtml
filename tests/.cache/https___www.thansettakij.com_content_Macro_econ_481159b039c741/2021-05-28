	$(function () {
		var public_date = '052021';
		if (public_date >= 052021 ) {
			$('.content-detail img').each(function () {
				var this_e = $(this);
				var this_alt = this_e.attr('alt');
				var this_w = this_e.width();
				var this_src = this_e.attr('src').split('/');
				var img_name = this_src[this_src.length - 1].replace(/.jpg|.png|.gif|.jpeg/g, '');

				if (this_alt !== img_name.substr(0, this_alt.length)) {
					//console.log(this_alt +'==='+ img_name.substr(0,this_alt.length))
					if (this_alt != '') {
						$('<div class="img-alt" style="width:' + this_w + 'px">' + this_alt + '</div><br>').insertAfter(this_e);
					}
				}
			});
		}

		$('.content-detail img').parents('a').css({
			'text-decoration': 'none',
			'display': 'block'
		});
	});
</script>
