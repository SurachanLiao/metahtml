        		    			<script type="text/javascript">
		$(document).ready(function(){
			$.post(
				"https://www.sandia.gov/news/publications/labnews/topics/feed/", 
				{ 
					"operation" : "getCatgoryByCascadeValue",
					"cascade" : "Energy|Environment|"
				},
				function (data) {
					//console.log(data);
					var items = [];
					$.each(data, function(item){
						var str = '<li id="topic_' + (data[item].id) + '">';
						str += '<a href="../../../topics/index.html?topic_id='+data[item].id+'">';
						str += data[item].label;
						str += '</a></li>';
						items.push( str );
					});
					$( "#sideBar" ).append('<section aria-labelledby="topicsHeading" class="clearfix" id="topics"><h2 id="topicsHeading">Topics</h2></section>');
					$( "<ul></ul>", {html: items.join( "" )}).appendTo( "#topics" );
				}
			);
		});
	</script>
