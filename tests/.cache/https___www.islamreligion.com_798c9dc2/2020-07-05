				var langsel = "exit";
				$("#inline_content").effect("transfer", { to: $("#sidebarlanguage") }, 600);
				if (window.savestate == undefined){
					$.get("https://www.islamreligion.com/ajlib/save_selected_language.php", { random: "cc17225eeaa8e3af3d71781f9655219d", ignore: "2d5877bbe435c96b634798eccf983ec2", skey: "43e01d0ba425b6519a011a54ef097227", lang: langsel } );
				}
				originalClose();
			};
			
			function cbox(){
				$.colorbox({open:true, overlayClose:true, top:"25%", left: "35%", reposition: false, inline:true, width:"400px", href:"#inline_content"});
			}
			setTimeout(cbox,2000); // 2 seconds 
		});
		
		function closeMe() {
			$.fn.colorbox.close(); 
		}
		
