          console.log('Consent: Not in EU');
          _paq.push(['trackEvent', 'Consent', 'Not in EU']);
          startTracking();
          return;
        }
        if (!isSuccess) return;
        if (
          consent.standardPurposeConsents[2] &&
          consent.standardPurposeConsents[3] &&
          consent.standardPurposeConsents[4] &&
          consent.standardPurposeConsents[5]
        ) {
          console.log('Consent: Yes');
          _paq.push(['trackEvent', 'Consent', 'Yes']);
          startTracking();
        } else {
          console.log('Consent: No');
          _paq.push(['trackEvent', 'Consent', 'No']);
          stopTracking();
