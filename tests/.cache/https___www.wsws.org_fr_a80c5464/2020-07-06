        <a href="/fr/articles/2019/03/02/hali-m02.html">

          
            
              
                <div class="imageFull" style="width:340px; height:160px; overflow:hidden;">
                  <img src="/asset/f7d23505-b458-41aa-b08e-64cd20f059a9?rendition=image320" srcset="/asset/f7d23505-b458-41aa-b08e-64cd20f059a9?rendition=image640 2x" width="" style="width:100%;"/>
                </div>
              
            
          

          
          
