    <script type="text/javascript">
        $(function(){

            // Affichage de plus de commentaires
            $('#event_tous_commentaires').click(function(e){
                e.preventDefault();

                var nbr_commentaires_affiche = $('ul.comments-list > li.commentaire').length;
                var limit = 0;
                var chargement = $('.comments-wrapper .chargement');
                var sort = $('.sort-commentaire.selected').data('value');

                chargement.show();

                $.ajax({
                    type: 'POST',
                    url: '/commentaire/liste?id=456421&offset=' + nbr_commentaires_affiche + '&limit=' + limit +'&sort=' + sort,
                    success: function(msg){

                        if (msg.match(/\S/g)){
                            $(msg).insertBefore($('#ajout-commentaire'));

                            if ($('ul.comments-list > li.commentaire').length >= $('input#nbr_commentaires_total').val()) {
                                $('#tous-commentaires-wrapper').hide();
                            }
                        } else {
                            $('#tous-commentaires-wrapper').hide();
                        }

                        if (limit == 0) {
                            $('#tous-commentaires-wrapper').hide();
                        }

                        chargement.hide();
                    }
                });
            });

            // Signalement d'un commentaire
            $('.comments-list').on('click', 'a.signaler', function(e){
                e.preventDefault();

                var bouton_signaler = $(this);
                var commentaire_id = bouton_signaler.parents('li.commentaire').find('input[name=commentaire_id]').val();

                $.ajax({
                    url: bouton_signaler.attr('href'),
                    dataType: 'json',
                    success: function(response) {
                        afficher_message(response.message, 'message');
                        bouton_signaler.hide();
                    }
                });
            });

            // Affichage du formulaire de réponse à un commentaire
            $('.comments-list').on('click', 'a.bouton_repondre', function(e){
                e.preventDefault();

                $(this).toggleClass('bouton_hover');
                var repondre_container = $(this).parents('.commentaire').children('.repondre');
                repondre_container.slideToggle();

                if ($(this).hasClass('bouton_hover')) {
                    $('html, body').animate({
                        scrollTop: repondre_container.offset().top - ($(window).height() / 2)
                    }, 1000);

                    repondre_container.find('textarea').focus();
                }
            });

            // Vérificateur orthographe
            $('.comments-list').on('click', '.orthographe', function(e){
                e.preventDefault();
                var conteneur = $(this).closest('li');

                conteneur.find('.message_orthographe').text('Chargement...').show();
                conteneur.find('textarea').spellchecker({
                    url: '/js/jquery.spellchecker.php',
                    lang: 'fr',
                    engine: 'google'
                }).spellchecker('check', function(result){
                    if (result) {
                        conteneur.find('.message_orthographe').text('Aucune erreur d\'orthographe détectée.').css('color', '#008844');
                    }
                    else {
                        conteneur.find('.message_orthographe').html('');
                    }
                });
            });

            var max_commentaires = 2000;

            function update_longueur_commentaire(champ_texte) {
                var nb_chars_restants = max_commentaires - champ_texte.val().length;
                compteur_longueur_commentaire = champ_texte.parent().parent().find('.compteur_longueur_commentaire');
                compteur_longueur_commentaire.html(nb_chars_restants);

                if (nb_chars_restants < 0) {
                    compteur_longueur_commentaire.css('color', '#ff0000');
                } else if (nb_chars_restants < (.15 * max_commentaires)) {
                    compteur_longueur_commentaire.css('color', '#000000');
                } else {
                    compteur_longueur_commentaire.css('color', '#aaaaaa');
                }

                return nb_chars_restants;
            }

            $('.comments-list').on('keyup', '.commentaire_texte', function(e){
                update_longueur_commentaire($(this));
            });

            $('.comments-list').on('paste', '.commentaire_texte', function(e){
                update_longueur_commentaire($(this));
            });

            // Ajout d'un commentaire
            //$('ul#commentaires form#reaction_commentaire .actions .bouton_envoyer').live('click', function(e){
            $('.comments-list').on('click', 'li#ajout-commentaire form#reaction_commentaire #event_ajout_commentaire', function(e){

                e.preventDefault();

                var form = $(this).closest('form');

                $.ajax({
                    type: "POST",
                    url: "/commentaire/poster",
                    data: form.serialize(),
                    dataType: 'json',
                    success: function(response){

                        if (response.etat == "succes") {

                            $('.commentaire_titre', form).val('');
                            $('.commentaire_texte', form).val('');

                            afficher_message(response.message, 'message');
                            $('#ajout-commentaire').slideUp(); // Fermer formulaire principal

                                                            /*pageTracker._setCustomVar(5, "commentateurs", "commentateurs", 1);
                                pageTracker._trackEvent("commentaires", "envoi", "Terrorisme et religion");
                                pageTracker._trackPageview("/goal/commentaire");*/
                                dataLayer.push({'eventCategory': 'User', 'eventAction': 'Comment', 'eventLabel': 'Terrorisme et religion', 'event': 'gtm_event'});
                                                    }
                        else {
                            afficher_message(response.message, 'erreur');
                        }
                    }
                });
            });

            //Répondre à un commentaire
            $('.comments-list').on('click', 'li.commentaire form#reaction_commentaire #event_ajout_commentaire', function(e){

                e.preventDefault();

                var form = $(this).closest('form');

                $.ajax({
                    type: "POST",
                    url: "/commentaire/poster",
                    data: form.serialize(),
                    dataType: 'json',
                    success: function(response){

                        if (response.etat == "succes") {

                            $('.commentaire_titre', form).val('');
                            $('.commentaire_texte', form).val('');

                            afficher_message(response.message, 'message');
                            form.closest('.commentaire').find('.commentaire-actions a.bouton_repondre').click(); // Fermer formulaire de reponse

                                                            /*pageTracker._setCustomVar(5, "commentateurs", "commentateurs", 1);
                                pageTracker._trackEvent("commentaires", "envoi", "Terrorisme et religion");
                                pageTracker._trackPageview("/goal/commentaire");*/
                                dataLayer.push({'eventCategory': 'User', 'eventAction': 'Answer Comment', 'eventLabel': 'Terrorisme et religion', 'event': 'gtm_event'});
                                                    }
                        else {
                            afficher_message(response.message, 'erreur');
                        }
                    }
                });
            });

            $('.comments-list').on('click', 'form#activer_courriel .bouton_envoyer', function(event){
                event.preventDefault();
                $.ajax({
                    type: 'POST',
                    url: '/commentaire/valider-courriel',
                    data: $(this).parents('form#activer_courriel').serialize(),
                    dataType: 'json',
                    success: function(response){
                        if (response.etat == 'succes') {
                            afficher_message(response.message, 'message');
                        } else {
                            afficher_message(response.message, 'erreur');
                        }
                    }
                });
            });

            $('.comments-list').on('click', 'form#activer_courriel button.changer', function(event) {
                event.preventDefault();
                $('form#activer_courriel #confirmer_courriel').hide();
                $('form#activer_courriel #nouveau_courriel').show();
                $('form#activer_courriel #meme_courriel').val(0);
            });

            $('.comments-list').on('click', 'form#activer_courriel button.annuler', function(event) {
                event.preventDefault();
                $('form#activer_courriel #confirmer_courriel').show();
                $('form#activer_courriel #nouveau_courriel').hide();
                $('form#activer_courriel #meme_courriel').val(1);
            });

            // Flash d'un commentaire si présent dans le anchor de l'URL
            var url = document.location.toString();

            if (url.match('#')) {
                var anchor = url.split('#')[1];
            }

            if (anchor && anchor.indexOf('commentaire_') == 0) {
                var commentaire_id = anchor.split('commentaire_')[1];
                $('#commentaire_' + commentaire_id).animate({ backgroundColor: '#FAFFA8' }, 1500).css('padding-top', '15px').css('padding-bottom', '15px');
            }

            // Changement de l'ordre
            $('.sort-commentaire').click(function(e) {
                e.preventDefault();
                var svg = $(this).parents('.dropdown').find('a.selected').removeClass('selected').find('svg');
                $(this).addClass('selected').parents('.dropdown').find('.text').html($(this).html());
                svg.appendTo($(this));
                $('.chargement').show();
                $.ajax({
                    type: "POST",
                    url: "/commentaire/liste?id=456421&limit=5&sort=" + $(this).data('value'),
                    success: function(msg){
                        $('ul#commentaires').html(msg);
                        $('.chargement').hide();
                    }
                });
            });

        });
    </script>

