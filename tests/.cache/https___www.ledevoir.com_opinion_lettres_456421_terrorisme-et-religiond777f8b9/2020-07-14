                if ($videoLive.length) {
                    videoLiveOriginalLeft = $videoLive.css('left');
                    $videoLive.css('left', (parseInt($paywall.outerWidth()) + 60) + 'px');
                }

                if ($btnClose.length > 0) {
                    $btnClose.click(function (e) {
                        $paywall.fadeOut();
                        dataLayer.push({'eventCategory': 'PW', 'eventAction': 'Click - X', 'eventLabel': '1e article', 'event': 'gtm_event'});
                        e.preventDefault();
                    });
                }

                if ($btnInfos.length > 0) {
                    $btnInfos.click(function (e) {
                        var $this = $(this);

                        clearTimeout(fadeTimeOut);

                        $this.parent().find('.panel-content').slideDown();
                        $this.hide();
                        $btnClose.show();

                        dataLayer.push({'eventCategory': 'PW', 'eventAction': 'Click - Agrandir', 'eventLabel': '1e article', 'event': 'gtm_event'});

                        e.preventDefault();
                    });
                }

                if ($btnAbonnement.length > 0) {
                    $btnAbonnement.click(function (e) {
                        dataLayer.push({'eventCategory': 'PW', 'eventAction': 'Click - Abonnement', 'eventLabel': '1e article', 'event': 'gtm_event'});
                    });
                }

                if ($btnConnexion.length > 0) {
                    $btnConnexion.click(function (e) {
                        dataLayer.push({'eventCategory': 'PW', 'eventAction': 'Click - Connexion', 'eventLabel': '1e article', 'event': 'gtm_event'});
                    });
                }
                if ($btnQuestion.length > 0) {
                    $btnQuestion.click(function (e) {
                        dataLayer.push({'eventCategory': 'PW', 'eventAction': 'Click - ?', 'eventLabel': '1e article', 'event': 'gtm_event'});
                    });
                }

                dataLayer.push({'eventCategory': 'PW', 'eventAction': 'Show', 'eventLabel': '1e article', 'event': 'gtm_event'});
                if (typeof fbq !== 'undefined') {
                    fbq('trackCustom', 'VirtualPageview', { content: '/paywall', numArticle: '1', referrer: document.location.href, blocked: false });
                }
            });
        </script>

    
