<script type="text/javascript">
       var articleUrl = '';
       $(function() {
           $('#bouton_envoyer_mail').click(function(e){
               e.preventDefault();
               var $btn_envoyer = $(this);

               if ($btn_envoyer.is('.en-traitement')) return; // Limiter 1 clic à la fois

               $btn_envoyer.addClass('en-traitement').css('fontStyle','italic').css('opacity',0.5);
               $.ajax({
                   type: "POST",
                   url: "/article/envoyer",
                   data: "email_de="+$('#email_de').val()+"&email_a="+$('#email_a').val()+"&url="+articleUrl+"&g-recaptcha-response="+grecaptcha.getResponse()+"&email_commentaires="+$('#email_commentaires').val(),
                   success: function(msg){
                       if (msg == 'false') {
                           $('#dialog .erreur').html('Erreur: veuillez réessayer.');
                       } else if (msg == 'false-captcha') {
                           $('#dialog .erreur').html('Captcha invalide.');
                       } else if (msg == 'true') {
                           $('#dialog').dialog('close');
                           afficher_message('Votre lien a été envoyé.', 'message');

                                                          dataLayer.push({'eventCategory': 'Partage Social', 'eventAction': 'Social Mailto', 'eventLabel': 'https://www.ledevoir.com/opinion/lettres/456421/terrorisme-et-religion', 'event': 'gtm_event'});
                                                  }
                   },
                   complete: function(msg) {
                       $btn_envoyer.removeClass('en-traitement').css('fontStyle','normal').css('opacity',1);
                   }
               });
               grecaptcha.reset();
           });
       });

       function show_envoyer_mail(url){
           articleUrl = url;
           $("#dialog").dialog({
               height: 450,
               width: 337,
               resizable: false,
               modal: true,
               zIndex: 25000
           });

           return false;
       }
</script></div>

        <script type="text/javascript">
        //Google Tag Manager Event

        $(function(){

            
            //Voir tous les commentaires
            $('#event_tous_commentaires').click(function(e) {
                dataLayer.push({'eventCategory': 'User', 'eventAction': 'All Comments', 'eventLabel': 'Terrorisme et religion', 'event': 'gtm_event'});
            });

            //Scroll dans l'article
            var $window = $(window);

            var fin50  = false;

            // Pour tracker le texte seulement, utiliser ce sélecteur
//            var textWrapper = $('.scrolling-tracker:first');

            // Celui-ci est pour la page au complet
            var textWrapper = $('#articles');
            var textHeight = textWrapper.height();
//            console.log('Hauteur : ' + textHeight);

            $window.scroll(function () {
                var scrollTopWithViewport = parseInt($window.scrollTop()) + viewportheight - textWrapper.offset().top; //11642956
//                console.log(parseInt($window.scrollTop()) + viewportheight - textWrapper.offset().top);
                if(parseInt($window.scrollTop()) == 0){
                    fin50 = false;
                }
                if (scrollTopWithViewport >= textHeight*50/100) {
                    if(fin50 == false){
                        fin50 = true;
//                        console.log('Scroll 50%');
                        dataLayer.push({'eventCategory': 'User', 'eventAction': 'Scroll Depth', 'eventLabel': '50%', 'event': 'gtm_event'});
                    }
                }
            });
        });

    </script>

<script type="text/javascript">
    if (typeof favorisConf === 'undefined') {
