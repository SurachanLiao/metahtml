	<script>
	(function() {
		document.addEventListener('click',function(e){
            var url = window.location.href;

			if(e.target && (e.target.classList.contains("data-layer-track-header"))){
				dataLayer.push({
					"event":"track_event",
					"event_category":"navigation_header",
					"event_action":"click",
					"event_label":"logo"
				});
				//console.log("data layer 1");
			} else if(e.target && (e.target.classList.contains("data-layer-track-footer"))){
				dataLayer.push({
					"event":"track_event",
					"event_category":"navigation_footer",
					"event_action":"click",
					"event_label":"logo"
				});
				//console.log("data layer 2");
			} else if(e.target && (e.target.classList.contains("data-layer-track-menu"))){
				var category_slug = e.target.getAttribute('data-menu-slug');
				if (category_slug == 'menu-news') {
					return;
				}
				var category_parent_slug = e.target.getAttribute('data-menu-parent-slug');
				var send_slug = category_slug;
				if (category_parent_slug) {
					if (category_parent_slug != 'menu-news') {
						send_slug = category_parent_slug + '-' + category_slug;
					}
				}
				if (send_slug.startsWith("menu-news-")) {
					send_slug = send_slug.replace("menu-news-", "");
				}
				dataLayer.push({
					"event":"track_event",
					"event_category":"navigation_header",
					"event_action":"click",
					"event_label": send_slug
				});
				//console.log("data layer 3 ", send_slug);
			} else if(e.target && (e.target.classList.contains("data-layer-track-footer-menu"))){
				var category_slug = e.target.getAttribute('data-menu-slug');
				dataLayer.push({
					"event":"track_event",
					"event_category":"navigation_footer",
					"event_action":"click",
					"event_label": category_slug
				});
				//console.log("data layer 4 ", category_slug);
			} else if(e.target && (e.target.classList.contains("ud-mm__social-item"))){
				var social = e.target.getAttribute('alt');
				social = social.replace('social-', '');
				dataLayer.push({
					"event":"track_event",
					"event_category":"navigation_header",
					"event_action":"social_button_click",
					"event_label":social
				});
				//console.log("data layer 5 ", social);
			} else if(e.target && (e.target.classList.contains("udfooter__icon"))){
				var social = e.target.getAttribute('data-social-slug');
				dataLayer.push({
					"event":"track_event",
					"event_category":"navigation_header",
					"event_action":"social_button_click",
					"event_label":social
				});
				//console.log("data layer 6 ", social);
			} else if(e.target && (e.target.classList.contains("data-layer-line-top"))){
				dataLayer.push({
					"event":"track_event",
					"event_category":"line_add_friend",
					"event_action":"click_top_button",
					"event_label": url
				});
				// console.log("data layer 7 ", `line top ${url}`);
			} else if(e.target && (e.target.classList.contains("data-layer-line-bottom"))){
				dataLayer.push({
                    "event":"track_event",
					"event_category":"line_add_friend",
					"event_action":"click_bottom_button",
					"event_label": url
				});
				// console.log("data layer 7 ", `line bottom ${url}`);
            } else if(e.target && (e.target.classList.contains("data-layer-line-footer"))){
				dataLayer.push({
                    "event":"track_event",
					"event_category":"line_add_friend",
					"event_action":"click_footer_button",
					"event_label": url
				});
				// console.log("data layer 7 ", `line footer ${url}`);
			} else if(e.target && (e.target.classList.contains("data-layer-track-single"))){
				var social = e.target.getAttribute('data-social-name');
				social = social.toLowerCase();
				dataLayer.push({
					"event":"track_event",
					"event_category":"social_share_button",
					"event_action":social,
					"event_label":url
				});
				//console.log("data layer 8 ", social, url);
			} else if(e.target && (e.target.classList.contains("data-layer-track-tel"))){
				var tel = e.target.getAttribute('data-tel');
				dataLayer.push({
					"event":"track_event",
					"event_category":"navigation_footer",
					"event_action":"call",
					"event_label":tel
				});
				//console.log("data layer 9 ", tel);
			} else if(e.target && (e.target.classList.contains("data-layer-track-home-section"))){
				var slug = e.target.getAttribute('data-menu-slug');
				dataLayer.push({
					"event":"track_event",
					"event_category":"homepage_section",
					"event_action":"click",
					"event_label":slug
				});
				//console.log("data layer 10 ", slug);
			} else if(e.target.parentNode && (e.target.parentNode.classList.contains("data-layer-track-home-section"))){
				var slug = e.target.parentNode.getAttribute('data-menu-slug');
				dataLayer.push({
					"event":"track_event",
					"event_category":"homepage_section",
					"event_action":"click",
					"event_label":slug
				});
				//console.log("data layer 11 ", slug);
			} else if(e.target && (e.target.classList.contains("data-layer-track-search"))){
				dataLayer.push({
					"event":"track_event",
					"event_category":"navigation_header",
					"event_action":"site_search_click",
					"event_label":null
				});
				//console.log("data layer 12 site_search_click");
			}
			//e.preventDefault();
		});
	})();
