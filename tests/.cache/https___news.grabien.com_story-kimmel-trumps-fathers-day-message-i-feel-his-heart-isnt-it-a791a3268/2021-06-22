var players = $.json.deserialize('[]');

function socialShare(socialMedia)
{
  if (socialMedia == 'facebook')
    var url = 'https://www.facebook.com/sharer/sharer.php?u=https%3A%2F%2Fnews.grabien.com%2Fstory-kimmel-trumps-fathers-day-message-i-feel-his-heart-isnt-it-a&title=Kimmel+on+Trump%E2%80%99s+Father%E2%80%99s+Day+Message%3A+I+Feel+Like+His+Heart+Isn%E2%80%99t+in+it+Anymore';
  else if (socialMedia == 'twitter')
    var url = 'https://twitter.com/intent/tweet?text=Kimmel+on+Trump%E2%80%99s+Father%E2%80%99s+Day+Message%3A+I+Feel+Like+His+Heart+Isn%E2%80%99t+in+it+Anymore+https%3A%2F%2Fnews.grabien.com%2Fstory-kimmel-trumps-fathers-day-message-i-feel-his-heart-isnt-it-a';
  openWindow(url, 560, 444);
}

$(function()
{
  $.each(players, function(id, item)
  {
    createPlayer(item.fileID, item);
  });
  $.each($('.storydescription').find('img'), function(id, item)
  {
    if (typeof($(item).attr('width')) != 'undefined' && parseInt($(item).attr('width')))
    {
      var imageWidth = parseInt($(item).attr('width'));
      $(item).removeAttr('width').removeAttr('height').css('width', '100%').css('max-width', imageWidth + 'px');
    }
  });
  if ($('.grabientweet').length > 0)
  {
    $.getScript('https://platform.twitter.com/widgets.js', function()
    {
      $.each($('.grabientweet'), function(id, item)
      {
        var tweetID = $(item).data('id');
        $(item).empty();
        twttr.widgets.createTweet(tweetID.toString(), item);
      });
    });
  }
  $.post('index_b.php', { action: 'itemview', id: '33846', type: 'story' }, processResponse);
  loadAdsBlock('publir_leaderboard_3', 'ads1_story');
  loadAdsBlock('publir_leaderboard_4', 'ads2_story');
});

</script>

<script>

var VUUKLE_CONFIG = { apiKey: 'f5351a16-341f-4d59-a2af-e2cccad32003', articleId: 'story_33846',
