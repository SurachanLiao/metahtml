function commentHandler(e)
{
  $.ajax({ type: 'POST', cache: false, dataType: 'json', url: 'https://api.grabien.com/newcomment.php',
    data: { name: e.name, email: e.email, source: 'Vuukle', rnd_value: Date.now(), from: 'news' }});
}

