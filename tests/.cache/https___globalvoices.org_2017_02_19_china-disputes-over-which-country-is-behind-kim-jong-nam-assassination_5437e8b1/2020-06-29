<!--[if !IE]> -->
<script type="text/javascript">
	jQuery(document).ready(function($) {
		/**
		 * Make all links to other domains open in new tabs/windows
		 */
		$('a').live('click', function() {
		    // If we're dealing with an Amber cache link from the popup, keep propagating normally.
            if ($(this).hasClass('amber-cache-link')) {
                return true;
            }

			// Validate that we have a link before proceeding. If we don't, propagate the event normally.
			var href = $(this).attr('href');
			if (typeof href === typeof undefined || href === false) {
				return true;
			}

			// Get the "data-amber-behavior" attribute in our link. If we have one, we want to check
            // if the link leads to an offline page or not. If the page is offline, we keep propagating
            // the event normally since a popup will appear instead of following the link.
            var amber_behaviour = $(this).attr('data-amber-behavior');
            if ('string' == typeof amber_behaviour && amber_behaviour.indexOf('down') !== -1) {
			    return true;
            }

			// Regex to extract the top level domain
			var pattern = /(\w*\.\w*)$/i;

			// Extract top level domains
			var link_domain = pattern.exec(this.host)[1];
			var host_domain = pattern.exec(location.hostname)[1];

			// Standardize Global Voices domain names
			if ('globalvoicesonline.org' == link_domain) {
				link_domain = 'globalvoices.org';
			}
			if ('globalvoicesonline.org' == host_domain) {
				host_domain = 'globalvoices.org';
			}

			if (link_domain != host_domain) {
				window.open(href);
			    return false;
			}
		});
	}); // end document.ready
</script>
<![endif]-->
		<script type="text/javascript">
		// Mailchimp groups: Automatically select first group in list
		jQuery(document).ready(function($) {

			// Act on the gv container for mailchimp forms
			$('.gv-mailchimp-form-container').each(function() {
				
			
				// Get the submit target and replace it with subscribe page if one is set up.
				var $form = $(this).find('#mc_signup_form');
				$form.prop('action', 'https://globalvoices.org/contact/email-subscription/#mc_signup');

							// Replace success message 
				if ($('.mc_success_msg').length) {
					$('.mc_success_msg').html("You've been signed up, thanks! Please look for our confirmation email!");
				}
				// Replace invalid email message
				$('.mc_error_msg:contains("email address is invalid")').each(function(index){
					$(this).html("Invalid email address. Please try again.");
				});
				// Replace duplicate email message
				$('.mc_error_msg:contains("already subscribed")').each(function(index){
					$(this).html("That email is already subscribed to the list.");
				});
				// Replace duplicate email message
				$('#mc_unsub_link a').each(function(index){
					$(this).html("Unsubscribe from list");
				});
				
							// Get all inputs in the interest section
				var $interestRadioChoices = $(this).find('input[type=radio]');
				if ($interestRadioChoices.length) {
					// If all of the elements are not checked
					if ($interestRadioChoices.is(':checked') === false) {
						// Set the first one to checked
						$interestRadioChoices.first().attr('checked', true);
					}
				}
							
				// Get all <option> tags inside a group dropdown
				var $interestDropdownChoices = $(this).find('select > option');
				if ($interestDropdownChoices.length) {
					// If the first element is empty (insane default behavior)
					if (!$interestDropdownChoices.first().val()) {
						// Remove the first element
						$interestDropdownChoices.first().remove();
					}
				}
							// Add placeholder text in email form to avoid showing field which is hidden by css
				var $emailfield = $(this).find('#mc_mv_EMAIL');
				if ($emailfield.length) {
					$emailfield.attr('placeholder', 'Email');
				}
							// Move the submit button next to the email field
				var $submitButton = $(this).find('.mc_signup_submit');
				if ($submitButton.length) {
					$submitButton.insertAfter($emailfield);
				}
							// Move the submit button next to the email field
				var $subheaderText = $(this).find('#mc_subheader');
				var $formInsideContainer = $(this).find('.mc_form_inside');
				
				if ($subheaderText.length) {
					$subheaderText.appendTo($formInsideContainer);
				}
			}); // END $('#mc_signup').each

		}); // end document.ready
	</script>
		<script type="text/javascript">
		jQuery(document).ready(function($) {
			// Make anything with wpp_closebutton class be a close button for open colorboxes
			$('.wpp_closebutton').click(function(){
				$.colorbox.close();
			})
			// Move the end-of-post marker
			var $wpp_popup_post_end_element = $('#wpp_popup_post_end_element');
//			console.log($wpp_popup_post_end_element);
			if ($wpp_popup_post_end_element.length) {
				$wpp_popup_post_end_element.insertAfter('#single-post');
			}
		}); // end document.ready
	</script>
	<script type="text/javascript" src="https://platform.twitter.com/widgets.js"></script><script>
	
jQuery(function ($) {

	var id = "471987";

	var uniq_id = "5efa689cd34bc";

	var options = {"enabled":true,"theme":"wpp_html_theme","delay_time":"1500","mask_color":"#000","border_color":"#000","transition":"elastic","rules":{"show_on_homepage":true,"show_to_logged_in_users":true,"hide_on_mobile_devices":true,"use_cookies":true,"cookie_expiration_time":"30","show_only_on_these_posts":"","show_only_on_these_categories":"","show_only_to_visitors_from_these_sites":"","show_only_on_homepage":false,"show_only_to_search_engine_visitors":false,"exit_popup":false,"when_post_end_rule":false}};

	var rules = options.rules;
	
	if ( ! wpp_check_rules( rules, id ) )
		return false;

		// JERHACK: Change values of overlayClose and escKey below to be true because WTF those are invaluable features!

	var do_popup_function = function() {
		$.colorbox({
			inline: true,
			fixed: true,
			width: 'auto',
			height: 'auto',
			
			href: "#wpp_html_theme-auto_popup-471987",
			className: 'cbox_wpp_html_theme',
			overlayClose: true,
			escKey: true,
			transition: options.transition,

			onOpen: function() {

				$("#colorbox").css("opacity", 0);

			},

			onComplete: function() {

				$("#colorbox").css("opacity", 1);

			},

			onClosed: function() {

				if ( rules.use_cookies )
					wpp_place_popup_close_cookie( id, rules.cookie_expiration_time );
			}
		});

		$('#cboxOverlay.cbox_wpp_html_theme').css( 'background', options.mask_color );

		$('.cbox_wpp_html_theme #cboxLoadedContent').css( 'border-color', options.border_color );

		//$('.cbox_wpp_html_theme #cboxLoadedContent').css( 'background', 'transparent' );
	
	};

	if ( rules.exit_popup ) {

		wpp_do_exit_popup( do_popup_function );

	} else if ( rules.when_post_end_rule ) {

		wpp_check_when_post_rule( do_popup_function );

	} else {

		setTimeout( do_popup_function, options.delay_time );
	
	}

	if ( rules.comment_autofill ) {
		
		wpp_do_comment_autofill( uniq_id, '427870d2f581b26eaa27ea917dec0bfc' );
	
	}

});
</script>

