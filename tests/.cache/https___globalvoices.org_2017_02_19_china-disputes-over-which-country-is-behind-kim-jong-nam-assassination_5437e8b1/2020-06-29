		// Make .post-header .postmeta-container headings toggle their contents. Ignore when .postmeta-sidebar (hidden at 960) is visible because inside it the menus are already expanded.
		
		$('.post-header .post-translations-title').click(function(){
			gv_toggle_menu_button('.post-header .post-translations-title', '.post-header .post-translations-container', '.post-header .translation-listing-container', '.post-header');
			return false;
		});
		
