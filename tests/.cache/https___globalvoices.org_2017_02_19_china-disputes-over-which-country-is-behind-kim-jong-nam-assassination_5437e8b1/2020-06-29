					gv_toggle_menu_button('.taxonomy-list-eebc5 .menu-toggle', '.taxonomy-list-eebc5', '.taxonomy-list-eebc5 .toggle-menu-content-container', '.header-taxonomy' );
					return false;
				});				
			
	}); // end document.ready

		function archWarp(dropdown) {
		var URL = dropdown.options[dropdown.selectedIndex].value;
		if(URL != "") {
		document.location.href=URL;
		}
	}
