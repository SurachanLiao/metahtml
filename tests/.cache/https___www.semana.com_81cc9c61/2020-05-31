<script type="text/javascript">
    var user_id = readCookie('elpaisuser');
    if (user_id == null) user_id = 0;

    var cX = cX || {}; cX.callQueue = cX.callQueue || [];
    cX.callQueue.push(['setSiteId', '9222263900732341000']);

    var externalUserId = GetEmailByToken();

    if (externalUserId != null && externalUserId != "") {
        cX.callQueue.push(["addExternalId", {
            "id": externalUserId,
            "type": "sem"
        }]);
    }

    var cx_user_status = 'ok';
    try {
        var cx_cokie = readCookie('cx_user_profile2');
        var cx__epla_cookie = readCookie('keyscXenseEplanningV3');
        var cx_epla_cokie = readCookie('keywordsEplanningV3');
        if (!cx_cokie.trim()) {
            cx_user_status = "cxEmpty";
        } else {
            if (!cx__epla_cookie.trim()) {
                cx_user_status = "ceEmpty";
            } else {
                if (!cx_epla_cokie.trim()) {
                    cx_user_status = "eEmpty";
                }
            }
        }
    } catch (error) {
        cx_user_status = "exception";
    }

    cX.callQueue.push(['setCustomParameters', { 'user_status': cx_user_status }]);

    cX.callQueue.push(['invoke', function () {
        CX_SEGMENTS = cX.getUserSegmentIds({ persistedQueryId: onCxReadUserProfile });

        var eplanning = 'cx_http_status';
        eplanning = CX_SEGMENTS.join('|');

        $.cookie("cxSegmentos", eplanning, {
            expires: -1,
            path: "/"
        });
    }]);

    cX.callQueue.push(['sendPageViewEvent']);
</script>
