	slideBanner();

	function paywallMeteredScrollBehavior() {
		var validateCollapse = 0;
		if (jQuery.browser.mobile) {
			validateCollapse = $(document).height() * 15 / 100;
		}
		else {
			validateCollapse = $(document).height() * 30 / 100;
		}
		if ($(window).scrollTop() >= validateCollapse) {
			slideBanner();
			$(window).off('scroll', paywallMeteredScrollBehavior);
		}
	}

	function urlMeteredReturn(urlBase) {
		if (typeof utmPaywallMeteredLastParams != 'undefined') {
			utmPaywallMeteredLastParams = encodeURIComponent(utmPaywallMeteredLastParams)
			window.open(urlBase + utmPaywallMeteredLastParams + '&urlMeteredReturn=' + window.location.href + '&isPaywall=true', '_blank');
		}
		else {
			window.open(urlBase + '&urlMeteredReturn=' + window.location.href + '&isPaywall=true', '_blank');
		}
	}

	function slideBanner() {
		if ($('#divContentBannerMeteredPaywall').prop('state') == undefined || $('#divContentBannerMeteredPaywall').prop('state') == 'up') {
			var heightHeaderBanner = $('#lblBannerMeteredCollapsibleToggle').height();
			var heightBanner = $('#divContentBannerMeteredPaywall').height();
			var heightTransform = heightBanner - heightHeaderBanner;
			var transform = 'translate3d(0,' + heightTransform + 'px,0)';
			$('#divContentBannerMeteredPaywall').css('transform', transform);
			$('#divContentBannerMeteredPaywall').prop('state', 'down');
			$('#imgBannerMeteredAction').prop('src', '/img/arrow-collapse.svg');
			if (!jQuery.browser.mobile) {
				$('#divBannerHeader2').show();
			}
		}
		else {
			var transform
			if (jQuery.browser.mobile) {
				transform = 'translate3d(0,' + $('#divContentCollapsibleMobile').height() + 'px,0)';
			}
			else {
				transform = 'translate3d(0,' + 0 + 'px,0)';
			}
			$('#divContentBannerMeteredPaywall').css('transform', transform);
			$('#divContentBannerMeteredPaywall').prop('state', 'up');
			$('#imgBannerMeteredAction').prop('src', '/img/collapse.svg');
			$('#divBannerHeader2').hide();
		}
	}

	function slideBannerMobile() {
		if (jQuery.browser.mobile) {
			if ($('#divContentBannerMeteredPaywall').css('transform') == 'matrix(1, 0, 0, 1, 0, 0)' || $('#divContentBannerMeteredPaywall').css('transform') == 'none') {
				var heightHeaderBanner = $('#divContentCollapsibleMobile').height();
				var transform = 'translate3d(0,' + heightHeaderBanner + 'px,0)';
				$('#divContentBannerMeteredPaywall').css('transform', transform);
				$('#imgBannerMeteredAction2').prop('src', '/img/arrow-collapse-gray.svg');
			}
			else {
				var transform = 'translate3d(0,' + 0 + 'px,0)';
				$('#divContentBannerMeteredPaywall').css('transform', transform);
				$('#imgBannerMeteredAction2').prop('src', '/img/collapse-close-gray.svg');
			}
		}
	}

	$(document).ready(function () {
		if (screen.width < 840 && window.location.pathname == '/') {
			$('#divContentBannerMeteredPaywall').hide();
		}
		verifySubscribersAndShowPaywallMeteredBanner();
		$(window).scroll(paywallMeteredScrollBehavior);
		$('#lblBannerMeteredCollapsibleToggle').click(function () {
			slideBanner();
		});
		$('#lblCollapsibleMobile').click(function () {
			slideBannerMobile();
		});
	});
</script>
    
