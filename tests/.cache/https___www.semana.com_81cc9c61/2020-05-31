        $(document).ready(function () {
            if (!$('#chkTermns').is(':checked')) {
                $("#MessageLoginUserSocial").html('<div class="column"><div id="valInfoLoginSocial" data-alert class="alert-box warning">Debe aceptar los términos & condiciones.<a href="javascript:closeMessage(\'valInfoLoginSocial\');" rel="noopener" class="close">&times;</a></div></div>');
                $('#divTransparente').show();
            }
            $('#chkTermns').click(function () {
                if (!$(this).is(':checked')) {
                    $("#MessageLoginUserSocial").html('<div class="column"><div id="valInfoLoginSocial" data-alert class="alert-box warning">Debe aceptar los términos & condiciones.<a href="javascript:closeMessage(\'valInfoLoginSocial\');" rel="noopener" class="close">&times;</a></div></div>');
                    $('#divTransparente').show();
                }
                else {
                    closeMessage('valInfoLoginSocial');
                    $('#divTransparente').hide();
                }
            });
            $('#chkTermns1').click(function () {
                if ($(this).is(':checked')) {
                    enableButton('pay-btnsubmit');
                    closeMessage('valInfoLogin');
                }
            });
            $('#userLoginPay').on('blur', function () {
                if ($(this).val().indexOf('@') <= -1 && $(this).val() !== '') {
                    $('#lblUserLoginPay').css('top', '-19px').css('left', '0px');
                }
                else if ($(this).val() !== '') {
                    $('#lblUserLoginPay').css('top', '-19px');
                }
                else {
                    $('#lblUserLoginPay').css('top', '');
                }
            });
        });
</script>

