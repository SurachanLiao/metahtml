<script>
    // 메인 추가 조회
    $.ajax({
        url: '/section/more?panType=MAIN',
        type: 'GET',
        dataType: 'json',
        contentType: 'application/json',
        timeout: 30000,
        success: function (data) {
            // 많이 본 기사
            var $target = $('ul.hook-best');
            if ($target) {
                var $li = $($target.find('li'));
                $target.empty();
                var articles = data.topViewArticles;
                for (var i = 0; i < articles.length; i++) {
                    var article = articles[i];
                    var item = $li.clone();
                    item.find('span').text(i + 1);
                    item.find('a').text(article.articleTitle);
                    item.find('a').attr('href', article.articleUrl);
                    item.find('a').attr('target', '_' + article.articleLinkTargetType);
                    $target.append(item);
                }

                $.getScript('/js/split/currentPosition.js');
            }

            // 꼼꼼히 읽은 기사
            $target = $('.hook-1st ul');
            var $li = $($target.find('li'));
            $target.empty();
            var articles = data.driArticles;
            for (var i = 0; i < articles.length; i++) {
                var article = articles[i];
                var item = $li.clone();
                item.find('span').text(i + 1);
                item.find('a.title').text(article.articleTitle);
                item.find('a').attr('href', article.articleUrl);
                item.find('a').attr('target', '_' + article.articleLinkTargetType);
                item.find('img').attr('src', article.filePath);
                if (article.articleContentsType == 'Movie') {
                    item.find('.img-box').addClass('video');
                }
                if (i > 0) {
                    item.find('.img-box').remove();
                }
                $target.append(item);
            }

            // 지금 뜨고 있는 기사
            $target = $('.hook-2nd ul');
            $li = $($target.find('li'));
            $target.empty();
            var articles = data.nowArticles;
            for (var i = 0; i < articles.length; i++) {
                var article = articles[i];
                var item = $li.clone();
                item.find('span').text(article.articleTitle);
                item.find('a').attr('href', article.articleUrl);
                item.find('a').attr('target', '_' + article.articleLinkTargetType);
                item.find('img').attr('src', article.filePath);
                if (article.articleContentsType == 'Movie') {
                    item.find('.img-box').addClass('video');
                }
                $target.append(item);
            }

            // 알립니다
            $target = $('#noticeArea');
            $a = $($target.find('a'));
            $target.empty();
            var notices = data.notices;
            for (var i = 0; i < notices.length; i++) {
                var notice = notices[i];
                var item = $a.clone();
                item.text(notice.noticeTitle);
                item.attr('href', '/Notice/Read/' + notice.noticeId);
                $target.append(item);
            }
        },
        error: function (req, stat, err) {
            // console.log(err);
        }
    }); // ajax

    var subAreaPubId = '';
    var url = '/main/local';
    if (subAreaPubId && subAreaPubId != '') {
        url += '?subAreaPubId=' + subAreaPubId;
    }
    // 지역
    $.ajax({
        url: url,
        type: 'GET',
