<script>
    Cookies.set('closeUrl', '/', { path: '/' });

    /**
     * 현장 줌-인
     * call : photoNews.js > getImage()
     */
    function getData(zoominId) {
        var $showBox = $('.show-box');
        var $loadingBox = $showBox.find('.loading-box');
        var $imgBox = $showBox.find('.img-box');
        var $figcaption = $showBox.find('figcaption');

        $loadingBox.show();

        $.ajax({
            url: '/main/zoomin/' + zoominId,
            method: "GET",
            contentType: 'application/json'
        }).success(function (response) {
            fetchShowBox(response);

        }).fail(function (err) {
        }).complete(function () {
            $loadingBox.hide();
        });

        function fetchShowBox(data) {
            var $photoNews = $('.photo-news');
            var $showBox = $photoNews.find('.show-box');
            var $figcaption = $photoNews.find('figcaption');

            var $imgPlace = $showBox.find('.img-box img');
            var $imgBox = $showBox.find('.img-box a');
            var $titlePlace = $('.title-place a', $figcaption);
            var $textPlace = $('.text-place a', $figcaption);
            var $countPlace = $('.picture-count a', $figcaption);

            $imgPlace.attr('src', getFilePath('http://newsimg.hankookilbo.com', (data.zoominAttach ? data.zoominAttach.filePath : '')));
            $imgBox.attr('href', '/Media/' + data.zoominId + '?Type=Zoomin');
            $titlePlace.attr('href', '/Media/' + data.zoominId + '?Type=Zoomin');
            $textPlace.attr('href', '/Media/' + data.zoominId + '?Type=Zoomin');
            $countPlace.attr('href', '/Media/' + data.zoominId + '?Type=Zoomin');
            $titlePlace.text(data.zoominName);
            $textPlace.text(data.zoominDescription);
            $countPlace.text(data.fileCnt);

            $imgBox.show();
            $figcaption.show();
        }
    }
</script>
