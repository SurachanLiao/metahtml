            $target.find('a').attr('target', '_' + data.articleLinkTargetType);
            $target.find('#localArticleTitle').text(data.articleTitle);
            $target.find('#localArticleContents').text(data.articleFrontPanContents);
            $target.find('img').attr('src', data.filePath);
            $target.find('em').text(data.subSectionName);
            if (!data.subSectionName || data.subSectionName == '') {
                $target.find('em').remove();
            }
            $target.find('.go-section a').attr('href', data.subSectionUrl);
            if (data.articleContentsType == 'Movie') {
                $target.find('.img-box').addClass('video');
            }
        },
        error: function (req, stat, err) {
            // console.log(err);
        }
    }); // ajax

    // 관심 있을만한 기사
