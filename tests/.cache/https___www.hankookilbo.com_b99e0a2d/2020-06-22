<script>
    var notiUrl = "";
    $(function () {
        if (!loggedIn) {
            // 로그인 된 것으로 표시로 변경
            $('#log-in-status-container').append('<li><a href="javascript:openSignInPopUp()">로그인</a></li>');
        } else {
            // 로그인 된 것으로 표시로 변경
            $('#log-in-status-container').append('<li>\n' +
                '                            <div class="tooltip-box alarm-box">\n' +
                '                                <a href="/MyPage" class="btn-my">\n' +
                '                                    <span class="blind">내 정보</span>\n' +
                '                                    <span class="count" id="notiCnt"></span>\n' +
                '                                </a>\n' +
                '\n' +
                '                                <div class="tooltip" id="notiTooltip">\n' +
                '                                    <a href="" class="btn-close"></a>\n' +
                '                                    <div class="cont">\n' +
                '                                        <p id="notiType"></p>\n' +
                '                                        <a href="javascript:onClickNoti()" class="article">\n' +
                '                                            <span class="icon-article"></span>\n' +
                '                                            <span class="text notiContent" id="notiContent"></span>\n' +
                '                                        </a>\n' +
                '                                    </div>\n' +
                '                                </div>\n' +
                '\n' +
                '                            </div>\n' +
                '                        </li>');
            // 공지사항 조회
            $.ajax({
                url: '/users/notice',
                type: 'GET',
                contentType: 'application/json',
                success: function (data) {
                    console.log('get notice-> 성공');
                    cnt = data.length;
                    if (cnt === 0) {
                        $('#notiCnt').html(0);
                    } else {
                        idx = cnt - 1;
                        title = data[idx].articleTitle;
                        type = data[idx].noticeType;
                        notiUrl = '/News/Read/'+ data[idx].articleId;
                        if (cnt > 9) {
                            $('#notiCnt').html('9<ins>+</ins>');
                        } else {
                            $('#notiCnt').html(cnt);
                        }
                        if (cnt > 0) {
                            $('#notiTooltip').addClass('up');
                            $('#notiContent').html(title);
                            noti = (type === 'COMMENT_MORE') ? '댓글을 남긴 기사에 10개의 댓글이 <br> 달렸습니다.' :
                                (type === 'COMMENT_REPLY') ? '내 댓글에 다른 독자의 답글이 <br> 달렸습니다.' :
                                    (type === 'FAVORITE_LIKE_MORE') ? '내가 관심있는 기사를 10명이 <br>함께 공감합니다.' :
                                        (type === 'FAVORITE_COMMENT_MORE') ? '내가 관심있는 기사에 10개의 댓글이 <br>남겨졌습니다.' :
                                            (type === 'SUBSCRIPTION_SYMPATHY_MORE') ? '내가 관심있는 연재물의 새 기사가 <br>발행되었습니다.' :
                                                (type === 'SUBSCRIPTION_MORE') ? '내가 구독한 연재물의 새 기사가 <br>발행되었습니다.' : '';
                            $('#notiType').html(noti);
                        }
                    }
                },
                error: function (req, stat, err) {
                    console.log(err);
                }
            });
        }
    });

    function onClickNoti(){
        location.href = notiUrl;
    }
</script>
