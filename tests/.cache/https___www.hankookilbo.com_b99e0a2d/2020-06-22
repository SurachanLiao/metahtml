        <!-- .scroll-box -->
        <div class="scroll-box custom-scroll">
            <input id="report-title-input" type="text" class="input-text" placeholder="제목"
                   onchange="onChangeReportTitle(this)">

            <!-- edit-box -->
            <div class="edit-box">
                    <textarea class="textarea" placeholder="내용" id="reportContent"
                              onchange="onChangeReportContent(this)"></textarea>
