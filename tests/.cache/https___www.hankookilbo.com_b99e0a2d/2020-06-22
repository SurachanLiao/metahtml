<script>
    if (Cookies.get('curr_article')) {
        // 관심 있을만한 기사
        $.ajax({
            url: '/main/read',
            type: 'GET',
            dataType: 'json',
            contentType: 'application/json',
            timeout: 30000,
            success: function (data) {
                if (data) {
                    var $target = $('#readArticle');
                    $target.find('a').attr('href', data.articleUrl);
                    $target.find('a').attr('target', '_' + data.articleLinkTargetType);
                    $target.find('#readArticleTitle').text(data.articleTitle);
                    $target.find('#readArticleContents').text(data.articleFrontPanContents);
                    $target.find('img').attr('src', data.filePath);
                    $target.find('span').text(data.articleDeployDt);
                }
            },
            error: function (req, stat, err) {
                // console.log(err);
            }
        }); // ajax
    }

    $(document).ready(function() {
        $.ajax({
            url: '/api/weather',
            method: 'GET',
            success: function(response) {
                console.log(response);
                $('#weather-icon').show();
                var weatherObj = response;
                $('#weather-location-and-degree').html(weatherObj.locationAndDegree + "℃");
                if (weatherObj.weather === '') {
                    return "";
                }
                // 구름일 경우,,
                if (weatherObj.weather.indexOf("구름") > -1) {
                    if ('GENERAL' === 'BREAKING') {
                        $('#weather-icon').attr('src', "/images/svg/wh-w103.svg");
                    } else {
                        $('#weather-icon').attr('src', "/images/svg/wh-103.svg");
                    }

                } else if (weatherObj.weather.indexOf("구름") > -1) {
                    if ('GENERAL' === 'BREAKING') {
                        $('#weather-icon').attr('src', "/images/svg/wh-w202.svg");
                    } else {
                        $('#weather-icon').attr('src', "/images/svg/wh-202.svg");
                    }
                }

                switch (weatherObj.weather) {
                    case "맑음":
                        if ('GENERAL' === 'BREAKING') {
                            $('#weather-icon').attr('src', "/images/svg/wh-w101.svg");
                        } else {
                            $('#weather-icon').attr('src', "/images/svg/wh-101.svg");
                        }

                        break;
                    case "흐림":
                        if ('GENERAL' === 'BREAKING') {
                            $('#weather-icon').attr('src', "/images/svg/wh-w201.svg");
                        } else {
                            $('#weather-icon').attr('src', "/images/svg/wh-201.svg");
                        }
                        break;
                    default:
                        if ('GENERAL' === 'BREAKING') {
                            $('#weather-icon').attr('src', "/images/svg/wh-w101.svg");
                        } else {
                            $('#weather-icon').attr('src', "/images/svg/wh-101.svg");
                        }

                        break;
                }
            },
            fail: function() {

            }
        });

        /**
         * 로그인 돼있으면
         */
        if (Cookies.get('accessToken')) {
            console.log('이어보기 기사 id 조회');
            $.ajax({
                url: '/users/last-read-article',
                type: 'GET',
                contentType: 'application/json',
                timeout: 30000,
                success: function (data) {
                    // console.log(data);
                    if (data) {
                        console.log('이어보기 기사 있음');
                        $('#toast-last-read-news').removeClass('blind');
                        $('#toast-last-read-a-tag span').html(data.articleTitle);

                        $('#toast-last-read-a-tag').on('click', function() {
                            removeLastReadArticle();
                            location.href = '/News/Read/' + data.articleId;
                        });
                        console.log(data)
                    } else {

                        console.log('이어보기 기사 없음');
                        console.log(data);
                    }
                },
                error: function (req, stat, err) {
                    console.log(err);
                }
            }); // ajax
        }
    });

    function onClickCloseLastReadNews() {
        $('#toast-last-read-news').addClass('blind');
        removeLastReadArticle()
    }
</script>
