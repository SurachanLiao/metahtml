      <h4 class="noborder">
        <a href="/de/articles/2018/02/03/pers-f03.html">

          

          
          <span class="overline"><em>
            Aus Facebook wird Policebook
          </em></span>
          

        </a>
      </h4>
      
      

      

    
    

  

  

  

  

  

  



  

    
    
      
        
      
        
      
        
      
        
      
        
      
        
      
        
      
    

    

      
      
      
      
      

      

      
      

      <h4>
        <a href="/de/articles/2018/02/01/vidd-f01.html">

          
            
              
                
                  
                  
                  
                  
                  
                  
                    
                    
                  
                  <div class="imageFull" style="width:340px; height:170px; overflow:hidden;">
                    <img src="/asset/6e9b41ea-b33d-4c6c-b3c4-5ef18633a45d?rendition=image320" srcset="/asset/6e9b41ea-b33d-4c6c-b3c4-5ef18633a45d?rendition=image640 2x" width="340" style="width:100%; margin-top:-0px;"/>
