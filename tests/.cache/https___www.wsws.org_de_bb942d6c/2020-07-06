  	function popupFundAppeal() {
  		//if ( ( ($.cookie('popupfundappeal_de') != 'seen') && ($.cookie('cookies') == 'accepted_20181101') ) || window.location.href.indexOf('demo=popup') != -1) {
  		if ( $.cookie('popupfundappeal_de') != 'seen' || window.location.href.indexOf('demo=popup') != -1) {
  			if ($('#page').length > 0) {
  				var htmlArray = [
	  				'<div id="popupfundappeal">',
	  					'<div class="wrapper">',
	  						// '<img src="/de/media/photos/legacy/frontpage/popup-fund-immigration.jpg" style="max-width: 100%;">',
	  						// '<a href="https://www.wsws.org/donate/de-sgp.html?pk_campaign=spenden&pk_kwd=popup1">',
	  						// 	'<img src="/de/media/photos/legacy/de/frontpage/201812spenden490.jpg" style="max-width: 100%;">',
	  						// '</a>',
  							'<div style="position:relative; width:100%; height:0; padding-bottom:56.25%;">',
	  						    '<iframe src="https://www.youtube-nocookie.com/embed/VUVqOA_n4Yk?rel=0&controls=1&showinfo=0&autoplay=0" allowfullscreen="" allow="autoplay" style="position:absolute; top:0; right:0; bottom:0; left:0; border:none; width:100%; height:100%;"></iframe>',
	  						'</div>',
  							'<div class="text">',
  								// '<h2 style="margin-bottom:20px;">Arbeiter müssen die Rechte der Flüchtlinge verteidigen! Helft der WSWS, diese Perspektive zu verbreiten!</h2>',
  								'<h2 style="font-size:26px; margin-bottom:20px;">Spendet für die <em>World Socialist Web Site</em>!</h2>',
  								// '<p>Die WSWS hat in den letzten Wochen die brutalen Pläne der Bundesregierung und der EU gegen Flüchtlinge aufgedeckt, die Kampagne der großen Medien entlarvt und ausführlich über die zahlreichen Proteste zur Verteidigung der Flüchtlinge berichtet.</p>',
  								// '<p>Spende noch heute, um uns bei der Fortführung dieser Arbeit zu unterstützen! Jeder Euro hilft uns, mehr Reportagen zu schreiben, auf Demonstrationen einzugreifen und unsere sozialistische Perspektive einem Massenpublikum bekannt zu machen.</p>',
  								'<a class="button" href="https://www.wsws.org/donate/de.html?pk_campaign=spenden&pk_kwd=popup2"><span>Jetzt spenden</span></a>',
  								'<a class="link" href="">Zur&uuml;ck zur WSWS</a>',
  							'</div>',
  						'</div>',
  					'</div>'	  				
	  			];
	  			var html = htmlArray.join('');
  				$('body').prepend(html);
  				$('#popupfundappeal > .wrapper > a').click(function() {
		  			_paq.push(['trackGoal', 22]);
		  		});
  				$('#popupfundappeal > .wrapper > .text > .button').click(function() {
		  			_paq.push(['trackGoal', 22]);
		  		});
  				$('#popupfundappeal > .wrapper > .text > .link').click(function() {
		  			$('#popupfundappeal').remove();
		  			_paq.push(['trackGoal', 23]);
			  		return false;
			  	});
			  	var expireDate = new Date();
		  		var minutes = 180;
		  		expireDate.setTime(expireDate.getTime() + (minutes * 60 * 1000));
		  		$.cookie('popupfundappeal_de', 'seen', {
			  		expires: expireDate,
			  		path: '/',
			  		domain: 'wsws.org',
			  		secure: false
			  	});
  				setTimeout(function() {
	  				$('#popupfundappeal').addClass('active');
	  			}, 2000);
  			}
  		}
  	}

	function appendInlineHeritageAd() {
		var htmlArray = [
			'<div class="imageRight" style="width:200px; oveflow:hidden;">',
				'<a href="http://www.mehring-verlag.de/gesamtkatalog/vierte-internationale/das-erbe-das-wir-verteidigen/" target="_blank">',
					'<img src="https://www.wsws.org/asset/07f2c69a-58dc-4fb2-b94f-aaa6e9fca14E/image.jpg?rendition=image240" style="width:200px;">',
					'<span>Zur deutschen Ausgabe von <em>Das Erbe, das wir verteidigen</em></span>',
				'</a>',
			'</div>'
		];
		var html = htmlArray.join('');
		$('#content > p').slice(-23,-22).before(html);
	}

	function appendCookieBar() {
  		// if ($.cookie('cookies') == null || $.cookie('cookies').indexOf('accepted') == -1) {
  		if ($.cookie('cookies') != 'accepted_20181101') {
			var htmlArray = [
		    	'<div id="cookies" style="position:fixed; bottom:0; width:100%; background:#f7f7f7; border-top:1px solid #dfdfdf; padding:30px; box-sizing:border-box;">',
					'<p style="font-size:14px; line-height:1.2em; text-align:center; margin-bottom:20px;">',
					  'Diese Website verwendet Cookies. Wie wir Cookies einsetzen und wie Sie diese deaktivieren können, erfahren Sie in unserer <a href="/de/special/privacy.html">Datenschutzerklärung</a>.',
					  '<br /><span style="display:inline-block; margin-top:5px;"><em>Wir haben unsere Datenschutzerklärung aktualisiert. Die neue Fassung gilt ab dem 2. November 2018.</em></span>',
					'</p>',
					'<p style="font-size:12px; line-height:1.2em; text-align:center; margin-bottom:0;">',
						'<a class="button-accept" href="" style="text-transform:uppercase; letter-spacing:0.05em; border:1px solid #dfdfdf; border-radius:4px; padding:10px; margin-right:15px;">Ok</a>',
						'<a class="button-more" href="/de/special/privacy.html" style="text-transform:uppercase; letter-spacing:0.05em;">Mehr erfahren</a>',
					'</p>',
				'</div>'
			];
			var html = htmlArray.join('');
			$('body').append(html);
			$('#cookies > p > .button-accept').click(function() {
				var expireDate = new Date();
		  		var days = 365;
		  		expireDate.setTime(expireDate.getTime() + (days * 1440 * 60 * 1000));
		  		$.cookie('cookies', 'accepted_20181101', {
			  		expires: expireDate,
			  		path: '/',
			  		domain: 'wsws.org',
			  		secure: false
			  	});
				$('#cookies').remove();
				return false;
		  	});
		}
	}

	
function callSidebarFunctions() {
    //appendInlineAd();
    //appendInlineAppeal();
    //appendBottomAppeal();
    //appendBottomAppeal2();
    // if (window.location.href.indexOf('demo=bottombar') != -1) {
        appendFundAppeal2016();
    // }
    //appendCookieBar();
    if (window.location.href.indexOf('demo=popup') != -1) {
        popupFundAppeal();
    }
    if (window.location.href.indexOf('/de/articles/2018/01/08/onli-j08.html') != -1) {
    	appendUrgentAppeal();
    }
    //appendInlineAd2();
    if (window.location.href.indexOf('/de/articles/2017/06/27/erbe-j27.html') != -1) {
        appendInlineHeritageAd();
    }
};
</script>
  


        
