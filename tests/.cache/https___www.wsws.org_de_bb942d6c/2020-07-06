<script type="text/javascript">
	function appendInlineAppeal() {
		var excludes = [ 'vide', 'mann', 'idlt', 'slpl', 'hali' ];
		var url = document.location.href;
		var filename = url.substring(url.lastIndexOf("/") + 1, url.length);
		if (!$('#content').is('.width72,.category') && excludes.indexOf(filename.substr(0,4)) == -1) {
			var htmlArray = [
				//'<div id="inline-appeal">',
				//	'<a href="/de/special/donate.html">',
				//		'<img class="logo" src="/de/media/photos/legacy/inline/spenden238.png" width="238" height="178" border="0" />',
				//	'</a>',
				//'</div>'
				'<div class="imageFull" style="margin:15px 0;" data-track-content data-content-name="Spendenaufruf">',
  		  		  '<a href="https://www.wsws.org/donate/de.html?pk_campaign=spenden&pk_kwd=article1" target="_blank" style="display:block;" data-content-target data-content-ignoreinteraction>',
  		  		    '<img src="/de/media/photos/legacy/de/frontpage/201811appeal490.jpg" style="float:none; width:100%; max-width:490px;" data-content-piece>',
  		  		  '</a>',
  		  		'</div>'	
			];
			var html = htmlArray.join('');
			var htmlArray2 = [
				'<div class="imageFull" style="margin:15px 0;" data-track-content data-content-name="Spendenaufruf">',
  		  		  '<a href="https://www.wsws.org/donate/de-sgp.html?pk_campaign=spenden&pk_kwd=article2" target="_blank" style="display:block;" data-content-target data-content-ignoreinteraction>',
  		  		    '<img src="/de/media/photos/legacy/de/frontpage/201812spenden490.jpg" style="float:none; width:100%; max-width:490px;" data-content-piece>',
  		  		  '</a>',
  		  		'</div>'	
			];
			var html2 = htmlArray2.join('');
			var choices = [ html, html2 ];
			var html = choices[Math.round(Math.random())];
			var pCount = $('#content').children('p').length;
			var position = Math.floor(pCount*0.3);
			$('#content').children('p').eq(position).before(html);
			//$('#inline-appeal').children('form').children('.more-options').children('a').click(function() {
			//	$('#inline-appeal').children('.initially-hidden').show();
			//	$(this).parent().hide();
			//	return false;
			//});
			_paq.push(['trackContentImpressionsWithinNode', $('#content')[0]]);
		}
	}
	
