		function oa_show_openx(id, page, position) {

			// OA_show(id);
			//console.log('adz: '+adz[id]);
			//console.log('id: '+ id);
			var remove_element = null;
			if(page == "deliverypage"){
				if (typeof adz[id] === 'undefined'){
					switch(position){
						case "foodA": $("div.row.food div.col-15.col-md-5.col-lg-5.col-xl-3.news-deliver.eq0").remove(); break;
						case "foodB": $("div.row.food div.col-15.col-md-5.col-lg-5.col-xl-3.news-deliver.eq1").remove(); break;
						case "foodC": $("div.row.food div.col-15.col-md-5.col-lg-5.col-xl-3.news-deliver.eq2").remove(); break;
						case "foodD": $("div.row.food div.col-15.col-md-5.col-lg-5.col-xl-3.news-deliver.eq3").remove(); break;
						case "foodE": $("div.row.food div.col-15.col-md-5.col-lg-5.col-xl-3.news-deliver.eq4").remove(); break;
						
						case "foodF": $("div.row.food div.col-15.col-md-5.col-lg-5.col-xl-3.news-deliver.eq5").remove(); break;
						case "foodG": $("div.row.food div.col-15.col-md-5.col-lg-5.col-xl-3.news-deliver.eq6").remove(); break;
						case "foodH": $("div.row.food div.col-15.col-md-5.col-lg-5.col-xl-3.news-deliver.eq7").remove(); break;
						case "foodI": $("div.row.food div.col-15.col-md-5.col-lg-5.col-xl-3.news-deliver.eq8").remove(); break;
						case "foodJ": $("div.row.food div.col-15.col-md-5.col-lg-5.col-xl-3.news-deliver.eq9").remove(); break;
						case "storeA": $("div.row.shop div.col-15.col-md-5.col-lg-5.col-xl-3.news-deliver.eq0").remove(); break;
						case "storeB": $("div.row.shop div.col-15.col-md-5.col-lg-5.col-xl-3.news-deliver.eq1").remove(); break;
						case "storeC": $("div.row.shop div.col-15.col-md-5.col-lg-5.col-xl-3.news-deliver.eq2").remove(); break;
						case "storeD": $("div.row.shop div.col-15.col-md-5.col-lg-5.col-xl-3.news-deliver.eq3").remove(); break;
						case "storeE": $("div.row.shop div.col-15.col-md-5.col-lg-5.col-xl-3.news-deliver.eq4").remove(); break;
					}
				}
			}else{
				if (typeof adz[id] === 'undefined') return;
			}
			// Found ad
			if (adz[id]) {

				var headline = adz[id]['headline'];
				var intro = adz[id]['intro'];
				var src = adz[id]['src'].replace("http:", "https:");
				var click_url = adz[id]['click_url'];
				var view_url = adz[id]['view_url'].replace("http:", "https:");

				switch (page) {
					case 'homepage':

						switch (position) {
							case 'highlight':
								$('.highlights-side .list-h').eq(1).before('<div class="list-h"><div class="list-detail"><div class="h-line">sponsored</div><h3><a class="cx-exclude-id" data-cx-exclude-id="1681704" href="'+click_url+'">'+headline+'</a></h3><p>'+intro+'</p></div><figure><a href="'+click_url+'"><img src="'+src+'" alt=""></a></figure><img src="'+view_url+'" width="0" height="0"/></div>');
								$('.highlights-side .list-h').last().remove();
									//console.log();
									//console.log('highlight id: '+ id);
								break;
							case 'most-recent':
									// แสดงกล่องใหญ่
