<script type='text/javascript'>
var is_bkp_newdesign_switched = null;

function get_cookie_bkp_newdesign(name) {
	var v = document.cookie.match('(^|;) ?' + name + '=([^;]*)(;|$)');
	return v ? v[2] : null;
}

function accept_bkp_newdesign_switched() {
	var d = new Date;
	d.setTime(d.getTime() + 31536000000); // 1 year
	document.cookie = "is_bkp_newdesign_switched=1;domain=bangkokpost.com;path=/;expires=" + d.toGMTString();	
}

function check_bkp_newdesign_switched() {
	var is_bkp_newdesign_switched = get_cookie_bkp_newdesign('is_bkp_newdesign_switched');
	if (!is_bkp_newdesign_switched) show_bkp_newdesign_bar();
}

function go_bkp_old_newdesign() {
	accept_bkp_newdesign_switched();
	location="https://www.bangkokpost.com?olddesign=1";
}

function close_bkp_newdesign_bar() {
	accept_bkp_newdesign_switched();
	document.getElementById("beta-banner").remove();
	// $('#beta-banner').fadeOut();
}

function show_bkp_newdesign_bar() {

	$('body').append('\
		<div class="beta-footer" id="beta-banner" style="display:none">\
			<div class="container">\
				<div class="beta-footer-content">\
					<div class="beta-close"><a onclick="close_bkp_newdesign_bar();" href="javascript:;" id="beta-close"><img src="https://static.bangkokpost.com/newdesign/assets/images/beta/close.svg" alt=""></a></div>\
					<div class="beta-header">YOU’RE LOOKING AT THE NEW DESIGN.</div>\
					<div class="beta-btn">\
						<a target="_blank" href="https://docs.google.com/forms/d/e/1FAIpQLSf7I92Q7BGfYI652QyxSQ2ofoop7HEPDQqYn9WNLzZqypx6Kg/viewform?hl=en">TELL US WHAT YOU THINK <img src="https://static.bangkokpost.com/newdesign/assets/images/beta/arrow.svg" alt=""></a>\
						<!--<a class="track_newdesign" href="javascript:;" onclick="go_bkp_old_newdesign();">RETURN TO THE CURRENT DESIGN <img src="https://static.bangkokpost.com/newdesign/assets/images/beta/arrow.svg" alt=""></a>--\>\
					</div>\
				</div>\
			</div>\
		</div>\
	');
	// https://docs.google.com/forms/d/e/1FAIpQLSf7I92Q7BGfYI652QyxSQ2ofoop7HEPDQqYn9WNLzZqypx6Kg/viewform?usp=sf_link

	$(window).scroll(function() {
		if ($(window).scrollTop() > 200) {
			$('#beta-banner').fadeIn();
		} else {
			$('#beta-banner').fadeOut();
		}
	});
	$('#beta-close').click(function() {
		$('#beta-banner').fadeOut();
	});

} 

