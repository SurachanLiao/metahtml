$(".owl-campaignboi.owl-carousel .owl-stage").addClass("pos-right");
}else if (current === carousel.minimum()){
	$(".owl-campaignboi.owl-carousel .owl-stage").removeClass("pos-right");
}
if ($('.owl-campaignboi .item').length <= 1) {
