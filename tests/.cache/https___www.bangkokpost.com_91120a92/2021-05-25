									$('.visible-md .box-recent li').last().remove();

									// แสดงกล่องเล็ก
									$('.visible-xs .box-recent li').eq(4).before('<li><div class="time"><span>SPONSORED</span></div><a href="'+click_url+'">'+headline+'</a></li>');
									$('.visible-xs .box-recent li').last().remove();
								break;
							case 'recommended' :

								$('.home-recommend div.item').eq(2).html('<div class="item"><div class="list-v"><figure class="item-photo"><a href="'+click_url+'"><img src="'+src+'" alt=""></a></figure><div class="list-detail-mt"><h3><a href="'+click_url+'">'+headline+'</a> <div class="h-ic"><span><i class="ic-sponsored2"></i></span></div></h3></div></div></div><img src="'+view_url+'" width="0" height="0"/>');

								break;
							case 'video' :

								$('.box-bg.bg-darken div.row div.col-md-5').eq(2).before('<div class="col-md-5"><div class="list-v list-vdo"><a href="'+click_url+'"><figure><div class="icn-play"><img src="https://static.bangkokpost.com/newdesign/assets/images/hover-video.svg" alt=""></div><img src="'+src+'" alt=""></figure><div class="list-detail-mt"><h3>'+headline+' <div class="h-ic"><span><i class="ic-sponsored2"></i></span></div></h3></div></a></div><img src="'+view_url+'" width="0" height="0"/></div>');
