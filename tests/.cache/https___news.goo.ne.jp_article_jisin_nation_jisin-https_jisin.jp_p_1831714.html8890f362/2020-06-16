    _re_sports = new RegExp("/sports/");
    if (location.href.match(/news.goo.ne.jp\/$/ || /news.goo.ne.jp$/) && _goo_display_type == 'pc') {
        $('<li><a href="https://live.sports.goo.ne.jp/baseball/npb/"><p style="font-size:107%;line-height: 1.3;">[速報]巨人vsロッテ プロ野球練習試合</p></a></li>').appendTo("#topiarea_title");
    } else if (location.href.match(/news.goo.ne.jp\/$/ || /news.goo.ne.jp$/) && _goo_display_type == 'sp') {
        $('<li><a href="https://live.sports.goo.ne.jp/baseball/npb/"><p style="font-size:114%;line-height: 1.5;">[速報]巨人vsロッテ プロ野球練習試合</p></a></li>').appendTo("#topiarea_title");
    } else if (_re_sports.test(sports) && _goo_display_type == 'pc') {
        $('<li><a href="https://live.sports.goo.ne.jp/baseball/npb/"><p style="font-size:107%;line-height: 1.3;">[速報]巨人vsロッテ プロ野球練習試合</p></a></li>').appendTo("#topiarea_title");
    } else if (_re_sports.test(sports) && _goo_display_type == 'sp') {
        $('<li><a href="https://live.sports.goo.ne.jp/baseball/npb/"><p style="font-size:114%;line-height: 1.5;">[速報]巨人vsロッテ プロ野球練習試合</p></a></li>').appendTo("#topiarea_title");
    }
//コラム誘導 end
</script>

<script>
