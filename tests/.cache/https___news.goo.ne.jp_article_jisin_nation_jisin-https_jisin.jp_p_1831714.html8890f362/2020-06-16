<script type="text/javascript">
//フッタの広告を削除する為に利用するフラグ
window._app_modal_flg = true;
$(function() {
    var u=navigator.userAgent;
    if(_goo_display_type == 'sp'){
        $(function(){
          var dialogue = $('#overlay_app_dl');

          $(window).scroll(function () {
            if ($(this).scrollTop() > 100) {
                dialogue.fadeIn();
            } else {
                dialogue.fadeOut();
            }
          });
          $('#dialogue_close').click(function(){
            $('#overlay_app_dl').fadeOut();
            $(window).off('scroll');
            set_modal_cookie();
          });

          //外側半透明グレー領域クリック時モーダル非表示 NEWS-839
          $(document).click(function(event) {
            if(!$(event.target).closest('.dialogue_body').length) {
              $('#overlay_app_dl').fadeOut();
              $(window).off('scroll');
              set_modal_cookie();
            }
          });

          function set_modal_cookie () {
              var l = 8;
              var c = "abcdefghijklmnopqrstuvwxyz0123456789";
              var cl = c.length;
              var r = "";
              for(var i=0; i<l; i++){
                  r += c[Math.floor(Math.random()*cl)];
              }

              document.cookie = 'modal_out_chk=' + r + '; path=/; max-age=' + 60 * 60 * 24;
          }
        })
    }
});
</script>

