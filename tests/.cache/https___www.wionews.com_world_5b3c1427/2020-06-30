  <script type="text/javascript">
$(document).ready(function(){
        if($(window).width() <= 767) {


        $(".bannertophead-ab").show();
        $(".fa-closeab").click(function(){
                $(".bannertophead-ab").slideUp();
                sessionStorage.setItem('getapp', '1');
                $(".burger-menu-set").css("top", "30px");
                $(".burger-menu").css("top", "90px");
                $(".main_header").removeClass("smallerhead");
                $(".universal-data").removeClass("universal-data2");
                $(".main_header").addClass("main_header2");
        })
        if(sessionStorage.getItem('getapp')== '1'){
                $(".bannertophead-ab").hide();
                $(".burger-menu-set").css("top", "30px");
                $(".burger-menu").css("top", "90px");
                $(".layout-container").css("padding-top", "70px");
                $(".main_header").removeClass("smallerhead");
                $(".universal-data").removeClass("universal-data2");

        }else{
                $(".bannertophead-ab").show();
                $(".burger-menu-set").css("top", "70px");
                $(".burger-menu").css("top", "130px");
                $(".main_header").addClass("smallerhead");
                $(".universal-data").addClass("universal-data2");
        }
    }else {
      $(".bannertophead-ab").hide();
    }
});

      $('#wtabs-nav li:first-child').addClass('wactive');
      $('.wtab-content:first').show();
      // Click function
      $('#wtabs-nav li').click(function(){
      $('#wtabs-nav li').removeClass('wactive');
      $(this).addClass('wactive');
      $('.wtab-content').hide();

      var activeTab = $(this).find('a').attr('href');
      $(activeTab).fadeIn();
      return false;
      });
  </script>
