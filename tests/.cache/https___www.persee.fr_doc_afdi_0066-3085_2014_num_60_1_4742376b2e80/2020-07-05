t("responseData");c.setHTML(d);setupTocToggles(a,c);setupTocOverflow(a,c);setupIllustrationToggle(a,c);setupIllustrationTitleExpand(a,c)},failure:function(){c.setHTML("erreur")}}})}function setupTocToggles(a,b){b.all("li").each(function(c){var d=c.one(".toc-item-content");if(d!=null){new a.Toggler({header:c.one(".toc-item-header"),content:d,expanded:false,animated:false})}})}var TOC_MAX_SIZE=5;function setupTocOverflow(a,f){var e=f.one(".toc-depth-0");if(e!=null){var b=e.all("> li");if(b.size()>TOC_MAX_SIZE){for(var d=TOC_MAX_SIZE;d<b.size();d++){b.item(d).hide()}var c=f.one(".show-more");c.on("click",function(){for(var g=TOC_MAX_SIZE;g<b.size();g++){b.item(g).show()}c.hide()});c.show()}}}function setupIllustrationToggle(a,c){var b=c.one(".illustration-table-controls .show-illustrations");var e=c.one(".illustration-table-controls .hide-illustrations");if(b!=null){b.hide();var d=function(){b.toggle();e.toggle();c.all(".illustration-table .illustration .image").toggle()};b.on("click",d);e.on("click",d)}}function setupIllustrationTitleExpand(a,b){b.all(".illustration-title:not(.expanded):not(.expandable)").each(function(c){if(c.get("clientWidth")<c.get("scrollWidth")){c.addClass("expandable");c.once("click",function(d){d.preventDefault();c.addClass("expanded");c.removeClass("expandable")})}else{c.addClass("expanded")}})};</script> </div> </div> </div> </div> </div> </div> <div class="portlet-column portlet-column-last column-main span" id="column-2"> <div class="portlet-dropzone portlet-column-content portlet-column-content-last" id="layout-column_column-2"> <div class="portlet-boundary portlet-boundary_documentdisplaytltg_WAR_perseesearchportlet_ portlet-static portlet-static-end portlet-borderless " id="p_p_id_documentdisplaytltg_WAR_perseesearchportlet_" > <span id="p_documentdisplaytltg_WAR_perseesearchportlet"></span> <div class="portlet-borderless-container" style=""> <div class="portlet-body"> <div id="document-display" itemscope itemtype="https://schema.org/Sch