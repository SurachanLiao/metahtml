		gptAdSlots[14] = googletag.defineSlot('/4973089/JT-Education-banner', [270, 40], 'div-gpt-ad-1545377501993-0').addService(googletag.pubads());
		gptAdSlots[15] = googletag.defineSlot('/4973089/JT-NationalDay-banner', [270, 40], 'div-gpt-ad-1545377579422-0').addService(googletag.pubads());
		gptAdSlots[16] = googletag.defineSlot('/4973089/JTO_text1(TOP)', [1, 1], 'div-gpt-ad-1362125114269-8').addService(googletag.pubads());
		gptAdSlots[17] = googletag.defineSlot('/4973089/JT-teads', ['fluid', [1, 1]], 'div-gpt-ad-1549956656402-0').addService(googletag.pubads());
		gptAdSlots[18] = googletag.defineSlot('/4973089/SpecialSupplements1', [300, 250], 'div-gpt-ad-1569819871517-0').addService(googletag.pubads());
		gptAdSlots[19] = googletag.defineSlot('/4973089/SpecialSupplements2', [300, 250], 'div-gpt-ad-1569820069027-0').addService(googletag.pubads());

		headerBiddingSlots.push(gptAdSlots[0]);
		nonHeaderBiddingSlots.push(gptAdSlots[1]);
		headerBiddingSlots.push(gptAdSlots[2]);
		nonHeaderBiddingSlots.push(gptAdSlots[3]);
		headerBiddingSlots.push(gptAdSlots[4]);
		nonHeaderBiddingSlots.push(gptAdSlots[5]);
		nonHeaderBiddingSlots.push(gptAdSlots[6]);
		nonHeaderBiddingSlots.push(gptAdSlots[7]);
		nonHeaderBiddingSlots.push(gptAdSlots[8]);
		nonHeaderBiddingSlots.push(gptAdSlots[9]);
		nonHeaderBiddingSlots.push(gptAdSlots[10]);
		nonHeaderBiddingSlots.push(gptAdSlots[11]);
		nonHeaderBiddingSlots.push(gptAdSlots[12]);
		nonHeaderBiddingSlots.push(gptAdSlots[13]);
		nonHeaderBiddingSlots.push(gptAdSlots[14]);
		nonHeaderBiddingSlots.push(gptAdSlots[15]);
		nonHeaderBiddingSlots.push(gptAdSlots[16]);
		nonHeaderBiddingSlots.push(gptAdSlots[17]);
		headerBiddingSlots.push(gptAdSlots[18]);
		headerBiddingSlots.push(gptAdSlots[19]);

		$.getScript( 'https://www.japantimes.co.jp/googletag_pushads.php?is_archive=1&archive_post_type=News&subscriber_status' )
		googletag.pubads().disableInitialLoad();
		googletag.pubads().enableSingleRequest();
		googletag.pubads().collapseEmptyDivs();
		googletag.enableServices();

		if (nonHeaderBiddingSlots.length > 0) {
			googletag.pubads().refresh(nonHeaderBiddingSlots);
		}

		pbjs.rp.requestBids({
			callback: sendAdServerRequest,
			gptSlotObjects: headerBiddingSlots
		});
	});
</script>
<script>
	pbjs.adserverRequestSent = false;
	var sendAdServerRequest = function(headerBiddingSlots) {
		googletag.cmd.push(function() {
			if (pbjs.adserverRequestSent) {
				return;
			}
			pbjs.adserverRequestSent = true;
			googletag.pubads().refresh(headerBiddingSlots);
		});
	};
	setTimeout(function() {
		sendAdServerRequest(headerBiddingSlots);
	}, failSafeTimeout);
</script>
<script>
	pbjs.adserverRequestSent = false;
