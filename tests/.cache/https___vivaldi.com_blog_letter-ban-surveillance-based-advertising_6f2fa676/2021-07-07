<script>
function thankyou(os) {
	_paq.push(['trackContentImpression', 'Download Thank You', 'Thank You page', document.location]);
	if (jQuery('#thankyou-dialog .thanks-header').length == 0) {
		jQuery("#thankyou-dialog").load("/download/thanks/ #thankyou-desktop", function(){
			jQuery('#infoicon-thanks').click(function(){
				jQuery('#infomsg-thanks').removeAttr('hidden');
				jQuery('#infoicon-thanks').addClass('fadeOut');
				return false;
			});
			jQuery('#closediv').click(function(e){
				e.preventDefault();
				jQuery("body").removeClass("dl-thanks");
				jQuery("#thankyou-dialog").removeClass("fadeIn");
				jQuery("#thankyou-dialog").addClass("fadeOut");
			});
			jQuery('#signupform button[type="submit"]').click(function(e){newsletterSignup(e);});
		});
	}

	jQuery("body").addClass("dl-thanks");
	jQuery("#thankyou-dialog").removeClass("fadeOut");
	jQuery("#thankyou-dialog").addClass("fadeIn");
}
function thankyou_apk() {
	_paq.push(['trackContentImpression', 'Download Thank You - Android apk', 'Thank You page', document.location]);
	if (jQuery('#thankyou-dialog .thanks-header').length == 0) {
		jQuery("#thankyou-dialog").load("/download/thanks/ #thankyou-mobile", function() {
			jQuery('#infoicon-thanks').click(function(){
				jQuery('#infomsg-thanks').removeAttr('hidden');
