ntentCmsTerms.includes("f-35") ||segment.contentCmsTerms.includes("b61") ||segment.contentCmsTerms.includes("b-1b") ||segment.contentCmsTerms.includes("f-15") ||segment.contentCmsTerms.includes("f-15e") ||segment.contentCmsTerms.includes("mig-29") ||segment.contentCmsTerms.includes("mig 29") ||segment.contentCmsTerms.includes("cessna") ||segment.contentCmsTerms.includes("usaf") ||segment.contentCmsTerms.includes("airplanes") ||segment.contentCmsTerms.includes("bombers")) {contentKeyword = "airplane";}}slot.setTargeting("content_keyword", contentKeyword);if (isFirst) {slot.setTargeting("refresh", "false");} else {slot.setTargeting("refresh", "true");}if ( slot.getAdUnitPath() === "/21817035599/Desktop_Tablet_Sticky_Footer"|| slot.getAdUnitPath() === '/21817035599/Mobile_Sticky_Footer') {refreshingFooter = slot.getAdUnitPath();}});googletag.pubads().refresh(slots);if (refreshingFooter) {setTimeout(function() { refreshAd(refreshingFooter, feAdSlotsConfig[refreshingFooter].divId); },AD_REFRESH_TIME_SECONDS * 1000);}});}function refreshAd(adSlotId, divId) {if ( noRefreshAdUnits && noRefreshAdUnits.includes(divId) ) {console.log("Skipping refresh on ad unit with Direct campaign");return;}console.log("Refreshing a single ad: " + adSlotId + ", " + divId);if ( adSlotId.match("Desktop_Tablet_Sticky_Footer") && document.visibilityState && document.visibilityState !== 'visible' ) {console.log("Delaying sticky footer refresh until visible again");setTimeout(function() { refreshAd(adSlotId, divId); }, 5000);} else {pbjs.que.push(function () {var unitsAndDivs = buildBidConfigForDiv(adSlotId, divId);if (ENABLE_AMAZON) {apstag.fetchBids({slots: [{slotID: divId, sizes: feAdSlotsConfig[adSlotId].sizes, slotName: adSlotId}],timeout: PREBID_TIMEOUT});}pbjs.requestBids({adUnits: unitsAndDivs['adunits'],bidsBackHandler: function () {prebidCallback(unitsAndDivs['slots']);},timeout: PREBID_TIMEOUT});});}}</script></head><link rel="stylesheet" type="text/css" href="//maxcdn.bootstrapcdn.com/