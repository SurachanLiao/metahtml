<script type="text/javascript">
    $(document).ready(function () {

        //    document.getElementById("postButton").disabled = true;
        $('#loadAllComments').click(function () {
            $.get("/admin/comments/RenderComments", { referenceID: "860535", referenceType: "2", page: 0, authorID: 0, loadAll: true, disableDeleting : "False" },
          function(data){
              $('#comments').html('');
              $('#comments').html(data)
              $('.comment-expand-wrap, #commentsBox > a').toggle();
          });
        });
    });
</script>

<script>

    function enableBtn(){
        $("#captcha").hide();
        $('#postButton').prop('disabled', this.value == "" ? true : false);
    };

    $("#PostCommentForm").submit(function(event)
    {
        var recaptcha = $("#g-recaptcha-response").val();
        if (recaptcha === "") {
            event.preventDefault();
            $("#captcha").show();
        }
    });
</script>
