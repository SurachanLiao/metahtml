    <div class="blz-subscriptions-banner blz-subscription-banner__no-slider">
      <div class="container">
        <h6><a class="pink-banner" href="https://aboshop.berliner-zeitung.de" target="_blank">Wir sind unabhängig und wollen es bleiben. Unterstützen Sie uns dabei?</a></h6>
      </div>
    </div>
</div>

<script>
  (function() {
    function getCookie(name) {
      var dc = document.cookie;
      var prefix = name + "=";
      var begin = dc.indexOf("; " + prefix);
      if (begin == -1) {
        begin = dc.indexOf(prefix);
        if (begin != 0) {
          return null;
        }
      } else {
        begin += 2;
        var end = document
          .cookie
          .indexOf(";", begin);
        if (end == -1) {
          end = dc.length;
        }
      }
      return decodeURI(dc.substring(begin + prefix.length, end));
    }

    function findDomain() {
      const domainArray = window
        .location
        .host
        .split('.')
      domainArray.shift()
      return domainArray.join('.')
    }

    const redirectDomain = (register) => {
      const domain = findDomain() || "berliner-zeitung.dev"
      const currentPage = window.location.href.split('?')[0]
      return `https://account.${domain}${register ? '/auth/register?rid=' + currentPage : ''}`
    };

    const loginLinkContainer = Array.from(document.getElementsByClassName("js-loginLink"));
    const loginTextContainer = Array.from(document.getElementsByClassName("js-loginText"));
    const aboshopBanner = document.getElementById('aboshop-banner');
    const aboshopBannerSmall = document.getElementById('aboshop-banner--sm');
    const separatorContainer = document.getElementById("separator-container");

    const sessionCheck = () => {
      const request = new XMLHttpRequest();
      const mppSessionId = getCookie("MPP-SessionId");

      if (mppSessionId) {
        setLoggedInLinks()
        const endPoint = `/session?id=${mppSessionId}`

        request.onreadystatechange = function() {
          if (this.readyState === 4) {
            if (this.status === 200) {
              setLoggedInLinks()
            } else {
              setNotLoggedInLinks()
            }
          }
        };
        request.open("GET", endPoint, true);
        request.send();
      } else {
        setNotLoggedInLinks()
      }
    }

    const setNotLoggedInLinks = () => {
      if(document.getElementsByClassName("main-header").length > 0) {
        const mainHeader = document.getElementsByClassName("main-header")[0]
        mainHeader.classList.remove("logged-in");

        aboshopBanner && (aboshopBanner.style.display = 'none')
        aboshopBannerSmall && (aboshopBannerSmall.style.display = 'none')
        separatorContainer && (separatorContainer.style.display = 'none')
      }

      if (loginLinkContainer) {
        loginLinkContainer.forEach(el => {
          el.innerHTML = `<a href="${redirectDomain(true)}" class="m-meta-navigation__link">Anmelden</a>`
        })
      }

      if (loginTextContainer) {
        loginTextContainer.forEach(el => {
          el.innerHTML = `<div class="js-loginButton">Anmelden</div>`
        })
      }
    }

    const setLoggedInLinks = () => {
      if(document.getElementsByClassName("main-header").length > 0) {
        const mainHeader = document.getElementsByClassName("main-header")[0]
        mainHeader.classList.add("logged-in");

        aboshopBanner && (aboshopBanner.style.display = 'none')
        aboshopBannerSmall && (aboshopBannerSmall.style.display = 'none')
        separatorContainer && (separatorContainer.style.display = 'none')
      }

      if (loginLinkContainer) {
        loginLinkContainer.forEach(el => {
          el.innerHTML = `<a href="${redirectDomain(false)}">Konto</a>`
        })
      }

      if (loginTextContainer) {
        loginTextContainer.forEach(el => {
          el.innerHTML = `<div class="js-logoutButton">Abmelden</div>`
        })
      }
    }

    sessionCheck();
  })()
</script>
    
  
    <div class="page container container--page container-no-slider">
    <div class="traffective-ad-Billboard"></div>
    <div class="ad-top-desktop">          <script>
    if (!window.doubleClickBody) window.doubleClickBody = {}
    function appendAdUnit() {
      window.unitObj = {"id":"ad-top-desktop","type":["article","page"],"target":"desktop","path":"/21876035911/disp_berliner-zeitung.de/Mensch_und_Metropole","divId":"div-gpt-ad-leaderboard-0","size":[[728,90],[970,250],[970,90]]}
      window.adClass = 'm-ad-unit--top'
      if (document.getElementsByClassName(window.unitObj.id)[0]){
        document.getElementById(window.unitObj.divId) && document.getElementById(window.unitObj.divId).remove()
        var e = document.createElement('div');
        e.id = window.unitObj.divId
        window.adClass && e.classList.add(window.adClass)
        let classList
        e.classList.add("m-ad-unit")
        classList && e.classList.add(classList)

        const script = document.createElement('script')
        script.innerHTML = `googletag.cmd.push(function() { googletag.display('${window.unitObj.divId}') });`

        e.appendChild(script)

        document.getElementsByClassName(window.unitObj.id)[0].appendChild(e)
      }
    }
    window.doubleClickBody['ad-top-desktop'] = appendAdUnit
    window.unitObj = undefined
    window.adClass = ''
  </script>

</div>
    <div class="ad-top-mobile">          <script>
    if (!window.doubleClickBody) window.doubleClickBody = {}
    function appendAdUnit() {
      window.unitObj = {"id":"ad-top-mobile","type":["article","page"],"target":"mobile","path":"/21876035911/mew_berliner-zeitung.de/Mensch_und_Metropole","divId":"div-gpt-ad-mpu","size":[[300,250]]}
      window.adClass = 'm-ad-unit--top-mobile'
      if (document.getElementsByClassName(window.unitObj.id)[0]){
        document.getElementById(window.unitObj.divId) && document.getElementById(window.unitObj.divId).remove()
        var e = document.createElement('div');
        e.id = window.unitObj.divId
        window.adClass && e.classList.add(window.adClass)
        let classList
          classList = 'm-ad-unit--mobile'
        e.classList.add("m-ad-unit")
        classList && e.classList.add(classList)

        const script = document.createElement('script')
        script.innerHTML = `googletag.cmd.push(function() { googletag.display('${window.unitObj.divId}') });`

        e.appendChild(script)

        document.getElementsByClassName(window.unitObj.id)[0].appendChild(e)
      }
    }
    window.doubleClickBody['ad-top-mobile'] = appendAdUnit
    window.unitObj = undefined
    window.adClass = ''
  </script>

