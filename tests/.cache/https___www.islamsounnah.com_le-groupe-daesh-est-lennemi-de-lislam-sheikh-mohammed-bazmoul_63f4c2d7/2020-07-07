<script>
var $ = jQuery;
jQuery(function($) {
    $("form.searchform").submit(function(){
        var searchvideos = $('#searchvideos').is(':checked');
        var searcharticles = $('#searcharticles').is(':checked');
        var cats = searchvideos ? "videos-islamique" : "";
        if (searcharticles)
            cats += (searcharticles && searchvideos) ? ",articles-islamique" : "articles-islamique";
        if (searchvideos || searcharticles) {
            $('<input />').attr('type', 'hidden')
                .attr('name', "category_name")
                .attr('value', cats)
                .appendTo(this);
            return true;
        }
        return false;
    });
    $( ".search-text" ).autocomplete({
        minLength: 0,
        source: function( request, response ) {
            $.ajax({
                url: 'https://www.islamsounnah.com/wp-admin//admin-ajax.php?t='+new Date().getTime(),
                dataType: "json",
                data: {
                    action:'dsac_search_video',
                    title: request.term,
                    searchvideos: $('#searchvideos').is(':checked'),
                    searcharticles: $('#searcharticles').is(':checked')
                },
                success: function( data ) {
                    if (!Array.isArray(data)){
                        console.log(data);
                        return ([]);
                    }
                    response( $.map( data, function( item ) {
                        return {
                            label: item.desc,
                            value: item.desc,
                            desc: item.desc,
                            link:item.link,
                            icon:item.icon
                        }
                    }));
                }
            });
        },
        select: function( event, ui ) {
        document.location=   ui.item.link;
        //$( ".search-text" ).val( ui.item.desc);
        //$( ".searchform" ).submit();
        //return false;
        }
    })
    .autocomplete( "instance" )._renderItem = function( ul, item ) {
        if (item.icon === "")
            item.icon = "<img width=\"70\" height=\"39\" class=\"attachment-70x70 size-70x70 wp-post-image\""
            + " src=\"/wp-content/themes/detube/images/nothumb.png\" alt=\"" + item.desc + "\" />";
        return $( "<li>" )
            .append( "<a href='" + item.link +  "'><div style='float:left' class='elem_search'>" + item.icon +  "</div><div  style='width:100px;max-height: 40px;width:60%;float:left;overflow: hidden;; padding-left:25px;font-size:12px'>" + item.desc +  "</div><div class='elem_search' style='float:end'>&nbsp;</div></a>" )
            .appendTo( ul );
    };
});
</script>	</div><!-- end #header-search -->
		
