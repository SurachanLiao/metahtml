<script>
 $(document).ready(function(){
    var layer;
    layer = "<div id='layerCookies' class='hide'>";
    layer += "<p class='clearfix'>";
    layer += "<em>En poursuivant votre navigation sans modifier vos param&egrave;tres de cookies, vous acceptez l'utilisation des cookies. Pour g&eacute;rer et modifier ces param&egrave;tres, </em>";
    layer += "<a href='/Informations/A-propos-du-site#ancre1_4_1'>cliquez ici</a>";
    layer += "<span class='close' title='Fermer le bandeau'>Fermer</span>";
    layer += "</p>";
    layer += "</div>";

    $('#header').prepend(layer);
    if ($.cookie('legifranceCnilCookie') !== 'cnil') {
        $("#layerCookies").removeClass("hide");
        $("#layerCookies .close").click(function (e) {
            e.preventDefault();
            $('#layerCookies').animate(
                { top: '-40px' },
                {
                    duration: 300,
                    complete: function () {
                        $('#layerCookies').remove();
                    }
                }
            );
            $.cookie('legifranceCnilCookie', 'cnil', { expires: 3650, path: '/', domain: document.domain }); // creation cookie
        });
    } else {
        $('#layerCookies').remove();
    }
});
</script>

<script>
    function afficheActualite() {
        var xhttp = new XMLHttpRequest();
        xhttp.onreadystatechange = function() {
            if (this.readyState == 4 && this.status == 200) {
                document.getElementById("actualite").outerHTML = this.responseText;
            } else {
                document.getElementById("actualite").innerHTML = '<p>Les actualités Legifrance sont momentanément non disponibles</p>';
            }
        };
        xhttp.open("GET", "/actualiteslegifrance", true);
        xhttp.send();
    }
</script>
	  	
