                    var bid = pbjs.getHighestCpmBids("sas_50244")[0];
                    if (bid) {
                        bid.currency = bid.currency || "USD";
                        sas.setHeaderBiddingWinner("sas_50244", bid);
                        sas.render();
                    }
                }

                bid = pbjs.getHighestCpmBids("sas_50322")[0];
                if (bid) {
                    bid.currency = bid.currency || "USD";
                    sas.setHeaderBiddingWinner("sas_50322", bid);
                    sas.render();
                }

                bid = pbjs.getHighestCpmBids("sas_50382")[0];
                if (bid) {
                    bid.currency = bid.currency || "USD";
                    sas.setHeaderBiddingWinner("sas_50382", bid);
                    sas.render();
                }

                bid = pbjs.getHighestCpmBids("sas_52019")[0];
