            const maxScrollDepth = ((Didomi.getConfig()||{}).custom||{}).scrollDepth;
            if(!maxScrollDepth)
                return;
            const startPositionScroll = window.scrollY;
            var ticking = false;
            window.addEventListener('scroll', function cmpDidomiScrollListener(e) {
                if (!ticking) {
                    window.requestAnimationFrame(function cmpDidomiCheckScrollDepth() {
                        if(!Didomi.notice.isVisible()){
                            window.removeEventListener('scroll', cmpDidomiScrollListener);
                            return;
                        }
                        var lastPositionScroll = window.scrollY;
                        if (Math.abs(startPositionScroll - lastPositionScroll) >= maxScrollDepth) {
                            Didomi.setUserAgreeToAll();
                            window.removeEventListener('scroll', cmpDidomiScrollListener);
                        }
                        ticking = false;
                    });
                    ticking = true;
                }
