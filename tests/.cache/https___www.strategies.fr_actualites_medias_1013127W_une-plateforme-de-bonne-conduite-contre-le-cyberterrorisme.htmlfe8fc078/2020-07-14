        var i;
        for (i = 0; i < ajaxLinks.length; i++) {
          ajaxLinks[i].removeEventListener('click', xtR, false);
        }
        var stopLinks = document.getElementsByClassName('stop-xiti');
        var c;
        for (c = 0; c < stopLinks.length; c++) {
          stopLinks[c].removeEventListener('click', xtR, false);
        }
      })(jQuery);
    </script>
