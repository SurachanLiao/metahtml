<script>
// document.ready
$(function(){
	// les touches droite et gauche permettent de feuilleter au clavier
	// attention si la fenetre est trop petite, les fleches naviguent
	// dans la fenetre (cf mail de notabene)
	$("a.avant, .avant a").attr('title', 'au clavier :\u2190');
	$("a.apres, .apres a").attr('title', 'au clavier :\u2192');
	$.nextpage = function() { var l = $("a.apres, .apres a").attr('href'); if (l != undefined ) document.location = l; }
	$.prevpage = function() { var l = $("a.avant, .avant a").attr('href'); if (l != undefined ) document.location = l; }
	$(document).keyup(function(e) {
		if (!e.altKey && !e.ctrlKey && !e.metaKey && !e.shiftKey && e.target.localName.match(/html|body/) && ($(window).width() >= $(document).width())) {
			if (e.keyCode == 37) $.prevpage();
			if (e.keyCode == 39) $.nextpage();
		}
	});
});
