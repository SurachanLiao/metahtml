    <nav role="navigation" aria-labelledby="block-fundingmenu-menu" id="block-fundingmenu" class="block block-menu navigation menu--funding-menu">
    
    <h2 id="block-fundingmenu-menu" class="menu--funding-menu__title visually-hidden"

  >Funding Menu</h2>
  
        <div class ="menu--funding-menu__content">
      
              <ul region="mobile_menu" class="menu">
                    <li class="menu-item">
        <a href="https://nsf.gov/funding">Overview</a>
              </li>
                <li class="menu-item menu-item--expanded">
        <span>Fund Your Research</span>
                                <ul class="menu">
                    <li class="menu-item">
        <a href="https://nsf.gov/funding/index.jsp">Search for Funding</a>
