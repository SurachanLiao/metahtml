    function sfsi_processfurther(ref) {

        var feed_id = 'YUlhVUtLWk91SjBUZlY2aXBZblJMKzFNNEtyaWs1czZxSkE1dlpGTXQwWmNPYkVESzhEcjd3UXVob2w5Zy92bjdFOURTYUdKaW9xYmdZa2ZmYU5oN1J2MFFZWnM3d0Rld2M1TCtoWHBhaG52V3F1RVVadjBGd2hxeVR5QmtpY018NXZnTHZzcWRRQVZ0QlB5eE5kazhBUnNlTmgvS1ArejdoaXY0eEVDK3ZoVT0=';
